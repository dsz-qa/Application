<Window x:Class="Finly.Views.Dialogs.TransferBudgetDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Przenieś środki między budżetami"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        Background="#202020"
        Foreground="White"
        Padding="16">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Z budżetu -->
        <StackPanel Grid.Row="0" Margin="0,0,0,8">
            <TextBlock Text="Z budżetu:" Margin="0,0,0,4"/>
            <ComboBox x:Name="FromBudgetCombo"
                      Width="280"
                      DisplayMemberPath="Name"/>
        </StackPanel>

        <!-- Do budżetu -->
        <StackPanel Grid.Row="1" Margin="0,0,0,8">
            <TextBlock Text="Do budżetu:" Margin="0,0,0,4"/>
            <ComboBox x:Name="ToBudgetCombo"
                      Width="280"
                      DisplayMemberPath="Name"/>
        </StackPanel>

        <!-- Kwota -->
        <StackPanel Grid.Row="2" Margin="0,0,0,12">
            <TextBlock Text="Kwota:" Margin="0,0,0,4"/>
            <TextBox x:Name="AmountBox" Width="120"/>
        </StackPanel>

        <!-- Przyciski -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Anuluj"
                    Width="80"
                    Margin="0,0,8,0"
                    IsCancel="True"/>
            <Button Content="OK"
                    Width="80"
                    IsDefault="True"
                    Click="Ok_Click"/>
        </StackPanel>
    </Grid>
</Window>
