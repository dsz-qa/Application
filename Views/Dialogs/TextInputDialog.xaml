<Window x:Class="Finly.Views.Dialogs.TextInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True">
    <Border CornerRadius="12"
            Background="#1F1F1F"
            BorderBrush="#3A3A3A"
            BorderThickness="1"
            Padding="18">
        <StackPanel>
            <TextBlock x:Name="HeaderText"
                       Foreground="White"
                       FontSize="14"
                       Margin="0,0,0,8"
                       TextWrapping="Wrap"/>

            <TextBox x:Name="InputBox"
                     MinWidth="320"
                     Margin="0,0,0,12"
                     Foreground="White"
                     Background="#2A2A2A"
                     BorderBrush="#555555"
                     BorderThickness="1"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="Anuluj"
                        Width="90"
                        Margin="0,0,8,0"
                        Click="Cancel_Click"/>
                <Button Content="OK"
                        Width="90"
                        IsDefault="True"
                        Click="Ok_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
