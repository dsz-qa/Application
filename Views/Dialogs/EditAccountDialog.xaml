<Window x:Class="Finly.Views.Dialogs.EditAccountDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Konto bankowe"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Width="420"
        MinWidth="420"
        MinHeight="360"
        SizeToContent="Height"
        Background="{DynamicResource App.Background}"
        Foreground="{DynamicResource App.Foreground}"
        Icon="/Assets/Icons/logoFinly.ico">

    <Border Margin="12"
            Padding="20"
            Background="{DynamicResource Surface.Background}"
            BorderBrush="{DynamicResource Surface.Border}"
            BorderThickness="1"
            CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Nagłówek -->
            <TextBlock Grid.Row="0"
                       Text="Edytuj konto bankowe"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,16"/>

            <!-- Wybór banku -->
            <StackPanel Grid.Row="1" Margin="0,0,0,10">
                <TextBlock Text="Bank" FontWeight="SemiBold"/>

                <!-- COMBO Z LOGOTYPAMI -->
                <ComboBox x:Name="BankCombo"
                          Margin="0,4,0,0"
                          MinWidth="280">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{Binding LogoPath}"
                                       Width="20"
                                       Height="20"
                                       Margin="0,0,6,0"/>
                                <TextBlock Text="{Binding Name}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>

            <!-- Nazwa rachunku -->
            <StackPanel Grid.Row="2" Margin="0,0,0,10">
                <TextBlock Text="Nazwa rachunku" FontWeight="SemiBold"/>
                <TextBox x:Name="AccountNameBox"
                         Margin="0,4,0,0"
                         Width="280"
                         Height="26"
                         VerticalContentAlignment="Center"/>
            </StackPanel>

            <!-- IBAN -->
            <StackPanel Grid.Row="3" Margin="0,0,0,10">
                <TextBlock Text="IBAN (opcjonalnie)" FontWeight="SemiBold"/>
                <TextBox x:Name="IbanBox"
                         Margin="0,4,0,0"
                         Width="280"
                         Height="26"
                         VerticalContentAlignment="Center"/>
            </StackPanel>

            <!-- Saldo -->
            <StackPanel Grid.Row="4" Margin="0,0,0,10">
                <TextBlock Text="Saldo (PLN)" FontWeight="SemiBold"/>
                <TextBox x:Name="BalanceBox"
                         Margin="0,4,0,0"
                         Width="160"
                         Height="26"
                         HorizontalContentAlignment="Right"
                         VerticalContentAlignment="Center"/>
            </StackPanel>

            <!-- Przyciski -->
            <StackPanel Grid.Row="5"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,12,0,0">
                <Button Content="Anuluj"
                        Width="90"
                        Margin="0,0,8,0"
                        IsCancel="True"
                        Click="Cancel_Click"/>
                <Button Content="Zapisz"
                        Width="90"
                        IsDefault="True"
                        Click="Ok_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>



