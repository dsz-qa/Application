<Window x:Class="Finly.Views.Dialogs.EditAccountDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Konto bankowe" ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner" SizeToContent="WidthAndHeight"
        MinWidth="420">
	<Grid Margin="16">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="140"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<TextBlock Grid.Row="0" Grid.Column="0" Text="Nazwa konta:" VerticalAlignment="Center"/>
		<TextBox   x:Name="NameBox"   Grid.Row="0" Grid.Column="1" MinWidth="240"/>

		<TextBlock Grid.Row="1" Grid.Column="0" Text="IBAN:" VerticalAlignment="Center"/>
		<TextBox   x:Name="IbanBox"   Grid.Row="1" Grid.Column="1"/>

		<TextBlock Grid.Row="2" Grid.Column="0" Text="Waluta:" VerticalAlignment="Center"/>
		<ComboBox  x:Name="CurComboBox" Grid.Row="2" Grid.Column="1" MinWidth="120"/>

		<TextBlock Grid.Row="3" Grid.Column="0" Text="Saldo:" VerticalAlignment="Center"/>
		<TextBox   x:Name="BalanceBox" Grid.Row="3" Grid.Column="1"/>

		<StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal"
					HorizontalAlignment="Right" Margin="0,12,0,0">
			<Button Content="Anuluj" Margin="0,0,8,0" Click="Cancel_Click"/>
			<Button Content="Zapisz" Click="Save_Click"/>
		</StackPanel>
	</Grid>
</Window>
