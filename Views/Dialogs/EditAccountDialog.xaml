<Window x:Class="Finly.Views.Dialogs.EditAccountDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Konto bankowe"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Background="{DynamicResource App.Background}"
        Foreground="{DynamicResource App.Foreground}"
        Icon="/Assets/Icons/logoFinly.ico">

    <Border Margin="8"
            Padding="16"
            Background="{DynamicResource Surface.Background}"
            BorderBrush="{DynamicResource Surface.Border}"
            BorderThickness="1"
            CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Nagłówek -->
            <TextBlock Grid.Row="0"
                       Text="Edytuj konto bankowe"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,12"/>

            <!-- Wybór banku -->
            <StackPanel Grid.Row="1" Margin="0,0,0,8">
                <TextBlock Text="Bank" FontWeight="SemiBold"/>
                <ComboBox x:Name="BankCombo"
                          Margin="0,4,0,4"
                          MinWidth="260">
                    <ComboBoxItem Content="Revolut"/>
                    <ComboBoxItem Content="PKO Bank Polski"/>
                    <ComboBoxItem Content="mBank"/>
                    <ComboBoxItem Content="Bank Pekao"/>
                    <ComboBoxItem Content="ING Bank Śląski"/>
                    <ComboBoxItem Content="Santander Bank Polska"/>
                    <ComboBoxItem Content="Alior Bank"/>
                    <ComboBoxItem Content="Millennium"/>
                    <ComboBoxItem Content="Inny bank"/>
                </ComboBox>

                <!-- Gdy wybrano „Inny bank” – tu można wpisać własną nazwę -->
                <TextBox x:Name="BankNameBox"
                         Margin="0,0,0,0"
                         Height="26"
                         VerticalContentAlignment="Center"
                         Text=""
                         ToolTip="Jeśli wybrałaś Inny bank – wpisz tutaj nazwę."/>
            </StackPanel>

            <!-- Nazwa rachunku -->
            <StackPanel Grid.Row="2" Margin="0,0,0,8">
                <TextBlock Text="Nazwa rachunku" FontWeight="SemiBold"/>
                <TextBox x:Name="AccountNameBox"
                         Margin="0,4,0,0"
                         Width="260"
                         Height="26"
                         VerticalContentAlignment="Center"/>
            </StackPanel>

            <!-- IBAN -->
            <StackPanel Grid.Row="3" Margin="0,0,0,8">
                <TextBlock Text="IBAN (opcjonalnie)" FontWeight="SemiBold"/>
                <TextBox x:Name="IbanBox"
                         Margin="0,4,0,0"
                         Width="260"
                         Height="26"
                         VerticalContentAlignment="Center"/>
            </StackPanel>

            <!-- Saldo -->
            <StackPanel Grid.Row="4" Margin="0,0,0,8">
                <TextBlock Text="Saldo (PLN)" FontWeight="SemiBold"/>
                <TextBox x:Name="BalanceBox"
                         Margin="0,4,0,0"
                         Width="140"
                         Height="26"
                         HorizontalContentAlignment="Right"
                         VerticalContentAlignment="Center"/>
            </StackPanel>

            <!-- Przyciski -->
            <StackPanel Grid.Row="5"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,8,0,0">
                <Button Content="Anuluj"
                        Width="90"
                        Margin="0,0,8,0"
                        IsCancel="True"
                        Click="Cancel_Click"/>
                <Button Content="Zapisz"
                        Width="90"
                        IsDefault="True"
                        Click="Ok_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

