<UserControl x:Class="Finly.Views.Controls.ReportsPageControls.OverviewTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Finly.Views.Controls"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             Background="Transparent">

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.45*"/>
            <ColumnDefinition Width="2.55*"/>
        </Grid.ColumnDefinitions>

        <!-- LEWA KOLUMNA -->
        <Grid Grid.Column="0" Margin="0,0,12,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Wartość transakcji -->
            <Border Grid.Row="0" Style="{StaticResource Card}" Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock Text="Wartość transakcji (zł) (okres)"
                               Style="{StaticResource CardHeader}"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,0,0,8"/>
                    <lvc:CartesianChart Height="240"
                                        Style="{StaticResource BaseCartesianChart}"
                                        Series="{Binding OverviewAmountSeries}"
                                        XAxes="{Binding OverviewAmountAxesX}"
                                        YAxes="{Binding OverviewAmountAxesY}"/>
                </StackPanel>
            </Border>

            <!-- Top 3 wydatki (podium) -->
            <Border Grid.Row="1" Style="{StaticResource Card}" Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock Text="Top 3 wydatki"
                               Style="{StaticResource CardHeader}"
                               FontSize="15"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <Grid VerticalAlignment="Bottom">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="1.15*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Style="{StaticResource Card}" Padding="10" Margin="0,18,8,0" VerticalAlignment="Bottom">
                            <StackPanel>
                                <TextBlock Text="2" Style="{StaticResource PodiumRank}"/>
                                <TextBlock Text="{Binding TopExp2.Category, TargetNullValue=—, FallbackValue=—}" Style="{StaticResource PodiumCategory}"/>
                                <TextBlock Text="{Binding TopExp2.AmountStr, TargetNullValue=—, FallbackValue=—}" Style="{StaticResource PodiumAmount}"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1"
                                Style="{StaticResource Card}"
                                Padding="10"
                                Margin="0,0,8,0"
                                VerticalAlignment="Bottom"
                                BorderBrush="{DynamicResource Separator.Orange}"
                                BorderThickness="2">
                            <StackPanel>
                                <TextBlock Text="1" Style="{StaticResource PodiumRank}" FontSize="22"/>
                                <TextBlock Text="{Binding TopExp1.Category, TargetNullValue=—, FallbackValue=—}" Style="{StaticResource PodiumCategory}" FontSize="13"/>
                                <TextBlock Text="{Binding TopExp1.AmountStr, TargetNullValue=—, FallbackValue=—}" Style="{StaticResource PodiumAmount}" FontSize="16"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="2" Style="{StaticResource Card}" Padding="10" Margin="0,34,0,0" VerticalAlignment="Bottom">
                            <StackPanel>
                                <TextBlock Text="3" Style="{StaticResource PodiumRank}"/>
                                <TextBlock Text="{Binding TopExp3.Category, TargetNullValue=—, FallbackValue=—}" Style="{StaticResource PodiumCategory}"/>
                                <TextBlock Text="{Binding TopExp3.AmountStr, TargetNullValue=—, FallbackValue=—}" Style="{StaticResource PodiumAmount}"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Ilość transakcji -->
            <Border Grid.Row="2" Style="{StaticResource Card}" Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock Text="Ilość transakcji (okres)"
                               Style="{StaticResource CardHeader}"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,0,0,8"/>
                    <lvc:CartesianChart Height="240"
                                        Style="{StaticResource BaseCartesianChart}"
                                        Series="{Binding OverviewCountSeries}"
                                        XAxes="{Binding OverviewCountAxesX}"
                                        YAxes="{Binding OverviewCountAxesY}"/>
                </StackPanel>
            </Border>

            <!-- Top 3 przychody -->
            <Border Grid.Row="3" Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="Top 3 przychody"
                               Style="{StaticResource CardHeader}"
                               FontSize="15"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <Grid VerticalAlignment="Bottom">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="1.15*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Style="{StaticResource Card}" Padding="10" Margin="0,18,8,0" VerticalAlignment="Bottom">
                            <StackPanel>
                                <TextBlock Text="2" Style="{StaticResource PodiumRank}"/>
                                <TextBlock Text="{Binding TopInc2.Category, TargetNullValue=—, FallbackValue=—}" Style="{StaticResource PodiumCategory}"/>
                                <TextBlock Text="{Binding TopInc2.AmountStr, TargetNullValue=—, FallbackValue=—}" Style="{StaticResource PodiumAmount}"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1"
                                Style="{StaticResource Card}"
                                Padding="10"
                                Margin="0,0,8,0"
                                VerticalAlignment="Bottom"
                                BorderBrush="{DynamicResource Separator.Orange}"
                                BorderThickness="2">
                            <StackPanel>
                                <TextBlock Text="1" Style="{StaticResource PodiumRank}" FontSize="22"/>
                                <TextBlock Text="{Binding TopInc1.Category, TargetNullValue=—, FallbackValue=—}" Style="{StaticResource PodiumCategory}" FontSize="13"/>
                                <TextBlock Text="{Binding TopInc1.AmountStr, TargetNullValue=—, FallbackValue=—}" Style="{StaticResource PodiumAmount}" FontSize="16"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="2" Style="{StaticResource Card}" Padding="10" Margin="0,34,0,0" VerticalAlignment="Bottom">
                            <StackPanel>
                                <TextBlock Text="3" Style="{StaticResource PodiumRank}"/>
                                <TextBlock Text="{Binding TopInc3.Category, TargetNullValue=—, FallbackValue=—}" Style="{StaticResource PodiumCategory}"/>
                                <TextBlock Text="{Binding TopInc3.AmountStr, TargetNullValue=—, FallbackValue=—}" Style="{StaticResource PodiumAmount}"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>

        <!-- PRAWA KOLUMNA -->
        <Border Grid.Column="1" Style="{StaticResource Card}" Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button Grid.Row="0"
                        Content="Eksportuj ten raport (PDF)"
                        Style="{DynamicResource PrimaryButton}"
                        HorizontalAlignment="Right"
                        Padding="14,9"
                        Command="{Binding ExportPdfCommand}"
                        CommandParameter="overview"/>

                <TextBlock Grid.Row="1"
                           Text="Wszystkie transakcje z okresu"
                           Style="{StaticResource CardHeader}"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="0,10,0,10"/>

                <WrapPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <ToggleButton Style="{StaticResource ModeFilterButton}"
                                  IsChecked="{Binding FilterAll, Mode=TwoWay}">
                        <TextBlock Text="Wszystko"/>
                    </ToggleButton>

                    <ToggleButton Style="{StaticResource ModeFilterButton}"
                                  IsChecked="{Binding FilterIncomes, Mode=TwoWay}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Width="18" Height="18" Margin="0,0,8,0"
                                   Source="pack://application:,,,/Assets/Icons/przychody.png"
                                   Stretch="Uniform"/>
                            <TextBlock Text="Przychody"/>
                        </StackPanel>
                    </ToggleButton>

                    <ToggleButton Style="{StaticResource ModeFilterButton}"
                                  IsChecked="{Binding FilterExpenses, Mode=TwoWay}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Width="18" Height="18" Margin="0,0,8,0"
                                   Source="pack://application:,,,/Assets/Icons/wydatki.png"
                                   Stretch="Uniform"/>
                            <TextBlock Text="Wydatki"/>
                        </StackPanel>
                    </ToggleButton>

                    <ToggleButton Style="{StaticResource ModeFilterButton}"
                                  IsChecked="{Binding FilterTransfers, Mode=TwoWay}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Width="18" Height="18" Margin="0,0,8,0"
                                   Source="pack://application:,,,/Assets/Icons/transfer.png"
                                   Stretch="Uniform"/>
                            <TextBlock Text="Transfery"/>
                        </StackPanel>
                    </ToggleButton>
                </WrapPanel>

                <Border Grid.Row="3" Background="Transparent" Padding="0"
                        HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <controls:MiniTableControl ItemsSource="{Binding TransactionsView}"
                                               HeaderTemplate="{StaticResource TxTableHeaderTemplate}"
                                               RowTemplate="{StaticResource TxTableRowTemplate}"
                                               SelectionMode="Single"
                                               HorizontalAlignment="Stretch"
                                               VerticalAlignment="Stretch"
                                               VerticalScrollBarVisibility="Auto"
                                               HorizontalScrollBarVisibility="Disabled"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
