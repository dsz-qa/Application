<UserControl x:Class="Finly.Views.Controls.ReportsPageControls.BudgetsTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:controls="clr-namespace:Finly.Views.Controls"
             Background="Transparent"
             SnapsToDevicePixels="True"
             UseLayoutRounding="True">

	<Grid Margin="0,0,0,12">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="320"/>
			<RowDefinition Height="260"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<!-- ========== ROW 0: MINI KPI ========== -->
		<Grid Grid.Row="0" Margin="0,0,0,12">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<!-- OK -->
			<Border Grid.Column="0" Style="{StaticResource AccentCard}" Margin="0,0,10,0">
				<StackPanel>
					<TextBlock Text="Budżety w normie" Style="{StaticResource CardHeader}" FontSize="16" FontWeight="Bold"/>
					<TextBlock Text="{Binding BudgetsOkCount}" FontSize="34" FontWeight="Bold" Margin="0,10,0,0"/>
					<TextBlock Text="liczba budżetów bez przekroczenia" Opacity="0.75" Margin="0,6,0,0"/>
				</StackPanel>
			</Border>

			<!-- OVER -->
			<Border Grid.Column="1" Style="{StaticResource AccentCard}" Margin="0,0,10,0">
				<StackPanel>
					<TextBlock Text="Budżety przekroczone" Style="{StaticResource CardHeader}" FontSize="16" FontWeight="Bold"/>
					<TextBlock Text="{Binding BudgetsOverCount}" FontSize="34" FontWeight="Bold" Margin="0,10,0,0"/>
					<TextBlock Text="liczba budżetów z przekroczeniem" Opacity="0.75" Margin="0,6,0,0"/>
				</StackPanel>
			</Border>

			<!-- SUMA PRZEKROCZEŃ -->
			<Border Grid.Column="2" Style="{StaticResource AccentCard}">
				<StackPanel>
					<TextBlock Text="Suma przekroczeń" Style="{StaticResource CardHeader}" FontSize="16" FontWeight="Bold"/>
					<TextBlock Text="{Binding BudgetsOverTotalStr}" FontSize="28" FontWeight="Bold" Margin="0,12,0,0"/>
					<TextBlock Text="łączna kwota ponad limity (tylko przekroczone)" Opacity="0.75" Margin="0,6,0,0"/>
				</StackPanel>
			</Border>
		</Grid>

		<!-- ========== ROW 1: WYKRES TOP 8 (Wydano vs Limit) ========== -->
		<Border Grid.Row="1" Style="{StaticResource Card}">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>

				<TextBlock Grid.Row="0"
                           Text="Top 8 budżetów – Wydano vs Limit"
                           Style="{StaticResource CardHeader}"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="0,0,0,8"/>

				<lvc:CartesianChart Grid.Row="1"
                                    Style="{StaticResource BaseCartesianChart}"
                                    Series="{Binding BudgetsSeries}"
                                    XAxes="{Binding BudgetsAxesX}"
                                    YAxes="{Binding BudgetsAxesY}"/>
			</Grid>
		</Border>

		<!-- ========== ROW 2: DRUGI WYKRES (Wykorzystanie %) ========== -->
		<Border Grid.Row="2" Style="{StaticResource Card}" Margin="0,12,0,0">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>

				<TextBlock Grid.Row="0"
                           Text="Wykorzystanie budżetu (%) – TOP 8"
                           Style="{StaticResource CardHeader}"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="0,0,0,8"/>

				<lvc:CartesianChart Grid.Row="1"
                                    Style="{StaticResource BaseCartesianChart}"
                                    Series="{Binding BudgetsUsageSeries}"
                                    XAxes="{Binding BudgetsUsageAxesX}"
                                    YAxes="{Binding BudgetsUsageAxesY}"/>
			</Grid>
		</Border>

		<!-- ========== ROW 3: TABELA PEŁNA (MiniTableControl) ========== -->
		<Border Grid.Row="3" Style="{StaticResource Card}" Margin="0,12,0,0">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>

				<TextBlock Grid.Row="0"
                           Text="Wszystkie budżety"
                           Style="{StaticResource CardHeader}"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="0,0,0,8"/>

				<!-- Empty -->
				<TextBlock Grid.Row="1"
                           Text="Brak budżetów w systemie.">
					<TextBlock.Style>
						<!-- BasedOn MUSI BYĆ StaticResource -->
						<Style TargetType="TextBlock" BasedOn="{StaticResource MiniTableHintText}">
							<Setter Property="Visibility" Value="Collapsed"/>
							<Style.Triggers>
								<DataTrigger Binding="{Binding Budgets.Count}" Value="0">
									<Setter Property="Visibility" Value="Visible"/>
								</DataTrigger>
							</Style.Triggers>
						</Style>
					</TextBlock.Style>
				</TextBlock>

				<!-- MiniTable -->
				<controls:MiniTableControl Grid.Row="2"
                                           ItemsSource="{Binding Budgets}"
                                           VerticalScrollBarVisibility="Auto"
                                           HorizontalScrollBarVisibility="Disabled">

					<!-- HEADER -->
					<controls:MiniTableControl.HeaderTemplate>
						<DataTemplate>
							<Border Style="{DynamicResource MiniTableHeaderBorder}">
								<Grid>
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="2.2*"/>
										<ColumnDefinition Width="*"/>
										<ColumnDefinition Width="*"/>
										<ColumnDefinition Width="*"/>
										<ColumnDefinition Width="*"/>
										<ColumnDefinition Width="*"/>
										<ColumnDefinition Width="1.1*"/>
									</Grid.ColumnDefinitions>

									<TextBlock Grid.Column="0" Text="Nazwa" Style="{DynamicResource MiniTableHeaderText}"/>
									<TextBlock Grid.Column="1" Text="Limit" Style="{DynamicResource MiniTableHeaderText}" TextAlignment="Right"/>
									<TextBlock Grid.Column="2" Text="Wydano" Style="{DynamicResource MiniTableHeaderText}" TextAlignment="Right"/>
									<TextBlock Grid.Column="3" Text="Pozostało" Style="{DynamicResource MiniTableHeaderText}" TextAlignment="Right"/>
									<TextBlock Grid.Column="4" Text="% użycia" Style="{DynamicResource MiniTableHeaderText}" TextAlignment="Right"/>
									<TextBlock Grid.Column="5" Text="Delta" Style="{DynamicResource MiniTableHeaderText}" TextAlignment="Right"/>
									<TextBlock Grid.Column="6" Text="Status" Style="{DynamicResource MiniTableHeaderText}" TextAlignment="Center"/>
								</Grid>
							</Border>
						</DataTemplate>
					</controls:MiniTableControl.HeaderTemplate>

					<!-- ROW -->
					<controls:MiniTableControl.RowTemplate>
						<DataTemplate>
							<Grid Margin="0,0,0,2">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="2.2*"/>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="1.1*"/>
								</Grid.ColumnDefinitions>

								<TextBlock Grid.Column="0" Text="{Binding Name}" Style="{DynamicResource MiniTableCellText}"/>
								<TextBlock Grid.Column="1" Text="{Binding PlannedStr}" Style="{DynamicResource MiniTableCellText}" TextAlignment="Right"/>
								<TextBlock Grid.Column="2" Text="{Binding SpentStr}" Style="{DynamicResource MiniTableCellText}" TextAlignment="Right"/>
								<TextBlock Grid.Column="3" Text="{Binding RemainingStr}" Style="{DynamicResource MiniTableCellText}" TextAlignment="Right"/>
								<TextBlock Grid.Column="4" Text="{Binding UsedPercentStr}" Style="{DynamicResource MiniTableCellText}" TextAlignment="Right"/>
								<TextBlock Grid.Column="5" Text="{Binding DeltaStr}" Style="{DynamicResource MiniTableCellText}" TextAlignment="Right"/>

								<TextBlock Grid.Column="6" TextAlignment="Center">
									<TextBlock.Style>
										<Style TargetType="TextBlock" BasedOn="{StaticResource MiniTableCellText}">
											<Setter Property="Text" Value="OK"/>
											<Setter Property="FontWeight" Value="SemiBold"/>
											<Style.Triggers>
												<DataTrigger Binding="{Binding IsOver}" Value="True">
													<Setter Property="Text" Value="Przekroczony"/>
													<Setter Property="Foreground" Value="{DynamicResource Separator.Orange}"/>
												</DataTrigger>
											</Style.Triggers>
										</Style>
									</TextBlock.Style>
								</TextBlock>

							</Grid>
						</DataTemplate>
					</controls:MiniTableControl.RowTemplate>

				</controls:MiniTableControl>
			</Grid>
		</Border>
	</Grid>
</UserControl>
