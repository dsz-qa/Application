<UserControl x:Class="Finly.Views.Controls.ReportsPageControls.InvestmentsTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             Background="Transparent">

    <Border Style="{StaticResource Card}" Padding="12">
        <StackPanel>
            <TextBlock Text="Inwestycje – wynik"
                       Style="{StaticResource CardHeader}"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>

            <lvc:CartesianChart Height="320"
                                Style="{StaticResource BaseCartesianChart}"
                                Series="{Binding InvestmentsSeries}"
                                XAxes="{Binding InvestmentsAxesX}"
                                YAxes="{Binding InvestmentsAxesY}"/>
        </StackPanel>
    </Border>
</UserControl>

