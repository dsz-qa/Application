<UserControl x:Class="Finly.Views.Controls.ReportDonutWithLegendExportControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ctrls="clr-namespace:Finly.Views.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="900"
             d:DesignHeight="360">

    <Border Background="White"
            BorderBrush="#E5E7EB"
            BorderThickness="1"
            CornerRadius="10"
            Padding="14"
            SnapsToDevicePixels="True">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="520"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- DONUT -->
            <Border Grid.Column="0"
                    Background="Transparent"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                <ctrls:DonutChartControl x:Name="Chart"
                                         HorizontalAlignment="Stretch"
                                         VerticalAlignment="Stretch"
                                         Background="Transparent"/>
            </Border>

            <!-- LEGENDA -->
            <StackPanel Grid.Column="2">
                <TextBlock Text="Legenda"
                           FontWeight="SemiBold"
                           FontSize="14"
                           Margin="0,0,0,10"
                           Foreground="#111827"/>

                <!-- bez ScrollViewer: ma się zmieścić na stronie -->
                <ItemsControl ItemsSource="{Binding LegendItems}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="18"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Ellipse Width="10"
                                         Height="10"
                                         Fill="{Binding BulletBrush}"
                                         VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                    <TextBlock Text="{Binding Name}"
                                               FontSize="12"
                                               Foreground="#111827"
                                               TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding PercentStr}"
                                               FontSize="11"
                                               Foreground="#6B7280"/>
                                </StackPanel>

                                <TextBlock Grid.Column="2"
                                           Text="{Binding AmountStr}"
                                           FontSize="12"
                                           Foreground="#111827"
                                           VerticalAlignment="Center"
                                           Margin="10,0,0,0"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock Text="{Binding OthersInfo}"
                           Visibility="{Binding OthersInfoVisibility}"
                           FontSize="11"
                           Foreground="#6B7280"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
