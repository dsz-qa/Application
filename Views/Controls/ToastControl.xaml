<UserControl x:Class="Finly.Views.Controls.ToastControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Opacity="0" MinWidth="320" MaxWidth="520">
    <Border x:Name="Root" CornerRadius="10" Padding="12,10" Margin="0,10,0,0"
          Background="{DynamicResource Surface.Background}"
          BorderBrush="{DynamicResource Surface.Border}"
          BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="14" ShadowDepth="0" Opacity="0.35"/>
        </Border.Effect>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock x:Name="Icon" FontSize="16" FontWeight="SemiBold"
                 Foreground="{DynamicResource App.Foreground}" Margin="2,0,10,0"/>
            <TextBlock x:Name="Msg" TextWrapping="Wrap"
                 Foreground="{DynamicResource App.Foreground}" FontSize="14"/>
        </StackPanel>
    </Border>
</UserControl>

