<Window x:Class="Finly.Views.FirstRunWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pierwsze uruchomienie"
        WindowStyle="None"
        ResizeMode="CanResize"
        Background="{DynamicResource App.Background}"
        Loaded="Window_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <!-- Pasek tytułu -->
            <RowDefinition Height="*"/>
            <!-- Treść -->
        </Grid.RowDefinitions>

        <!-- ===================== PASEK TYTUŁU ===================== -->
        <Grid x:Name="TitleBar"
              Grid.Row="0"
              Background="{DynamicResource Surface.Background}"
              MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Logo + nazwa -->
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="8,0,0,0">
                <!-- ZMIEŃ Source NA RZECZYWISTĄ ŚCIEŻKĘ DO LOGO, jeśli jest inna -->
                <Image Source="/Assets/Images/logoFinly.png"
                       Width="18" Height="18"
                       Margin="0,0,6,0"/>
                <TextBlock Text="Finly"
                           Foreground="White"
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Tytuł okna -->
            <TextBlock Grid.Column="1"
                       Text="Pierwsze uruchomienie"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Foreground="White"
                       FontWeight="SemiBold"/>

            <!-- Przyciski okna -->
            <StackPanel Grid.Column="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Stretch">
                <Button Width="40"
                        Content="—"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Foreground="White"
                        Click="Minimize_Click"/>
                <Button Width="40"
                        Content="□"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Foreground="White"
                        Click="MaxRestore_Click"/>
                <Button Width="40"
                        Content="X"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Foreground="White"
                        Click="Close_Click"/>
            </StackPanel>
        </Grid>

        <!-- ===================== GŁÓWNA TREŚĆ ===================== -->
        <Grid Grid.Row="1" Margin="48">

            <Image Source="/Assets/Images/logoFinly.png"
                       Width="18" Height="18"></Image>
            <Border Background="{DynamicResource Surface.Background}"
                    BorderBrush="{DynamicResource Surface.Border}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="32">
                <StackPanel  VerticalAlignment="Center">
                    <TextBlock Text="Zacznijmy od ustawienia punktu startowego"
                               FontSize="22"
                               FontWeight="Bold"
                               Margin="0,0,0,16"/>

                    <TextBlock Text="Te dane pomogą aplikacji poprawnie policzyć Twoje finanse od pierwszego dnia."
                               Margin="0,0,0,8"/>

                    <TextBlock Text="W każdej chwili będziesz mogła je później zmienić w ustawieniach konta."
                               Margin="0,0,0,24"/>

                    <!-- GOTÓWKA DO DYSPOZYCJI -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Gotówka, którą możesz swobodnie dysponować:"
                                   FontWeight="SemiBold"/>
                        <TextBox x:Name="FreeCashBox"
                                 Margin="0,6,0,0"
                                 Width="220"
                                 HorizontalAlignment="Left"
                                 Text="0,00"/>
                    </StackPanel>

                    <!-- GOTÓWKA ODŁOŻONA NA CELE -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Gotówka odłożona na konkretne cele w kopertach:"
                                   FontWeight="SemiBold"/>
                        <TextBox x:Name="SavedCashBox"
                                 Margin="0,6,0,4"
                                 Width="220"
                                 HorizontalAlignment="Left"
                                 Text="0,00"/>
                        <TextBlock Text="Przykład: pieniądze w słoiku na wakacje, awaryjny fundusz itd."
                                   FontSize="11"
                                   Opacity="0.7"/>
                    </StackPanel>

                    <!-- ŚRODKI NA KONTACH BANKOWYCH -->
                    <StackPanel Margin="0,0,0,24">
                        <TextBlock Text="Łączna kwota na wszystkich kontach bankowych:"
                                   FontWeight="SemiBold"/>
                        <TextBox x:Name="BankTotalBox"
                                 Margin="0,6,0,4"
                                 Width="220"
                                 HorizontalAlignment="Left"
                                 Text="0,00"/>
                        <TextBlock Text="Nie musisz wpisywać każdego konta osobno – aplikacja utworzy jedno konto startowe, które później rozbijesz."
                                   FontSize="11"
                                   Opacity="0.7"/>
                    </StackPanel>

                    <!-- PRZYCISKI DOLNE -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <Button Content="Pomiń"
                                Margin="0,0,12,0"
                                Padding="10,4"
                                Background="Transparent"
                                Foreground="White"
                                BorderBrush="{DynamicResource Surface.Border}"
                                Click="Skip_Click"/>

                        <Button Content="Zapisz i przejdź dalej"
                                Padding="14,4"
                                Style="{StaticResource PrimaryButton}"
                                Click="SaveAndContinue_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>


