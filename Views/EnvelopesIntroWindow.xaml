<Window x:Class="Finly.Views.EnvelopesIntroWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Koperty – pierwsze kroki"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource App.Background}"
        SizeToContent="WidthAndHeight">

    <Border Margin="32"
            Padding="24"
            Background="{DynamicResource Surface.Background}"
            BorderBrush="{DynamicResource Surface.Border}"
            BorderThickness="1"
            CornerRadius="12">
        <StackPanel>
            <TextBlock Text="Witaj w sekcji Koperty"
                       FontSize="26"
                       FontWeight="Bold"
                       Margin="0,0,0,12"/>
            <TextBlock Text="Tutaj możesz rozdzielić swoją odłożoną gotówkę na konkretne cele. 
Dodaj wirtualne koperty – każda może reprezentować inną rzecz, na którą odkładasz."
                       TextWrapping="Wrap"
                       Margin="0,0,0,16"/>

            <TextBlock Text="Na górze widzisz całkowitą odłożoną gotówkę, a poniżej listę kopert. 
Przydzielając kwoty do kopert, zmniejszasz nierozdzieloną gotówkę."
                       TextWrapping="Wrap"
                       Margin="0,0,0,24"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="Dodaj pierwszą kopertę"
                        Style="{StaticResource PrimaryButton}"
                        Width="220"
                        Click="Start_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>