<Window x:Class="Finly.Views.ShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Finly"
        WindowStyle="None"
        ResizeMode="CanResize"
        WindowState="Normal"
        MinWidth="1024" MinHeight="640"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        Background="{DynamicResource App.Background}"
        Loaded="Window_Loaded"
        Icon="/Assets/Icons/logoFinly.ico"
        SizeChanged="Window_SizeChanged">

    <!-- ============ Zasoby ============ -->
    <Window.Resources>
        <!-- Rozmiary -->
        <sys:Double x:Key="Logo.Size">180</sys:Double>
        <sys:Double x:Key="Nav.IconSize">28</sys:Double>
        <!-- Primary (home) icon size - larger than other nav icons -->
        <sys:Double x:Key="Nav.PrimaryIconSize">40</sys:Double>
        <sys:Double x:Key="Nav.FontSize">18</sys:Double>
        <sys:Double x:Key="FooterButton.Width">220</sys:Double>
        <sys:Double x:Key="FooterButton.Height">48</sys:Double>
        <sys:Double x:Key="FooterButton.FontSize">14</sys:Double>

        <!-- Przycisk paska tytułu -->
        <Style x:Key="TitleBarIconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="4,0,0,0"/>
            <Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="shell:WindowChrome.IsHitTestVisibleInChrome" Value="True"/>
        </Style>


        <!-- NAV: standardowy przycisk nawigacji -->
        <Style x:Key="NavItemCentered" TargetType="{x:Type ToggleButton}">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="16,14"/>
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="FontSize" Value="{DynamicResource Nav.FontSize}"/>
            <Setter Property="Foreground" Value="{DynamicResource Sidebar.Foreground}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="ContentTemplate" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Grid>
                            <Border x:Name="bg"
                            Background="{TemplateBinding Background}"
                            CornerRadius="10"/>

                            <!-- pomarańczowe paski po bokach -->
                            <Rectangle x:Name="leftBar"
                               Width="2"
                               Fill="{DynamicResource Brand.Orange}"
                               HorizontalAlignment="Left"
                               Opacity=".9"
                               Visibility="Collapsed"/>
                            <Rectangle x:Name="rightBar"
                               Width="2"
                               Fill="{DynamicResource Brand.Orange}"
                               HorizontalAlignment="Right"
                               Opacity=".9"
                               Visibility="Collapsed"/>

                            <!-- CAŁA zawartość wyśrodkowana -->
                            <Grid Margin="0" HorizontalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Ikona jako maska -->
                                <Rectangle x:Name="iconShape"
                                   Grid.Column="0"
                                   Width="{DynamicResource Nav.IconSize}"
                                   Height="{DynamicResource Nav.IconSize}"
                                   VerticalAlignment="Center">
                                    <Rectangle.OpacityMask>
                                        <ImageBrush Stretch="Uniform"
                                            ImageSource="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Tag}"/>
                                    </Rectangle.OpacityMask>
                                    <Rectangle.Fill>
                                        <SolidColorBrush Color="White"/>
                                    </Rectangle.Fill>
                                </Rectangle>

                                <ContentPresenter Grid.Column="2"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          TextElement.FontWeight="SemiBold"/>
                            </Grid>

                            <Rectangle Height="1"
                               VerticalAlignment="Bottom"
                               Fill="{DynamicResource Surface.Border}"
                               Opacity=".8"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#1AFFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <!-- TYLKO ikonka i paski są pomarańczowe -->
                                <Setter TargetName="leftBar"  Property="Visibility" Value="Visible"/>
                                <Setter TargetName="rightBar" Property="Visibility" Value="Visible"/>
                                <Setter Property="Foreground" Value="{DynamicResource Brand.Orange}"/>
                                <Setter TargetName="iconShape" Property="Fill" Value="{DynamicResource Brand.Orange}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value=".5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



        <!-- NAV: wyróżniony „Panel główny” – tylko ikona domku bez tekstu -->
        <Style x:Key="NavItemPrimary" TargetType="{x:Type ToggleButton}">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="16,14"/>
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="Foreground" Value="{DynamicResource Brand.Orange}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="ContentTemplate" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Grid>
                            <Border x:Name="bg"
                            Background="{TemplateBinding Background}"
                            CornerRadius="10"/>

                            <Rectangle x:Name="leftBar"
                               Width="2"
                               Fill="{DynamicResource Brand.Orange}"
                               HorizontalAlignment="Left"
                               Opacity=".9"
                               Visibility="Collapsed"/>
                            <Rectangle x:Name="rightBar"
                               Width="2"
                               Fill="{DynamicResource Brand.Orange}"
                               HorizontalAlignment="Right"
                               Opacity=".9"
                               Visibility="Collapsed"/>

                            <Grid Margin="0">
                                <!-- tylko ikona domku, bez napisu -->
                                <Rectangle x:Name="iconShape"
                                   Width="{DynamicResource Nav.PrimaryIconSize}"
                                   Height="{DynamicResource Nav.PrimaryIconSize}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Fill="{DynamicResource Brand.Orange}">
                                    <Rectangle.OpacityMask>
                                        <ImageBrush Stretch="Uniform"
                                            ImageSource="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Tag}"/>
                                    </Rectangle.OpacityMask>
                                </Rectangle>
                            </Grid>

                            <!-- removed bottom divider to avoid lines directly adjacent to the primary icon -->
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#1AFFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#26ED7A1A"/>
                                <Setter TargetName="leftBar"  Property="Visibility" Value="Visible"/>
                                <Setter TargetName="rightBar" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value=".5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



        <!-- NAV: specjalny styl dla Home (większa ikonka, zachowuje dolny separator) -->
        <Style x:Key="NavItemHome" TargetType="{x:Type ToggleButton}">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="16,14"/>
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="Foreground" Value="{DynamicResource Brand.Orange}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="ContentTemplate" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Grid>
                            <Border x:Name="bg"
                            Background="{TemplateBinding Background}"
                            CornerRadius="10"/>

                            <!-- central area with icon and inward-pointing arrows -->
                            <Grid Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <!-- icon centered -->
                                <Rectangle x:Name="iconShape"
                                   Width="{DynamicResource Nav.PrimaryIconSize}"
                                   Height="{DynamicResource Nav.PrimaryIconSize}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Fill="{DynamicResource Brand.Orange}">
                                    <Rectangle.OpacityMask>
                                        <ImageBrush Stretch="Uniform"
                                            ImageSource="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Tag}"/>
                                    </Rectangle.OpacityMask>
                                </Rectangle>

                                <!-- left arrow: default points RIGHT towards the house -->
                                <Viewbox Width="18" Height="18" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Path x:Name="HomeLeftArrow" Data="M0,0 L10,6 L0,12 Z" Fill="{DynamicResource Brand.Orange}" Visibility="Visible" Stretch="Uniform" RenderTransformOrigin="0.5,0.5">
                                        <Path.RenderTransform>
                                            <TranslateTransform X="-28" />
                                        </Path.RenderTransform>
                                    </Path>
                                </Viewbox>

                                <!-- right arrow: default points LEFT towards the house -->
                                <Viewbox Width="18" Height="18" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Path x:Name="HomeRightArrow" Data="M10,0 L0,6 L10,12 Z" Fill="{DynamicResource Brand.Orange}" Visibility="Visible" Stretch="Uniform" RenderTransformOrigin="0.5,0.5">
                                        <Path.RenderTransform>
                                            <TranslateTransform X="28" />
                                        </Path.RenderTransform>
                                    </Path>
                                </Viewbox>
                            </Grid>

                            <!-- no bottom divider here so no lines adjacent to home icon -->
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#1AFFFFFF"/>
                            </Trigger>

                            <!-- When the home tab is active (IsChecked=True) arrows point inward (default) -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="iconShape" Property="Fill" Value="{DynamicResource Brand.Orange}"/>
                                <Setter TargetName="HomeLeftArrow" Property="Data" Value="M0,0 L10,6 L0,12 Z"/>
                                <Setter TargetName="HomeRightArrow" Property="Data" Value="M10,0 L0,6 L10,12 Z"/>
                            </Trigger>

                            <!-- When NOT on home (IsChecked=False) flip arrows so they point away from house -->
                            <Trigger Property="IsChecked" Value="False">
                                <!-- left arrow now points LEFT (away from house) -->
                                <Setter TargetName="HomeLeftArrow" Property="Data" Value="M10,0 L0,6 L10,12 Z"/>
                                <!-- right arrow now points RIGHT (away from house) -->
                                <Setter TargetName="HomeRightArrow" Property="Data" Value="M0,0 L10,6 L0,12 Z"/>
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value=".5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



        <!-- Stopka -->
        <Style x:Key="SidebarActionToggle.Blue" TargetType="{x:Type ToggleButton}">
            <Setter Property="Foreground" Value="{DynamicResource Sidebar.Foreground}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Brand.Blue}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Width"     Value="{DynamicResource FooterButton.Width}"/>
            <Setter Property="Height"    Value="{DynamicResource FooterButton.Height}"/>
            <Setter Property="FontSize"  Value="{DynamicResource FooterButton.FontSize}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Border x:Name="bg"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter Margin="10,2"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="{DynamicResource Brand.Blue.HoverOverlay}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="{DynamicResource Brand.Blue.HoverOverlay}"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="{DynamicResource Brand.Blue.PressedOverlay}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- NAV: always-orange icon variant (for Envelopes) -->
        <Style x:Key="NavItemOrange" TargetType="{x:Type ToggleButton}">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="16,14"/>
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="FontSize" Value="{DynamicResource Nav.FontSize}"/>
            <Setter Property="Foreground" Value="{DynamicResource Brand.Orange}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="ContentTemplate" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Grid>
                            <Border x:Name="bg"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="10"/>

                            <Rectangle x:Name="leftBar"
                                       Width="2"
                                       Fill="{DynamicResource Brand.Orange}"
                                       HorizontalAlignment="Left"
                                       Opacity=".9"
                                       Visibility="Collapsed"/>
                            <Rectangle x:Name="rightBar"
                                       Width="2"
                                       Fill="{DynamicResource Brand.Orange}"
                                       HorizontalAlignment="Right"
                                       Opacity=".9"
                                       Visibility="Collapsed"/>

                            <Grid Margin="0" HorizontalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Rectangle x:Name="iconShape"
                                           Grid.Column="0"
                                           Width="{DynamicResource Nav.IconSize}"
                                           Height="{DynamicResource Nav.IconSize}"
                                           VerticalAlignment="Center"
                                           Fill="{DynamicResource Brand.Orange}">
                                    <Rectangle.OpacityMask>
                                        <ImageBrush Stretch="Uniform"
                                                    ImageSource="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Tag}"/>
                                    </Rectangle.OpacityMask>
                                </Rectangle>

                                <ContentPresenter Grid.Column="2"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  TextElement.FontWeight="SemiBold"/>
                            </Grid>

                            <Rectangle Height="1"
                                       VerticalAlignment="Bottom"
                                       Fill="{DynamicResource Surface.Border}"
                                       Opacity=".8"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#1AFFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="leftBar"  Property="Visibility" Value="Visible"/>
                                <Setter TargetName="rightBar" Property="Visibility" Value="Visible"/>
                                <Setter Property="Foreground" Value="{DynamicResource Brand.Orange}"/>
                                <Setter TargetName="iconShape" Property="Fill" Value="{DynamicResource Brand.Orange}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value=".5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Pasek tytułu systemowego -->
    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="48"
                            ResizeBorderThickness="6"
                            CornerRadius="0"
                            UseAeroCaptionButtons="False"/>
    </shell:WindowChrome.WindowChrome>

    <!-- ============ Layout ============ -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Pasek tytułu -->
        <Grid Grid.Row="0"
              Background="{DynamicResource TitleBar.Background}"
              MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Logo + tytuł -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="12,0,0,0">
                <Image Source="/Assets/Images/logoFinly.png"
                       Width="40" Height="40" Stretch="Uniform" Margin="0,0,8,0"
                       RenderOptions.BitmapScalingMode="HighQuality"
                       shell:WindowChrome.IsHitTestVisibleInChrome="True"/>
                <TextBlock Text="Finly"
                           Foreground="{DynamicResource App.Foreground}"
                           FontSize="14" VerticalAlignment="Center"
                           shell:WindowChrome.IsHitTestVisibleInChrome="True"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Style="{StaticResource TitleBarIconButton}" Width="46" Height="32" Padding="0" Click="Minimize_Click">
                    <TextBlock Text="—" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>
                <Button Style="{StaticResource TitleBarIconButton}" Width="46" Height="32" Padding="0" Click="MaxRestore_Click">
                    <TextBlock Text="⬜" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>
                <Button Style="{StaticResource TitleBarIconButton}" Width="46" Height="32" Padding="0" Click="Close_Click">
                    <TextBlock x:Name="CloseGlyph" Text="✕" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Główna siatka (sidebar + content) -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="SidebarCol" Width="380" MinWidth="260"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- SIDEBAR -->
            <Border x:Name="SidebarHost" Grid.Column="0"
                    Background="{DynamicResource Sidebar.Background}"
                    SizeChanged="SidebarHost_SizeChanged">
                <Grid x:Name="SidebarRoot">
                    <Grid.LayoutTransform>
                        <ScaleTransform x:Name="SidebarScale" ScaleX="1" ScaleY="1"/>
                    </Grid.LayoutTransform>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Margin="16,16,16,8" HorizontalAlignment="Center">
                        <!-- Logo -->
                        <Image Width="{DynamicResource Logo.Size}" Height="{DynamicResource Logo.Size}"
           SnapsToDevicePixels="True"
           RenderOptions.BitmapScalingMode="HighQuality"
           Stretch="Uniform"
           Source="pack://application:,,,/Assets/Images/logoFinly.png"
           HorizontalAlignment="Center"/>

                        <!-- Przycisk HOME -->
                        <ToggleButton x:Name="NavHome"
                  Margin="0,8,0,0"
                  Style="{StaticResource NavItemHome}"
                  Tag="pack://application:,,,/Assets/Icons/stronaglowna.png"
                  Click="Nav_Home_Click"/>
                    </StackPanel>



                    <!-- NAV -->
                    <Grid Grid.Row="1" x:Name="NavContainer" Margin="0,0,0,8" VerticalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- 0 separator -->
                            <RowDefinition Height="*"/>
                            <!-- 1 Dodaj -->
                            <RowDefinition Height="*"/>
                            <!-- 2 Transakcje -->
                            <RowDefinition Height="*"/>
                            <!-- 3 Budżety -->
                            <RowDefinition Height="*"/>
                            <!-- 4 Kategorie -->
                            <RowDefinition Height="*"/>
                            <!-- 5 Statystyki -->
                            <RowDefinition Height="*"/>
                            <!-- 6 Raporty -->
                            <RowDefinition Height="*"/>
                            <!-- 7 Inwestycje -->
                            <RowDefinition Height="*"/>
                            <!-- 8 Kredyty -->
                            <RowDefinition Height="*"/>
                            <!-- 9 Cele -->
                            <RowDefinition Height="*"/>
                            <!-- 10 Koperty -->
                            <RowDefinition Height="*"/>
                            <!-- 11 Konta bankowe -->
                            <RowDefinition Height="*"/>
                            <!-- 12 dodatkowy wiersz (po przesunięciach) -->
                        </Grid.RowDefinitions>

                        <!-- removed separator here to avoid double lines around home -->

                        <!-- 1: Dodaj -->
                        <ToggleButton Grid.Row="1" x:Name="NavAdd" Style="{StaticResource NavItemCentered}"
                  Content="Dodaj transakcję"
                  Tag="pack://application:,,,/Assets/Icons/dodaj.png"
                  Click="Nav_Add_Click"/>

                        <!-- 2: Transakcje -->
                        <ToggleButton Grid.Row="2" x:Name="NavTransactions" Style="{StaticResource NavItemCentered}"
                  Content="Transakcje"
                  Tag="pack://application:,,,/Assets/Icons/transakcje.png"
                  Click="Nav_Transactions_Click"/>

                        <!-- 3: Budżety -->
                        <ToggleButton Grid.Row="3" x:Name="NavBudgets" Style="{StaticResource NavItemCentered}"
                  Content="Budżety"
                  Tag="pack://application:,,,/Assets/Icons/budzety.png"
                  Click="Nav_Budgets_Click"/>

                        <!-- 4: Inwestycje (przeniesione nad Kredyty) -->
                        <ToggleButton Grid.Row="4" x:Name="NavInvestments" Style="{StaticResource NavItemCentered}"
                  Content="Inwestycje"
                  Tag="pack://application:,,,/Assets/Icons/inwestycje.png"
                  Click="Nav_Investments_Click"/>

                        <!-- 5: Kategorie -->
                        <ToggleButton Grid.Row="5" x:Name="NavCategories" Style="{StaticResource NavItemCentered}"
                  Content="Kategorie"
                  Tag="pack://application:,,,/Assets/Icons/kategorie.png"
                  Click="Nav_Categories_Click"/>

                        <!-- 6: Statystyki -->
                        <ToggleButton Grid.Row="6" x:Name="NavCharts" Style="{StaticResource NavItemCentered}"
                  Content="Statystyki"
                  Tag="pack://application:,,,/Assets/Icons/statystyki.png"
                  Click="Nav_Charts_Click"/>

                        <!-- 7: Raporty -->
                        <ToggleButton Grid.Row="7" x:Name="NavReports" Style="{StaticResource NavItemCentered}"
                  Content="Raporty"
                  Tag="pack://application:,,,/Assets/Icons/raporty.png"
                  Click="Nav_Reports_Click"/>

                        <!-- 8: Kredyty (przeniesione pod Inwestycje) -->
                        <ToggleButton Grid.Row="8" x:Name="NavLoans" Style="{StaticResource NavItemCentered}"
                  Content="Kredyty"
                  Tag="pack://application:,,,/Assets/Icons/kredyty.png"
                  Click="Nav_Loans_Click"/>

                        <!-- 9: Cele -->
                        <ToggleButton Grid.Row="9" x:Name="NavGoals" Style="{StaticResource NavItemCentered}"
                  Content="Cele"
                  Tag="pack://application:,,,/Assets/Icons/cele.png"
                  Click="Nav_Goals_Click"/>

                        <!-- 10: Koperty -->
                        <ToggleButton Grid.Row="10" x:Name="NavEnvelopes" Style="{StaticResource NavItemCentered}"
                  Content="Koperty"
                  Tag="pack://application:,,,/Assets/Icons/koperty.png"
                  Click="Nav_Envelopes_Click"/>

                        <!-- 11: Konta bankowe -->
                        <ToggleButton Grid.Row="11" x:Name="NavBanks" Style="{StaticResource NavItemCentered}"
                  Content="Konta bankowe"
                  Tag="pack://application:,,,/Assets/Icons/kontabankowe.png"
                  Click="Nav_Banks_Click"/>
                    </Grid>




                    <!-- Stopka -->
                    <Grid Grid.Row="2" Margin="8,8,8,16">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Separator Grid.Row="0" Margin="0,8,0,12" Background="{DynamicResource Surface.Border}"/>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <ToggleButton x:Name="FooterAccount" Grid.Column="0"
                                          Style="{StaticResource SidebarActionToggle.Blue}"
                                          Click="OpenProfile_Click">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE77B;" FontSize="18"
                                               HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                    <TextBlock Text="Konto"/>
                                </StackPanel>
                            </ToggleButton>

                            <ToggleButton x:Name="FooterSettings" Grid.Column="1"
                                          Style="{StaticResource SidebarActionToggle.Blue}"
                                          Click="OpenSettings_Click">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE713;" FontSize="18"
                                               HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                    <TextBlock Text="Ustawienia"/>
                                </StackPanel>
                            </ToggleButton>

                            <ToggleButton x:Name="FooterLogout" Grid.Column="2"
                                          Style="{StaticResource SidebarActionToggle.Blue}"
                                          Click="Nav_Logout_Click">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xF3B1;" FontSize="18"
