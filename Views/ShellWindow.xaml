<Window x:Class="Finly.Views.ShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Finly"
        WindowStyle="None"
        ResizeMode="CanResize"
        WindowState="Normal"
        MinWidth="1024" MinHeight="640"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        Background="{DynamicResource App.Background}"
        Loaded="Window_Loaded"
        Icon="/Assets/Icons/logoFinly.ico"
        SizeChanged="Window_SizeChanged">

    <Window.Resources>
        <!-- Rozmiary podstawowe -->
        <sys:Double x:Key="NavButton.FontSize">16</sys:Double>
        <sys:Double x:Key="FooterButton.Width">220</sys:Double>
        <sys:Double x:Key="FooterButton.Height">48</sys:Double>
        <sys:Double x:Key="FooterButton.FontSize">14</sys:Double>
        <sys:Double x:Key="Logo.Size">180</sys:Double>

        <!-- Przycisk paska tytułu -->
        <Style x:Key="TitleBarIconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="4,0,0,0"/>
            <Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        </Style>

        <!-- NAV: pełna szerokość, separator, pomarańczowe obramowania po zaznaczeniu -->
        <Style x:Key="NavItem" TargetType="{x:Type ToggleButton}">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="FontSize" Value="{DynamicResource NavButton.FontSize}"/>
            <Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Grid>
                            <!-- delikatne tło hover/active -->
                            <Border x:Name="bg" Background="{TemplateBinding Background}" CornerRadius="10"/>

                            <!-- Pomarańczowe paski lewy/prawy (domyślnie ukryte) -->
                            <Rectangle x:Name="leftBar"  Width="2" Fill="{DynamicResource Brand.Orange}"
                                       HorizontalAlignment="Left"  RadiusX="1" RadiusY="1"
                                       Opacity=".9" Visibility="Collapsed"/>
                            <Rectangle x:Name="rightBar" Width="2" Fill="{DynamicResource Brand.Orange}"
                                       HorizontalAlignment="Right" RadiusX="1" RadiusY="1"
                                       Opacity=".9" Visibility="Collapsed"/>

                            <!-- Ikona + tekst -->
                            <Grid Margin="10,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Ikona z Tag (pack URI do PNG) -->
                                <Image Grid.Column="0" Width="18" Height="18"
                                       Source="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Tag}"
                                       RenderOptions.BitmapScalingMode="HighQuality"
                                       SnapsToDevicePixels="True"
                                       VerticalAlignment="Center"/>

                                <ContentPresenter Grid.Column="2"
                                                  VerticalAlignment="Center"
                                                  TextElement.FontWeight="SemiBold"/>
                            </Grid>

                            <!-- Szary separator na dole -->
                            <Rectangle Height="1" VerticalAlignment="Bottom"
                                       Fill="{DynamicResource Surface.Border}" Opacity=".8"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#1AFFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#26ED7A1A"/>
                                <Setter TargetName="leftBar"  Property="Visibility" Value="Visible"/>
                                <Setter TargetName="rightBar" Property="Visibility" Value="Visible"/>
                                <Setter Property="Foreground" Value="#FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value=".5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- NAV: wariant wyśrodkowany (ikona nad napisem) do zapełnienia całej kolumny -->
        <Style x:Key="NavItemCentered" TargetType="ToggleButton" BasedOn="{StaticResource NavItem}">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment"   Value="Center"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin"  Value="0,2"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="ContentTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                            <Image Width="18" Height="18" Margin="0,0,0,6"
                                   Source="{Binding RelativeSource={RelativeSource AncestorType=ToggleButton}, Path=Tag}"/>
                            <TextBlock Text="{Binding}" TextAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Stopka -->
        <Style x:Key="SidebarActionToggle.Blue" TargetType="{x:Type ToggleButton}">
            <Setter Property="Foreground" Value="{DynamicResource Sidebar.Foreground}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Brand.Blue}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Width"     Value="{DynamicResource FooterButton.Width}"/>
            <Setter Property="Height"    Value="{DynamicResource FooterButton.Height}"/>
            <Setter Property="FontSize"  Value="{DynamicResource FooterButton.FontSize}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Border x:Name="bg"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter Margin="10,2"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="{DynamicResource Brand.Blue.HoverOverlay}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="{DynamicResource Brand.Blue.HoverOverlay}"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="{DynamicResource Brand.Blue.PressedOverlay}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Własny pasek tytułu -->
    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="48"
                            ResizeBorderThickness="6"
                            CornerRadius="0"
                            UseAeroCaptionButtons="False"/>
    </shell:WindowChrome.WindowChrome>

    <!-- ============== LAYOUT ============== -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Pasek tytułu -->
        <Grid Grid.Row="0"
              Background="{DynamicResource TitleBar.Background}"
              MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="12,0,0,0">
                <Image Source="/Assets/Images/logoFinly.png"
                       Width="40" Height="40" Stretch="Uniform" Margin="0,0,8,0"
                       RenderOptions.BitmapScalingMode="HighQuality"
                       shell:WindowChrome.IsHitTestVisibleInChrome="True"/>
                <TextBlock Text="Finly"
                           Foreground="{DynamicResource App.Foreground}"
                           FontSize="14" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Width="46" Height="32" Padding="0"
                        Background="Transparent" BorderBrush="{x:Null}"
                        Click="Minimize_Click"
                        shell:WindowChrome.IsHitTestVisibleInChrome="True">
                    <TextBlock Text="—" FontSize="16" VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource App.Foreground}"/>
                </Button>

                <Button Width="46" Height="32" Padding="0"
                        Background="Transparent" BorderBrush="{x:Null}"
                        Click="MaxRestore_Click"
                        shell:WindowChrome.IsHitTestVisibleInChrome="True">
                    <TextBlock Text="⬜" FontSize="12" VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource App.Foreground}"/>
                </Button>

                <Button Width="46" Height="32" Padding="0"
                        Background="Transparent" BorderBrush="{x:Null}"
                        Click="Close_Click"
                        shell:WindowChrome.IsHitTestVisibleInChrome="True">
                    <TextBlock x:Name="CloseGlyph" Text="✕" FontSize="12"
                               VerticalAlignment="Center" HorizontalAlignment="Center"
                               Foreground="{DynamicResource App.Foreground}"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Główna siatka -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="SidebarCol" Width="380" MinWidth="260"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- SIDEBAR -->
            <Border x:Name="SidebarHost" Grid.Column="0"
                    Background="{DynamicResource Sidebar.Background}"
                    SizeChanged="SidebarHost_SizeChanged">
                <Grid x:Name="SidebarRoot">
                    <Grid.LayoutTransform>
                        <ScaleTransform x:Name="SidebarScale" ScaleX="1" ScaleY="1"/>
                    </Grid.LayoutTransform>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- logo -->
                    <StackPanel Grid.Row="0" Margin="16,16,16,8">
                        <Button Click="Logo_Click" Background="Transparent" BorderBrush="{x:Null}" Cursor="Hand">
                            <DockPanel LastChildFill="False" VerticalAlignment="Center">
                                <Image Width="{DynamicResource Logo.Size}" Height="{DynamicResource Logo.Size}"
                                       SnapsToDevicePixels="True"
                                       RenderOptions.BitmapScalingMode="HighQuality"
                                       Stretch="Uniform"
                                       Source="pack://application:,,,/Assets/Images/logoFinly.png"
                                       DockPanel.Dock="Left"/>
                            </DockPanel>
                        </Button>
                        <!-- SZARY separator pod logo -->
                        <Separator Margin="0,12,0,8" Background="{DynamicResource Surface.Border}"/>
                    </StackPanel>

                    <!-- NAV: równe wiersze wypełniające całą przestrzeń -->
                    <Grid Grid.Row="1" x:Name="NavContainer" Margin="0,0,0,8" VerticalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <ToggleButton Grid.Row="0"  x:Name="NavAdd"           Style="{StaticResource NavItemCentered}"
                                      Content="Dodaj"           Tag="pack://application:,,,/Assets/Icons/dodaj.png"
                                      Click="Nav_Add_Click"/>

                        <ToggleButton Grid.Row="1"  x:Name="NavBudgets"       Style="{StaticResource NavItemCentered}"
                                      Content="Budżety"         Tag="pack://application:,,,/Assets/Icons/budzety.png"
                                      Click="Nav_Budgets_Click"/>

                        <ToggleButton Grid.Row="2"  x:Name="NavGoals"         Style="{StaticResource NavItemCentered}"
                                      Content="Cele"            Tag="pack://application:,,,/Assets/Icons/cele.png"
                                      Click="Nav_Goals_Click"/>

                        <ToggleButton Grid.Row="3"  x:Name="NavCategories"    Style="{StaticResource NavItemCentered}"
                                      Content="Kategorie"       Tag="pack://application:,,,/Assets/Icons/kategorie.png"
                                      Click="Nav_Categories_Click"/>

                        <ToggleButton Grid.Row="4"  x:Name="NavCharts"        Style="{StaticResource NavItemCentered}"
                                      Content="Statystyki"      Tag="pack://application:,,,/Assets/Icons/statystyki.png"
                                      Click="Nav_Charts_Click"/>

                        <ToggleButton Grid.Row="5"  x:Name="NavReports"       Style="{StaticResource NavItemCentered}"
                                      Content="Raporty"         Tag="pack://application:,,,/Assets/Icons/raporty.png"
                                      Click="Nav_Reports_Click"/>

                        <ToggleButton Grid.Row="6"  x:Name="NavLoans"         Style="{StaticResource NavItemCentered}"
                                      Content="Kredyty"         Tag="pack://application:,,,/Assets/Icons/kredyty.png"
                                      Click="Nav_Loans_Click"/>

                        <ToggleButton Grid.Row="7"  x:Name="NavInvestments"   Style="{StaticResource NavItemCentered}"
                                      Content="Inwestycje"      Tag="pack://application:,,,/Assets/Icons/inwestycje.png"
                                      Click="Nav_Investments_Click"/>

                        <ToggleButton Grid.Row="8"  x:Name="NavEnvelopes"     Style="{StaticResource NavItemCentered}"
                                      Content="Koperty"         Tag="pack://application:,,,/Assets/Icons/koperty.png"
                                      Click="Nav_Envelopes_Click"/>

                        <ToggleButton Grid.Row="9"  x:Name="NavBanks"         Style="{StaticResource NavItemCentered}"
                                      Content="Konta bankowe"   Tag="pack://application:,,,/Assets/Icons/kontabankowe.png"
                                      Click="Nav_Banks_Click"/>

                        <ToggleButton Grid.Row="10" x:Name="NavTransactions"  Style="{StaticResource NavItemCentered}"
                                      Content="Transakcje"      Tag="pack://application:,,,/Assets/Icons/transakcje.png"
                                      Click="Nav_Transactions_Click"/>

                        <ToggleButton Grid.Row="11" x:Name="NavImport"        Style="{StaticResource NavItemCentered}"
                                      Content="Import / Sync"   Tag="pack://application:,,,/Assets/Icons/import.png"
                                      Click="Nav_Import_Click"/>
                    </Grid>

                    <!-- stopka -->
                    <Grid Grid.Row="2" Margin="8,8,8,16">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Separator Grid.Row="0" Margin="0,8,0,12" Background="{DynamicResource Surface.Border}"/>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <ToggleButton x:Name="FooterAccount" Grid.Column="0"
                                          Style="{StaticResource SidebarActionToggle.Blue}"
                                          Click="OpenProfile_Click">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE77B;" FontSize="18"
                                               HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                    <TextBlock Text="Konto"/>
                                </StackPanel>
                            </ToggleButton>

                            <ToggleButton x:Name="FooterSettings" Grid.Column="1"
                                          Style="{StaticResource SidebarActionToggle.Blue}"
                                          Click="OpenSettings_Click">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE713;" FontSize="18"
                                               HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                    <TextBlock Text="Ustawienia"/>
                                </StackPanel>
                            </ToggleButton>

                            <ToggleButton x:Name="FooterLogout" Grid.Column="2"
                                          Style="{StaticResource SidebarActionToggle.Blue}"
                                          Click="Nav_Logout_Click">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xF3B1;" FontSize="18"
                                               HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                    <TextBlock Text="Wyloguj"/>
                                </StackPanel>
                            </ToggleButton>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>

            <!-- CONTENT -->
            <Grid Grid.Column="1" Background="{DynamicResource App.Background}" ClipToBounds="True">
                <ContentControl x:Name="RightHost"
                                Panel.ZIndex="0"
                                IsHitTestVisible="True"/>
                <Canvas x:Name="ToastLayer"
                        Panel.ZIndex="1000"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        IsHitTestVisible="False"/>
            </Grid>
        </Grid>
    </Grid>
</Window>







