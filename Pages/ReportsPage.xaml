<UserControl x:Class="Finly.Pages.ReportsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ctrls="clr-namespace:Finly.Views.Controls"
             x:Name="Root"
             Background="{DynamicResource App.Background}"
             SnapsToDevicePixels="True"
             UseLayoutRounding="True"
             TextOptions.TextFormattingMode="Display"
             TextOptions.TextRenderingMode="ClearType"
             Foreground="{DynamicResource App.Foreground}">

    <UserControl.Resources>

        <!-- ===================== CARDS / KPI ===================== -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource Surface.Background}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Surface.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="12"/>
        </Style>

        <Style x:Key="AccentCard" TargetType="Border" BasedOn="{StaticResource Card}">
            <Setter Property="BorderBrush" Value="{DynamicResource Brand.Blue}"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>

        <Style x:Key="CardHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
            <Setter Property="Opacity" Value="0.9"/>
        </Style>

        <Style x:Key="KpiValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
        </Style>

        <Style x:Key="KpiInlineLabel" TargetType="TextBlock" BasedOn="{StaticResource KpiValueStyle}">
            <Setter Property="Margin" Value="0,0,6,6"/>
        </Style>

        <Style x:Key="KpiInlineValueNormal" TargetType="TextBlock" BasedOn="{StaticResource KpiValueStyle}">
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Opacity" Value="0.85"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <Style x:Key="KpiSubHeader" TargetType="TextBlock" BasedOn="{StaticResource CardHeader}">
            <Setter Property="Opacity" Value="0.75"/>
            <Setter Property="Margin" Value="0,4,0,10"/>
        </Style>

        <!-- ===================== TABCONTROL: zakładki niebieskie + aktywna pomarańczowa ramka ===================== -->
        <SolidColorBrush x:Key="Reports.TabBlue" Color="#1E66F5"/>
        <SolidColorBrush x:Key="Reports.TabBlueHover" Color="#2A74FF"/>
        <SolidColorBrush x:Key="Reports.TabOrange" Color="#FF8A00"/>
        <SolidColorBrush x:Key="Reports.TabText" Color="#FFFFFF"/>

        <Style x:Key="ReportsTabControlStyle" TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid SnapsToDevicePixels="True">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="64"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Pasek zakładek -->
                            <Border Grid.Row="0"
                                    Background="{DynamicResource Surface.Background}"
                                    BorderBrush="{DynamicResource Surface.Border}"
                                    BorderThickness="1"
                                    CornerRadius="10"
                                    Padding="6"
                                    SnapsToDevicePixels="True">
                                <UniformGrid Rows="1"
                                             IsItemsHost="True"
                                             VerticalAlignment="Stretch"
                                             HorizontalAlignment="Stretch"/>
                            </Border>

                            <!-- Content -->
                            <Border Grid.Row="1"
                                    Background="Transparent"
                                    Padding="0"
                                    SnapsToDevicePixels="True">
                                <ContentPresenter x:Name="PART_SelectedContentHost"
                                                  ContentSource="SelectedContent"
                                                  HorizontalAlignment="Stretch"
                                                  VerticalAlignment="Stretch"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ReportsTabItemStyle" TargetType="TabItem">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource Reports.TabText}"/>
            <Setter Property="Background" Value="{StaticResource Reports.TabBlue}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Margin" Value="4,0,4,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="0"
                                SnapsToDevicePixels="True">
                            <ContentPresenter ContentSource="Header"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              RecognizesAccessKey="True"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
                            </Trigger>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource Reports.TabBlueHover}"/>
                            </Trigger>

                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource Reports.TabOrange}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <!-- ===================== MAIN LAYOUT ===================== -->
    <Grid Margin="12,0,12,12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ROW 0: KPI -->
        <Grid Grid.Row="0" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Obecny okres -->
            <Border Grid.Column="0" Style="{StaticResource AccentCard}" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Obecny okres" Style="{StaticResource CardHeader}" FontSize="18" FontWeight="Bold"/>
                    <TextBlock Text="{Binding PeriodLabel, FallbackValue=Brak danych, TargetNullValue=Brak danych}"
                               Style="{StaticResource KpiSubHeader}"/>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Wydatki:" Style="{StaticResource KpiInlineLabel}"/>
                        <TextBlock Text="{Binding TotalExpensesStr, FallbackValue=Brak danych, TargetNullValue=Brak danych}"
                                   Style="{StaticResource KpiInlineValueNormal}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Przychody:" Style="{StaticResource KpiInlineLabel}"/>
                        <TextBlock Text="{Binding TotalIncomesStr, FallbackValue=Brak danych, TargetNullValue=Brak danych}"
                                   Style="{StaticResource KpiInlineValueNormal}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Bilans:" Style="{StaticResource KpiInlineLabel}" Margin="0,0,6,0"/>
                        <TextBlock Text="{Binding BalanceStr, FallbackValue=Brak danych, TargetNullValue=Brak danych}"
                                   Style="{StaticResource KpiInlineValueNormal}" Margin="0,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Poprzedni okres -->
            <Border Grid.Column="1" Style="{StaticResource AccentCard}" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Poprzedni okres" Style="{StaticResource CardHeader}" FontSize="18" FontWeight="Bold"/>
                    <TextBlock Text="{Binding PreviousPeriodLabel, FallbackValue=Brak danych, TargetNullValue=Brak danych}"
                               Style="{StaticResource KpiSubHeader}"/>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Wydatki:" Style="{StaticResource KpiInlineLabel}"/>
                        <TextBlock Text="{Binding PreviousTotalExpensesStr, FallbackValue=Brak danych, TargetNullValue=Brak danych}"
                                   Style="{StaticResource KpiInlineValueNormal}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Przychody:" Style="{StaticResource KpiInlineLabel}"/>
                        <TextBlock Text="{Binding PreviousTotalIncomesStr, FallbackValue=Brak danych, TargetNullValue=Brak danych}"
                                   Style="{StaticResource KpiInlineValueNormal}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Bilans:" Style="{StaticResource KpiInlineLabel}" Margin="0,0,6,0"/>
                        <TextBlock Text="{Binding PreviousBalanceStr, FallbackValue=Brak danych, TargetNullValue=Brak danych}"
                                   Style="{StaticResource KpiInlineValueNormal}" Margin="0,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Porównanie okresów -->
            <Border Grid.Column="2" Style="{StaticResource AccentCard}">
                <StackPanel>
                    <TextBlock Text="Porównanie okresów" Style="{StaticResource CardHeader}" FontSize="18" FontWeight="Bold"/>

                    <Grid Margin="0,4,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock Text="Poprzedni: " Style="{StaticResource CardHeader}" Opacity="0.75"/>
                            <TextBlock Text="{Binding PreviousPeriodLabel}" Style="{StaticResource CardHeader}" Opacity="0.75"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="Obecny: " Style="{StaticResource CardHeader}" Opacity="0.75"/>
                            <TextBlock Text="{Binding PeriodLabel}" Style="{StaticResource CardHeader}" Opacity="0.75"/>
                        </StackPanel>
                    </Grid>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Wydatki:" Style="{StaticResource KpiInlineLabel}"/>
                        <TextBlock Text="{Binding DeltaExpensesStr, FallbackValue=Brak danych, TargetNullValue=Brak danych}"
                                   Style="{StaticResource KpiInlineValueNormal}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Przychody:" Style="{StaticResource KpiInlineLabel}"/>
                        <TextBlock Text="{Binding DeltaIncomesStr, FallbackValue=Brak danych, TargetNullValue=Brak danych}"
                                   Style="{StaticResource KpiInlineValueNormal}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Bilans:" Style="{StaticResource KpiInlineLabel}" Margin="0,0,6,0"/>
                        <TextBlock Text="{Binding DeltaBalanceStr, FallbackValue=Brak danych, TargetNullValue=Brak danych}"
                                   Style="{StaticResource KpiInlineValueNormal}" Margin="0,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- ROW 1: PeriodBar -->
        <Border Grid.Row="1" Background="Transparent" Margin="0,0,0,8">
            <ctrls:PeriodBarControl x:Name="PeriodBar"
                                    HorizontalAlignment="Center"
                                    StartDate="{Binding FromDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    EndDate="{Binding ToDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </Border>

        <!-- ROW 2: Global Export -->
        <Border Grid.Row="2" Background="Transparent" Margin="0,0,0,12">
            <Button Content="Pobierz raport całościowy (PDF)"
                    Style="{StaticResource PrimaryButton}"
                    HorizontalAlignment="Center"
                    FontSize="18"
                    FontWeight="Bold"
                    Padding="34,16"
                    MinWidth="420"
                    Click="ExportButton_Click"/>
        </Border>

        <!-- ROW 3: Tabs (puste treści) -->
        <Border Grid.Row="3" Background="Transparent">
            <TabControl Style="{StaticResource ReportsTabControlStyle}"
                        SelectedIndex="{Binding SelectedTabIndex, Mode=TwoWay}">

                <TabControl.ItemContainerStyle>
                    <Style TargetType="TabItem" BasedOn="{StaticResource ReportsTabItemStyle}"/>
                </TabControl.ItemContainerStyle>

                <TabItem Header="Przegląd ogólny">
                    <Grid/>
                </TabItem>

                <TabItem Header="Budżety">
                    <Grid/>
                </TabItem>

                <TabItem Header="Inwestycje">
                    <Grid/>
                </TabItem>

                <TabItem Header="Kategorie">
                    <Grid/>
                </TabItem>

                <TabItem Header="Kredyty">
                    <Grid/>
                </TabItem>

                <TabItem Header="Cele">
                    <Grid/>
                </TabItem>

                <TabItem Header="Symulacja">
                    <Grid/>
                </TabItem>

            </TabControl>
        </Border>

    </Grid>
</UserControl>
