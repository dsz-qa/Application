<UserControl x:Class="Finly.Pages.ReportsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ctrls="clr-namespace:Finly.Views.Controls"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             x:Name="Root"
             Background="{DynamicResource App.Background}"
             SnapsToDevicePixels="True"
             UseLayoutRounding="True"
             TextOptions.TextFormattingMode="Display"
             TextOptions.TextRenderingMode="ClearType"
             Foreground="{DynamicResource App.Foreground}">

    <UserControl.Resources>

        <!-- ===================== CARDS / KPI ===================== -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource Surface.Background}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Surface.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="12"/>
        </Style>

        <Style x:Key="AccentCard" TargetType="Border" BasedOn="{StaticResource Card}">
            <Setter Property="BorderBrush" Value="{DynamicResource Brand.Blue}"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>

        <Style x:Key="CardHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
            <Setter Property="Opacity" Value="0.9"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="KpiValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="KpiInlineLabel" TargetType="TextBlock" BasedOn="{StaticResource KpiValueStyle}">
            <Setter Property="Margin" Value="0,0,6,6"/>
        </Style>

        <Style x:Key="KpiInlineValueNormal" TargetType="TextBlock" BasedOn="{StaticResource KpiValueStyle}">
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Opacity" Value="0.85"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <Style x:Key="KpiSubHeader" TargetType="TextBlock" BasedOn="{StaticResource CardHeader}">
            <Setter Property="Opacity" Value="0.75"/>
            <Setter Property="Margin" Value="0,4,0,10"/>
        </Style>

        <!-- ===================== TABCONTROL: niebieskie + aktywna pomarańczowa ramka ===================== -->
        <SolidColorBrush x:Key="Reports.TabBlue" Color="#1E66F5"/>
        <SolidColorBrush x:Key="Reports.TabBlueHover" Color="#2A74FF"/>
        <SolidColorBrush x:Key="Reports.TabOrange" Color="#FF8A00"/>
        <SolidColorBrush x:Key="Reports.TabText" Color="#FFFFFF"/>

        <Style x:Key="ReportsTabControlStyle" TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid SnapsToDevicePixels="True">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="64"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- pasek zakładek -->
                            <Border Grid.Row="0"
                                    Background="{DynamicResource Surface.Background}"
                                    BorderBrush="{DynamicResource Surface.Border}"
                                    BorderThickness="1"
                                    CornerRadius="10"
                                    Padding="6"
                                    SnapsToDevicePixels="True">
                                <UniformGrid Rows="1"
                                             IsItemsHost="True"
                                             VerticalAlignment="Stretch"
                                             HorizontalAlignment="Stretch"/>
                            </Border>

                            <!-- content -->
                            <Border Grid.Row="1"
                                    Background="Transparent"
                                    Padding="0"
                                    SnapsToDevicePixels="True">
                                <ContentPresenter x:Name="PART_SelectedContentHost"
                                                  ContentSource="SelectedContent"
                                                  HorizontalAlignment="Stretch"
                                                  VerticalAlignment="Stretch"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ReportsTabItemStyle" TargetType="TabItem">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource Reports.TabText}"/>
            <Setter Property="Background" Value="{StaticResource Reports.TabBlue}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Margin" Value="4,0,4,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="0"
                                SnapsToDevicePixels="True">
                            <ContentPresenter ContentSource="Header"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource Reports.TabBlueHover}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource Reports.TabOrange}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ===================== FILTRY (jak na CategoriesPage) ===================== -->
        <Style x:Key="ModeFilterButton" TargetType="ToggleButton">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="56"/>
            <Setter Property="Background" Value="{DynamicResource Brand.Blue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Brand.Blue}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="10,6"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.95"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource Separator.Orange}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ===================== MiniTable: transakcje ===================== -->
        <DataTemplate x:Key="TxTableHeaderTemplate">
            <Border Style="{StaticResource MiniTableHeaderBorder}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="140"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Data" Style="{StaticResource MiniTableHeaderText}"/>
                    <TextBlock Grid.Column="1" Text="Typ" Style="{StaticResource MiniTableHeaderText}"/>
                    <TextBlock Grid.Column="2" Text="Kategoria / Konto" Style="{StaticResource MiniTableHeaderText}"/>
                    <TextBlock Grid.Column="3" Text="Kwota" Style="{StaticResource MiniTableHeaderText}" TextAlignment="Right"/>
                </Grid>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="TxTableRowTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="140"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding Date, StringFormat={}{0:dd.MM.yyyy}}"
                           Style="{StaticResource MiniTableCellText}"/>

                <TextBlock Grid.Column="1"
                           Text="{Binding Type}"
                           Style="{StaticResource MiniTableCellText}"/>

                <StackPanel Grid.Column="2" Orientation="Vertical">
                    <TextBlock Text="{Binding Category}" Style="{StaticResource MiniTableCellText}" Margin="6,2,6,0"/>
                    <TextBlock Text="{Binding Account}" Style="{StaticResource MiniTableCellText}" Opacity="0.75" Margin="6,0,6,2"/>
                </StackPanel>

                <TextBlock Grid.Column="3"
                           Text="{Binding Amount, StringFormat={}{0:N2} zł}"
                           Style="{StaticResource MiniTableCellText}"
                           TextAlignment="Right"/>
            </Grid>
        </DataTemplate>

        <!-- ===================== Podium (jak w CategoriesPage) ===================== -->
        <DataTemplate x:Key="PodiumPlaceTileTemplate">
            <Border CornerRadius="6"
                    Background="{Binding Bg}"
                    Padding="{Binding Pad}"
                    SnapsToDevicePixels="True">
                <StackPanel>
                    <TextBlock Text="{Binding Title}"
                               FontWeight="{Binding TitleWeight}"
                               Foreground="{Binding TitleFg}"
                               FontSize="{Binding TitleSize}"
                               TextAlignment="Center"
                               TextWrapping="Wrap"/>
                    <TextBlock Text="{Binding Amount}"
                               Foreground="{Binding AmountFg}"
                               FontSize="{Binding AmountSize}"
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>
        </DataTemplate>

    </UserControl.Resources>

    <!-- ===================== MAIN LAYOUT ===================== -->
    <Grid Margin="12,0,12,12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ROW 0: KPI -->
        <Grid Grid.Row="0" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource AccentCard}" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Obecny okres" Style="{StaticResource CardHeader}" FontSize="18" FontWeight="Bold"/>
                    <TextBlock Text="{Binding PeriodLabel, FallbackValue=Brak danych, TargetNullValue=Brak danych}"
                               Style="{StaticResource KpiSubHeader}"/>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Wydatki:" Style="{StaticResource KpiInlineLabel}"/>
                        <TextBlock Text="{Binding TotalExpensesStr, FallbackValue=Brak danych, TargetNullValue=Brak danych}"
                                   Style="{StaticResource KpiInlineValueNormal}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Przychody:" Style="{StaticResource KpiInlineLabel}"/>
                        <TextBlock Text="{Binding TotalIncomesStr, FallbackValue=Brak danych, TargetNullValue=Brak danych}"
                                   Style="{StaticResource KpiInlineValueNormal}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Bilans:" Style="{StaticResource KpiInlineLabel}" Margin="0,0,6,0"/>
                        <TextBlock Text="{Binding BalanceStr, FallbackValue=Brak danych, TargetNullValue=Brak danych}"
                                   Style="{StaticResource KpiInlineValueNormal}" Margin="0,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Style="{StaticResource AccentCard}" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Poprzedni okres" Style="{StaticResource CardHeader}" FontSize="18" FontWeight="Bold"/>
                    <TextBlock Text="{Binding PreviousPeriodLabel, FallbackValue=Brak danych, TargetNullValue=Brak danych}"
                               Style="{StaticResource KpiSubHeader}"/>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Wydatki:" Style="{StaticResource KpiInlineLabel}"/>
                        <TextBlock Text="{Binding PreviousTotalExpensesStr, FallbackValue=Brak danych, TargetNullValue=Brak danych}"
                                   Style="{StaticResource KpiInlineValueNormal}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Przychody:" Style="{StaticResource KpiInlineLabel}"/>
                        <TextBlock Text="{Binding PreviousTotalIncomesStr, FallbackValue=Brak danych, TargetNullValue=Brak danych}"
                                   Style="{StaticResource KpiInlineValueNormal}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Bilans:" Style="{StaticResource KpiInlineLabel}" Margin="0,0,6,0"/>
                        <TextBlock Text="{Binding PreviousBalanceStr, FallbackValue=Brak danych, TargetNullValue=Brak danych}"
                                   Style="{StaticResource KpiInlineValueNormal}" Margin="0,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Style="{StaticResource AccentCard}">
                <StackPanel>
                    <TextBlock Text="Porównanie okresów" Style="{StaticResource CardHeader}" FontSize="18" FontWeight="Bold"/>

                    <Grid Margin="0,4,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock Text="Poprzedni: " Style="{StaticResource CardHeader}" Opacity="0.75"/>
                            <TextBlock Text="{Binding PreviousPeriodLabel}" Style="{StaticResource CardHeader}" Opacity="0.75"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="Obecny: " Style="{StaticResource CardHeader}" Opacity="0.75"/>
                            <TextBlock Text="{Binding PeriodLabel}" Style="{StaticResource CardHeader}" Opacity="0.75"/>
                        </StackPanel>
                    </Grid>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Wydatki:" Style="{StaticResource KpiInlineLabel}"/>
                        <TextBlock Text="{Binding DeltaExpensesStr, FallbackValue=Brak danych, TargetNullValue=Brak danych}"
                                   Style="{StaticResource KpiInlineValueNormal}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Przychody:" Style="{StaticResource KpiInlineLabel}"/>
                        <TextBlock Text="{Binding DeltaIncomesStr, FallbackValue=Brak danych, TargetNullValue=Brak danych}"
                                   Style="{StaticResource KpiInlineValueNormal}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Bilans:" Style="{StaticResource KpiInlineLabel}" Margin="0,0,6,0"/>
                        <TextBlock Text="{Binding DeltaBalanceStr, FallbackValue=Brak danych, TargetNullValue=Brak danych}"
                                   Style="{StaticResource KpiInlineValueNormal}" Margin="0,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- ROW 1: PeriodBar -->
        <Border Grid.Row="1" Background="Transparent" Margin="0,0,0,8">
            <ctrls:PeriodBarControl x:Name="PeriodBar"
                                    HorizontalAlignment="Center"
                                    StartDate="{Binding FromDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    EndDate="{Binding ToDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </Border>

        <!-- ROW 2: Global Export -->
        <Border Grid.Row="2" Background="Transparent" Margin="0,0,0,12">
            <Button Content="Pobierz raport całościowy (PDF)"
                    Style="{StaticResource PrimaryButton}"
                    HorizontalAlignment="Center"
                    FontSize="18"
                    FontWeight="Bold"
                    Padding="34,16"
                    MinWidth="420"
                    Click="ExportButton_Click"/>
        </Border>

        <!-- ROW 3: Tabs -->
        <Border Grid.Row="3" Background="Transparent">
            <TabControl Style="{StaticResource ReportsTabControlStyle}"
                        SelectedIndex="{Binding SelectedTabIndex, Mode=TwoWay}">
                <TabControl.ItemContainerStyle>
                    <Style TargetType="TabItem" BasedOn="{StaticResource ReportsTabItemStyle}"/>
                </TabControl.ItemContainerStyle>

                <!-- ===================== TAB 1: PRZEGLĄD OGÓLNY ===================== -->
                <TabItem Header="Przegląd ogólny">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="0,12,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- LEWA KOLUMNA -->
                            <Grid Grid.Column="0" Margin="0,0,10,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Wykres 1: Ilość -->
                                <Border Grid.Row="0" Style="{StaticResource Card}" Margin="0,0,0,10">
                                    <StackPanel>
                                        <TextBlock Text="Ilość transakcji (okres)" Style="{StaticResource CardHeader}" FontSize="16" FontWeight="Bold"/>
                                        <lvc:CartesianChart Height="240"
                                                           Series="{Binding OverviewCountSeries}"
                                                           XAxes="{Binding OverviewCountAxesX}"
                                                           YAxes="{Binding OverviewCountAxesY}"/>
                                    </StackPanel>
                                </Border>

                                <!-- Wykres 2: Wartość -->
                                <Border Grid.Row="1" Style="{StaticResource Card}" Margin="0,0,0,10">
                                    <StackPanel>
                                        <TextBlock Text="Wartość transakcji (zł) (okres)" Style="{StaticResource CardHeader}" FontSize="16" FontWeight="Bold"/>
                                        <lvc:CartesianChart Height="240"
                                                           Series="{Binding OverviewAmountSeries}"
                                                           XAxes="{Binding OverviewAmountAxesX}"
                                                           YAxes="{Binding OverviewAmountAxesY}"/>
                                    </StackPanel>
                                </Border>

                                <!-- PODIUM (jak w CategoriesPage) -->
                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Podium wydatków -->
                                    <Border Grid.Column="0" Style="{StaticResource Card}" Margin="0,0,10,0">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0"
                                                       Text="TOP 3 wydatki"
                                                       Style="{StaticResource CardHeader}"
                                                       FontSize="16"
                                                       FontWeight="Bold"
                                                       TextAlignment="Center"
                                                       HorizontalAlignment="Center"/>

                                            <Grid Grid.Row="1" Margin="0,12,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- 2 -->
                                                <StackPanel Grid.Column="0" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="4,0">
                                                    <TextBlock Text="2" FontSize="18" FontWeight="Bold"
                                                               Foreground="{DynamicResource App.Foreground}"
                                                               HorizontalAlignment="Center"/>
                                                    <Border Margin="0,4,0,0"
                                                            CornerRadius="6"
                                                            Background="{DynamicResource Sidebar.Hover}"
                                                            Padding="8"
                                                            >
                                                        <StackPanel>
                                                            <TextBlock Text="{Binding TopExp2.Category, TargetNullValue=Brak danych}"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="{DynamicResource App.Foreground}"
                                                                       FontSize="12"
                                                                       TextAlignment="Center"
                                                                       TextWrapping="Wrap"/>
                                                            <TextBlock Text="{Binding TopExp2.AmountStr, TargetNullValue=—}"
                                                                       Foreground="{DynamicResource App.Foreground}"
                                                                       FontSize="11"
                                                                       TextAlignment="Center"/>
                                                        </StackPanel>
                                                    </Border>
                                                </StackPanel>

                                                <!-- 1 -->
                                                <StackPanel Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="4,0">
                                                    <TextBlock Text="1" FontSize="20" FontWeight="Bold"
                                                               Foreground="{DynamicResource Separator.Orange}"
                                                               HorizontalAlignment="Center"/>
                                                    <Border Margin="0,4,0,0"
                                                            CornerRadius="6"
                                                            Background="{DynamicResource Brand.Blue}"
                                                            Padding="10"
                                                            >
                                                        <StackPanel>
                                                            <TextBlock Text="{Binding TopExp1.Category, TargetNullValue=Brak danych}"
                                                                       FontWeight="Bold"
                                                                       Foreground="{DynamicResource OnAccent}"
                                                                       FontSize="13"
                                                                       TextAlignment="Center"
                                                                       TextWrapping="Wrap"/>
                                                            <TextBlock Text="{Binding TopExp1.AmountStr, TargetNullValue=—}"
                                                                       Foreground="{DynamicResource OnAccent}"
                                                                       FontSize="12"
                                                                       TextAlignment="Center"/>
                                                        </StackPanel>
                                                    </Border>
                                                </StackPanel>

                                                <!-- 3 -->
                                                <StackPanel Grid.Column="2" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="4,0">
                                                    <TextBlock Text="3" FontSize="18" FontWeight="Bold"
                                                               Foreground="{DynamicResource App.Foreground}"
                                                               HorizontalAlignment="Center"/>
                                                    <Border Margin="0,4,0,0"
                                                            CornerRadius="6"
                                                            Background="{DynamicResource Surface.Border}"
                                                            Padding="8"
                                                            >
                                                        <StackPanel>
                                                            <TextBlock Text="{Binding TopExp3.Category, TargetNullValue=Brak danych}"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="{DynamicResource App.Foreground}"
                                                                       FontSize="12"
                                                                       TextAlignment="Center"
                                                                       TextWrapping="Wrap"/>
                                                            <TextBlock Text="{Binding TopExp3.AmountStr, TargetNullValue=—}"
                                                                       Foreground="{DynamicResource App.Foreground}"
                                                                       FontSize="11"
                                                                       TextAlignment="Center"/>
                                                        </StackPanel>
                                                    </Border>
                                                </StackPanel>
                                            </Grid>
                                        </Grid>
                                    </Border>

                                    <!-- Podium przychodów -->
                                    <Border Grid.Column="1" Style="{StaticResource Card}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0"
                                                       Text="TOP 3 przychody"
                                                       Style="{StaticResource CardHeader}"
                                                       FontSize="16"
                                                       FontWeight="Bold"
                                                       TextAlignment="Center"
                                                       HorizontalAlignment="Center"/>

                                            <Grid Grid.Row="1" Margin="0,12,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- 2 -->
                                                <StackPanel Grid.Column="0" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="4,0">
                                                    <TextBlock Text="2" FontSize="18" FontWeight="Bold"
                                                               Foreground="{DynamicResource App.Foreground}"
                                                               HorizontalAlignment="Center"/>
                                                    <Border Margin="0,4,0,0"
                                                            CornerRadius="6"
                                                            Background="{DynamicResource Sidebar.Hover}"
                                                            Padding="8"
                                                            >
                                                        <StackPanel>
                                                            <TextBlock Text="{Binding TopInc2.Category, TargetNullValue=Brak danych}"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="{DynamicResource App.Foreground}"
                                                                       FontSize="12"
                                                                       TextAlignment="Center"
                                                                       TextWrapping="Wrap"/>
                                                            <TextBlock Text="{Binding TopInc2.AmountStr, TargetNullValue=—}"
                                                                       Foreground="{DynamicResource App.Foreground}"
                                                                       FontSize="11"
                                                                       TextAlignment="Center"/>
                                                        </StackPanel>
                                                    </Border>
                                                </StackPanel>

                                                <!-- 1 -->
                                                <StackPanel Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="4,0">
                                                    <TextBlock Text="1" FontSize="20" FontWeight="Bold"
                                                               Foreground="{DynamicResource Separator.Orange}"
                                                               HorizontalAlignment="Center"/>
                                                    <Border Margin="0,4,0,0"
                                                            CornerRadius="6"
                                                            Background="{DynamicResource Brand.Blue}"
                                                            Padding="10"
                                                            >
                                                        <StackPanel>
                                                            <TextBlock Text="{Binding TopInc1.Category, TargetNullValue=Brak danych}"
                                                                       FontWeight="Bold"
                                                                       Foreground="{DynamicResource OnAccent}"
                                                                       FontSize="13"
                                                                       TextAlignment="Center"
                                                                       TextWrapping="Wrap"/>
                                                            <TextBlock Text="{Binding TopInc1.AmountStr, TargetNullValue=—}"
                                                                       Foreground="{DynamicResource OnAccent}"
                                                                       FontSize="12"
                                                                       TextAlignment="Center"/>
                                                        </StackPanel>
                                                    </Border>
                                                </StackPanel>

                                                <!-- 3 -->
                                                <StackPanel Grid.Column="2" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="4,0">
                                                    <TextBlock Text="3" FontSize="18" FontWeight="Bold"
                                                               Foreground="{DynamicResource App.Foreground}"
                                                               HorizontalAlignment="Center"/>
                                                    <Border Margin="0,4,0,0"
                                                            CornerRadius="6"
                                                            Background="{DynamicResource Surface.Border}"
                                                            Padding="8"
                                                            >
                                                        <StackPanel>
                                                            <TextBlock Text="{Binding TopInc3.Category, TargetNullValue=Brak danych}"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="{DynamicResource App.Foreground}"
                                                                       FontSize="12"
                                                                       TextAlignment="Center"
                                                                       TextWrapping="Wrap"/>
                                                            <TextBlock Text="{Binding TopInc3.AmountStr, TargetNullValue=—}"
                                                                       Foreground="{DynamicResource App.Foreground}"
                                                                       FontSize="11"
                                                                       TextAlignment="Center"/>
                                                        </StackPanel>
                                                    </Border>
                                                </StackPanel>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Grid>

                            <!-- PRAWA KOLUMNA -->
                            <Border Grid.Column="1" Style="{StaticResource Card}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Export zakładki -->
                                    <Button Grid.Row="0"
                                            Content="Eksportuj ten raport (PDF)"
                                            Style="{StaticResource PrimaryButton}"
                                            HorizontalAlignment="Right"
                                            Padding="16,10"
                                            Command="{Binding ExportPdfCommand}"
                                            CommandParameter="overview"/>

                                    <TextBlock Grid.Row="1"
                                               Text="Wszystkie transakcje z okresu"
                                               Style="{StaticResource CardHeader}"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Margin="0,10,0,10"/>

                                    <!-- Filtry (jak CategoriesPage) -->
                                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                                        <ToggleButton Style="{StaticResource ModeFilterButton}"
                                                      IsChecked="{Binding FilterAll, Mode=TwoWay}">
                                            <TextBlock Text="Wszystko"/>
                                        </ToggleButton>

                                        <ToggleButton Style="{StaticResource ModeFilterButton}"
                                                      Margin="10,0,0,0"
                                                      IsChecked="{Binding FilterIncomes, Mode=TwoWay}">
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Image Source="/Assets/Icons/przychody.png"
                                                       Width="22" Height="22"
                                                       Stretch="Uniform"
                                                       Margin="0,0,8,0"/>
                                                <TextBlock Text="Przychody"/>
                                            </StackPanel>
                                        </ToggleButton>

                                        <ToggleButton Style="{StaticResource ModeFilterButton}"
                                                      Margin="10,0,0,0"
                                                      IsChecked="{Binding FilterExpenses, Mode=TwoWay}">
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Image Source="/Assets/Icons/wydatki.png"
                                                       Width="22" Height="22"
                                                       Stretch="Uniform"
                                                       Margin="0,0,8,0"/>
                                                <TextBlock Text="Wydatki"/>
                                            </StackPanel>
                                        </ToggleButton>

                                        <ToggleButton Style="{StaticResource ModeFilterButton}"
                                                      Margin="10,0,0,0"
                                                      IsChecked="{Binding FilterTransfers, Mode=TwoWay}">
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Image Source="/Assets/Icons/transfer.png"
                                                       Width="22" Height="22"
                                                       Stretch="Uniform"
                                                       Margin="0,0,8,0"/>
                                                <TextBlock Text="Transfery"/>
                                            </StackPanel>
                                        </ToggleButton>
                                    </StackPanel>

                                    <!-- MiniTable -->
                                    <Border Grid.Row="3" Style="{StaticResource MiniTableCard}">
                                        <ctrls:MiniTableControl ItemsSource="{Binding TransactionsView}"
                                                                HeaderTemplate="{StaticResource TxTableHeaderTemplate}"
                                                                RowTemplate="{StaticResource TxTableRowTemplate}"
                                                                SelectionMode="Single"
                                                                VerticalScrollBarVisibility="Auto"
                                                                HorizontalScrollBarVisibility="Disabled"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </Grid>
                    </ScrollViewer>
                </TabItem>

                <TabItem Header="Budżety">
                    <Grid/>
                </TabItem>
                <TabItem Header="Inwestycje">
                    <Grid/>
                </TabItem>
                <TabItem Header="Kategorie">
                    <Grid/>
                </TabItem>
                <TabItem Header="Kredyty">
                    <Grid/>
                </TabItem>
                <TabItem Header="Cele">
                    <Grid/>
                </TabItem>
                <TabItem Header="Symulacja">
                    <Grid/>
                </TabItem>
            </TabControl>
        </Border>
    </Grid>
</UserControl>
