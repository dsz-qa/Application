<UserControl x:Class="Finly.Pages.ReportsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ctrls="clr-namespace:Finly.Views.Controls">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Raporty miesięczne" FontSize="18" FontWeight="Bold"/>

        <StackPanel Orientation="Horizontal" Margin="0,12,0,12" Grid.Row="1" VerticalAlignment="Center" >
            <TextBlock Text="Zakres:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <DatePicker x:Name="FromDatePicker" Width="140"/>
            <TextBlock Text="—" VerticalAlignment="Center" Margin="6,0"/>
            <DatePicker x:Name="ToDatePicker" Width="140" Margin="0,0,8,0"/>
            <Button x:Name="ThisMonthBtn" Content="Ten miesiąc" Click="ThisMonthBtn_Click" Margin="4,0"/>
            <Button x:Name="RefreshBtn" Content="Odśwież" Click="RefreshBtn_Click" Margin="4,0"/>
            <StackPanel Orientation="Vertical" Margin="16,0,0,0" VerticalAlignment="Center">
                <TextBlock Text="Odłożone (stan):" FontWeight="SemiBold"/>
                <TextBlock x:Name="SavedAmountText" Text="—" />
            </StackPanel>
        </StackPanel>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Obszar wykresu -->
            <Border Grid.Column="0" Padding="12" Background="Transparent">
                <Grid>
                    <ctrls:DonutChartControl x:Name="PieCanvas" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                    <TextBlock x:Name="NoDataText" Text="Brak wydatków w wybranym okresie"
                               Visibility="Collapsed" FontStyle="Italic"
                               HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Grid>
            </Border>

            <!-- Legenda + tabela -->
            <StackPanel Grid.Column="1" Margin="12,0,0,0" >
                <StackPanel x:Name="LegendStack" Orientation="Vertical" Margin="0,0,0,8"/>
                <DataGrid x:Name="ReportGrid" AutoGenerateColumns="False" IsReadOnly="True"
                          CanUserAddRows="False" HeadersVisibility="Column"
                          Height="260">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Kategoria" Binding="{Binding Category}" Width="*"/>
                        <DataGridTextColumn Header="Kwota" Binding="{Binding Amount, StringFormat=N2}" Width="*"/>
                        <DataGridTextColumn Header="Udział (%)" Binding="{Binding SharePercent, StringFormat=N1}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>