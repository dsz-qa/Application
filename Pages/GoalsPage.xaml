<UserControl x:Class="Finly.Pages.GoalsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Finly.Pages"
             mc:Ignorable="d">

    <UserControl.Resources>

        <!-- Style jak w BanksPage -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background"      Value="{DynamicResource Surface.Background}"/>
            <Setter Property="BorderBrush"     Value="{DynamicResource Surface.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius"    Value="10"/>
            <Setter Property="Padding"         Value="12"/>
            <Setter Property="Margin"          Value="0,12,16,0"/>
        </Style>

        <Style x:Key="AccentCard" TargetType="Border" BasedOn="{StaticResource Card}">
            <Setter Property="BorderBrush"     Value="{DynamicResource Brand.Blue}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Margin"          Value="0,16,16,0"/>
        </Style>

        <Style x:Key="CardHeader" TargetType="TextBlock">
            <Setter Property="FontSize"   Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
            <Setter Property="Opacity"    Value="0.9"/>
        </Style>

        <Style x:Key="KpiValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize"   Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin"     Value="0,4,0,0"/>
            <Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
        </Style>

        <!-- KARTA CELU (z paskiem postępu) -->
        <DataTemplate DataType="{x:Type local:GoalVm}">
            <Border Style="{StaticResource Card}"
                    Width="340">
                <StackPanel>

                    <!-- nazwa + ikonka celu -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <Image Source="/Assets/Icons/cel.png"
                               Width="22" Height="22"
                               Margin="0,0,6,0"
                               VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Name}"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Docelowa kwota: "
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource App.Foreground}"/>
                        <TextBlock Text="{Binding TargetAmount, StringFormat={}{0:N2} zł}"
                                   Foreground="{DynamicResource App.Foreground}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Już odłożone: "
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource App.Foreground}"/>
                        <TextBlock Text="{Binding CurrentAmount, StringFormat={}{0:N2} zł}"
                                   Foreground="{DynamicResource App.Foreground}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Do celu pozostało: "
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource App.Foreground}"/>
                        <TextBlock Text="{Binding Remaining, StringFormat={}{0:N2} zł}"
                                   Foreground="{DynamicResource App.Foreground}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Termin: "
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource App.Foreground}"/>
                        <TextBlock Text="{Binding DueDate, StringFormat={}{0:dd.MM.yyyy}}"
                                   Foreground="{DynamicResource App.Foreground}"/>
                    </StackPanel>

                    <!-- pasek postępu -->
                    <StackPanel Margin="0,6,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Zrealizowano: "
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource App.Foreground}"/>
                            <TextBlock Text="{Binding CompletionPercent, StringFormat={}{0:N0}%}"
                                       Foreground="{DynamicResource App.Foreground}"/>
                        </StackPanel>

                        <ProgressBar Height="6"
                                     Margin="0,4,0,0"
                                     Minimum="0"
                                     Maximum="100"
                                     Value="{Binding CompletionPercent, Mode=OneWay}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                        <TextBlock Text="Miesięcznie musisz odkładać: "
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource App.Foreground}"/>
                        <TextBlock Text="{Binding MonthlyNeeded, StringFormat={}{0:N2} zł}"
                                   Foreground="{DynamicResource App.Foreground}"/>
                    </StackPanel>

                    <TextBlock Text="{Binding Description}"
                               Margin="0,6,0,0"
                               TextWrapping="Wrap"
                               Foreground="{DynamicResource App.Foreground}"/>

                    <!-- PRZYCISKI EDYTUJ / USUŃ DLA TEGO CELU -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,10,0,0">
                        <Button Click="EditGoal_Click"
                                Margin="0,0,8,0"
                                Padding="8,4"
                                MinWidth="80">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Assets/Icons/edit.png"
                                       Width="16" Height="16"
                                       Margin="0,0,4,0"/>
                                <TextBlock Text="Edytuj"/>
                            </StackPanel>
                        </Button>

                        <Button Click="DeleteGoal_Click"
                                Padding="8,4"
                                MinWidth="80">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Assets/Icons/delete.png"
                                       Width="16" Height="16"
                                       Margin="0,0,4,0"/>
                                <TextBlock Text="Usuń"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- PANEL POTWIERDZENIA USUNIĘCIA CELU -->
                    <StackPanel x:Name="GoalDeleteConfirmPanel"
                                Orientation="Vertical"
                                Margin="0,6,0,0"
                                Visibility="Collapsed">
                        <TextBlock Text="Czy na pewno chcesz usunąć ten cel?"
                                   FontSize="12"
                                   Foreground="{DynamicResource App.Foreground}"
                                   Margin="0,0,0,4"/>
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Right">
                            <Button Content="Tak"
                                    Margin="0,0,8,0"
                                    Padding="8,3"
                                    MinWidth="60"
                                    Click="DeleteGoalConfirm_Click"/>
                            <Button Content="Nie"
                                    Padding="8,3"
                                    MinWidth="60"
                                    Click="DeleteGoalCancel_Click"/>
                        </StackPanel>
                    </StackPanel>

                </StackPanel>
            </Border>
        </DataTemplate>

        <!-- KAFEL „DODAJ CEL” -->
        <DataTemplate DataType="{x:Type local:AddGoalTile}">
            <Border Style="{StaticResource Card}"
                    Width="260"
                    Cursor="Hand"
                    MouseLeftButtonUp="AddGoalCard_Click">
                <Grid>
                    <Border Margin="10"
                            BorderThickness="1"
                            CornerRadius="8"
                            BorderBrush="{DynamicResource Surface.Border}"/>
                    <StackPanel HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="0,16,0,16">
                        <TextBlock Text="+"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource App.Foreground}"/>
                        <TextBlock Text="Dodaj cel"
                                   Margin="0,6,0,0"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource App.Foreground}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- GÓRA: KPI -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource AccentCard}">
                    <StackPanel>
                        <TextBlock Text="Cele – łączna kwota do uzbierania"
                                   Style="{StaticResource CardHeader}"
                                   FontSize="18"
                                   FontWeight="Bold"/>
                        <TextBlock x:Name="TotalGoalsAmountText"
                                   Style="{StaticResource KpiValueStyle}"
                                   FontSize="24"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Style="{StaticResource AccentCard}">
                    <StackPanel>
                        <TextBlock Text="Już odłożone na cele"
                                   Style="{StaticResource CardHeader}"
                                   FontSize="18"
                                   FontWeight="Bold"/>
                        <TextBlock x:Name="TotalGoalsSavedText"
                                   Style="{StaticResource KpiValueStyle}"
                                   FontSize="24"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Style="{StaticResource AccentCard}">
                    <StackPanel>
                        <TextBlock Text="Łącznie miesięcznie trzeba odkładać"
                                   Style="{StaticResource CardHeader}"
                                   FontSize="18"
                                   FontWeight="Bold"/>
                        <TextBlock x:Name="TotalMonthlyNeededText"
                                   Style="{StaticResource KpiValueStyle}"
                                   FontSize="24"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- LISTA CELÓW + kafel Dodaj -->
            <StackPanel Grid.Row="1" Margin="0,12,0,0">
                <Separator Height="1"
                           Background="{DynamicResource Surface.Border}"
                           Opacity="0.8"
                           Margin="0,0,0,8"/>

                <TextBlock Text="Cele"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="{DynamicResource App.Foreground}"
                           Margin="0,4,0,12"/>

                <ItemsControl x:Name="GoalsRepeater" Margin="0,8,0,0">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel HorizontalAlignment="Stretch"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </StackPanel>

            <!-- FORMULARZ DODAWANIA / EDYCJI CELU -->
            <Border x:Name="FormBorder"
                    Grid.Row="2"
                    Margin="0,16,0,24"
                    Background="Transparent"
                    BorderBrush="{DynamicResource Surface.Border}"
                    BorderThickness="1"
                    CornerRadius="10"
                    Padding="16"
                    Visibility="Collapsed">
                <StackPanel HorizontalAlignment="Center"
                            MaxWidth="600">

                    <!-- TU NAZWA, KTÓRĄ WIDZI C# (FormHeader) -->
                    <TextBlock x:Name="FormHeader"
                               Text="Dodaj cel"
                               FontSize="18"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource App.Foreground}"/>

                    <Grid Margin="0,12,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="220"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Text="Nazwa:"
                                   Margin="0,4,8,4"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource App.Foreground}"/>
                        <TextBox x:Name="GoalNameBox"
                                 Grid.Row="0" Grid.Column="1"/>

                        <TextBlock Grid.Row="1" Grid.Column="0"
                                   Text="Docelowa kwota:"
                                   Margin="0,4,8,4"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource App.Foreground}"/>
                        <TextBox x:Name="GoalTargetBox"
                                 Grid.Row="1" Grid.Column="1"
                                 HorizontalContentAlignment="Right"
                                 Text="0,00"
                                 GotFocus="AmountBox_GotFocus"
                                 LostFocus="AmountBox_LostFocus"/>

                        <TextBlock Grid.Row="2" Grid.Column="0"
                                   Text="Już odłożone:"
                                   Margin="0,4,8,4"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource App.Foreground}"/>
                        <TextBox x:Name="GoalCurrentBox"
                                 Grid.Row="2" Grid.Column="1"
                                 HorizontalContentAlignment="Right"
                                 Text="0,00"
                                 GotFocus="AmountBox_GotFocus"
                                 LostFocus="AmountBox_LostFocus"/>

                        <TextBlock Grid.Row="3" Grid.Column="0"
                                   Text="Termin (data):"
                                   Margin="0,4,8,4"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource App.Foreground}"/>
                        <DatePicker x:Name="GoalDueDatePicker"
                                    Grid.Row="3" Grid.Column="1"/>

                        <TextBlock Grid.Row="4" Grid.Column="0"
                                   Text="Opis:"
                                   Margin="0,4,8,4"
                                   VerticalAlignment="Top"
                                   Foreground="{DynamicResource App.Foreground}"/>
                        <TextBox x:Name="GoalDescriptionBox"
                                 Grid.Row="4" Grid.Column="1"
                                 Height="60"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"/>
                    </Grid>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,12,0,0">
                        <Button Content="Dodaj cel"
                                Width="110"
                                Margin="0,0,8,0"
                                Click="AddGoal_Click"/>
                        <Button Content="Wyczyść"
                                Width="110"
                                Click="ClearGoalForm_Click"/>
                    </StackPanel>

                    <TextBlock x:Name="GoalFormMessage"
                               Margin="0,8,0,0"
                               HorizontalAlignment="Center"
                               Foreground="OrangeRed"/>
                </StackPanel>
            </Border>

        </Grid>
    </ScrollViewer>
</UserControl>
