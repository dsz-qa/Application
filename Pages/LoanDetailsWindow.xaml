<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="Finly.Pages.LoanDetailsWindow"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 Title="Szczegoly kredytu" Height="480" Width="720">
 <Grid Margin="12">
 <Grid.RowDefinitions>
 <RowDefinition Height="Auto"/>
 <RowDefinition Height="*"/>
 </Grid.RowDefinitions>

 <StackPanel Orientation="Horizontal">
 <TextBlock Name="LoanTitle" FontSize="18" FontWeight="Bold"/>
 <Button Content="Zamknij" HorizontalAlignment="Right" Margin="12,0,0,0" Click="Close_Click"/>
 </StackPanel>

 <TabControl Grid.Row="1" Margin="0,12,0,0">
 <TabItem Header="Przeglad">
 <ScrollViewer>
 <StackPanel Margin="6">
 <TextBlock Text="Parametry" FontWeight="Bold"/>
 <TextBlock Name="ParamsText" Margin="0,6,0,0"/>
 <TextBlock Text="Pozostala kwota" FontWeight="Bold" Margin="0,12,0,0"/>
 <TextBlock Name="RemainingText" FontSize="20" FontWeight="Bold" Foreground="OrangeRed"/>
 <TextBlock Name="PayoffInfo" Margin="0,8,0,0" Foreground="Gray"/>
 
 </StackPanel>
 </ScrollViewer>
 </TabItem>
 <TabItem Header="Harmonogram">
 <ScrollViewer>
 <StackPanel Margin="6">
 <TextBlock Text="(Tabela rat - w budowie)" Foreground="Gray"/>
 <Button Content="Eksport do PDF/Excel" Margin="0,8,0,0"/>
 </StackPanel>
 </ScrollViewer>
 </TabItem>
 <TabItem Header="Analiza / Nadplaty">
 <ScrollViewer>
 <StackPanel Margin="6">
 <TextBlock Text="(Wykres splate / symulacje - w budowie)" Foreground="Gray"/>
 <TextBlock Text="Symulacja nadplaty" FontWeight="Bold" Margin="0,8,0,0"/>
 <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
 <TextBox Name="ExtraAmountBox" Width="120"/>
 <Button Content="Symuluj" Margin="8,0,0,0" Click="Simulate_Click"/>
 </StackPanel>
 <TextBlock Name="SimResult" Margin="0,8,0,0"/>
 </StackPanel>
 </ScrollViewer>
 </TabItem>
 </TabControl>
 </Grid>
</Window>