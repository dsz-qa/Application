<UserControl x:Class="Finly.Pages.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <!-- zawartość bliżej sidebara, szerokość jak na AccountPage -->
        <Grid Margin="24,24,0,24"
              HorizontalAlignment="Left"
              Width="700">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Powiadomienia -->
                <RowDefinition Height="16"/>
                <RowDefinition Height="Auto"/>
                <!-- Logowanie -->
                <RowDefinition Height="16"/>
                <RowDefinition Height="Auto"/>
                <!-- Interfejs -->
                <RowDefinition Height="16"/>
                <RowDefinition Height="Auto"/>
                <!-- Informacje -->
            </Grid.RowDefinitions>

            <!-- ================== POWIADOMIENIA ================== -->
            <Border Grid.Row="0"
                    BorderBrush="{DynamicResource Brand.Blue}"
                    BorderThickness="2"
                    CornerRadius="6"
                    Padding="12"
                    Background="{DynamicResource Surface.Background}">
                <StackPanel>
                    <TextBlock Text="Powiadomienia"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,10"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="120"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="Pozycja powiadomień:"
                                   VerticalAlignment="Center"/>

                        <ComboBox x:Name="ToastPositionCombo"
                                  Grid.Column="1"
                                  Height="26"
                                  Margin="0,0,8,0"
                                  Background="Transparent"
                                  SelectionChanged="ToastPositionCombo_SelectionChanged">
                            <ComboBoxItem Content="Prawy górny" Tag="TopRight"/>
                            <ComboBoxItem Content="Prawy dolny" Tag="BottomRight"/>
                            <ComboBoxItem Content="Środek na dole" Tag="BottomCenter"/>
                        </ComboBox>

                        <Button Grid.Column="2"
                                x:Name="BtnShowTestToast"
                                Content="Wyświetl test"
                                Height="26"
                                Background="Transparent"
                                Click="BtnShowTestToast_Click"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- ================== LOGOWANIE ================== -->
            <Border Grid.Row="2"
                    BorderBrush="{DynamicResource Brand.Blue}"
                    BorderThickness="2"
                    CornerRadius="6"
                    Padding="12"
                    Background="{DynamicResource Surface.Background}">
                <StackPanel>
                    <TextBlock Text="Logowanie"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,10"/>

                    <CheckBox x:Name="AutoLoginCheckBox"
                              Content="Automatycznie loguj przy starcie aplikacji"
                              IsChecked="False"
                              Click="AutoLoginCheckBox_Click"/>
                </StackPanel>
            </Border>

            <!-- ================== INTERFEJS ================== -->
            <Border Grid.Row="4"
                    BorderBrush="{DynamicResource Brand.Blue}"
                    BorderThickness="2"
                    CornerRadius="6"
                    Padding="12"
                    Background="{DynamicResource Surface.Background}">
                <StackPanel>
                    <TextBlock Text="Interfejs"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,10"/>

                    <CheckBox x:Name="AnimationsCheckBox"
                              Content="Włącz animacje interfejsu"
                              IsChecked="True"
                              Click="AnimationsCheckBox_Click"/>
                </StackPanel>
            </Border>

            <!-- ================== INFORMACJE O APLIKACJI ================== -->
            <Border Grid.Row="6"
                    BorderBrush="{DynamicResource Brand.Blue}"
                    BorderThickness="2"
                    CornerRadius="6"
                    Padding="12"
                    Background="{DynamicResource Surface.Background}">
                <StackPanel>
                    <TextBlock Text="Informacje"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,10"/>

                    <TextBlock Margin="0,0,0,2">
                        <Run Text="Nazwa aplikacji: " FontWeight="Bold"/>
                        <Run Text="Finly"/>
                    </TextBlock>

                    <TextBlock Margin="0,0,0,2">
                        <Run Text="Autor: " FontWeight="Bold"/>
                        <Run Text="Dominika Szymańska, Łukasz Wysocki, Anna Michaliszyn"/>
                    </TextBlock>

                    <TextBlock TextWrapping="Wrap"
                               Margin="0,4,0,0">
                        <Run Text="Opis: " FontWeight="Bold"/>
                        <Run Text="Aplikacja do zarządzania finansami osobistymi i firmowymi."/>
                    </TextBlock>
                </StackPanel>
            </Border>

        </Grid>
    </ScrollViewer>
</UserControl>
