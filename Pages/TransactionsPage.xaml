<UserControl x:Class="Finly.Pages.TransactionsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ctrls="clr-namespace:Finly.Views.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:Finly.Pages"
             xmlns:vm="clr-namespace:Finly.ViewModels"
             x:Name="Root"
             mc:Ignorable="d">

    <UserControl.Resources>
        <!-- Usunięto dedykowane style edycji, korzystamy z tych samych ustawień co na AddExpensePage (proste pola 28px) -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:DateStringToPLConverter x:Key="DateStringToPLConverter"/>

        <!-- Styl kontenera edycji: ciemne tło, biała czcionka -->
        <Style x:Key="EditContainerBorder" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource Control.Background}"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="Margin" Value="4,0,0,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Visibility" Value="Collapsed"/>
        </Style>

        <!-- Mały przycisk ikonowy -->
        <Style x:Key="IconButtonSmall" TargetType="Button">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Background" Value="{DynamicResource Surface.Background}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Surface.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd"
                                        Property="Background"
                                        Value="{DynamicResource Btn.Hover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- KPI -->
        <Style x:Key="KpiValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,2,0,0"/>
            <Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
        </Style>

        <Style x:Key="KpiHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
            <Setter Property="Opacity" Value="1"/>
        </Style>

        <!-- Karta akcentowa KPI -->
        <Style x:Key="AccentCard" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Brand.Blue}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,16,0"/>
        </Style>

        <!-- Karty transakcji -->
        <Style x:Key="TransactionCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource Surface.Background}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Surface.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,16,12"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8"
                                      ShadowDepth="2"
                                      Opacity="0.16"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{DynamicResource Surface.Border}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TransactionCardPlanned"
               TargetType="Border"
               BasedOn="{StaticResource TransactionCard}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsPlanned}" Value="True">
                    <Setter Property="Opacity" Value="0.95"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PlannedLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
            <Setter Property="Opacity" Value="0.7"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Removed local FilterCheckBoxStyle; using global 'FilterCheckBox' in Styles/Controls.xaml -->

        <!-- Panel filtrów – nagłówek jako dowolny XAML (żeby można było dodać przycisk) -->
        <Style x:Key="FilterPanelStyle" TargetType="GroupBox">
            <Setter Property="Height" Value="220"/>
            <Setter Property="MinHeight" Value="220"/>
            <Setter Property="Margin" Value="0,0,16,0"/>
            <Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Surface.Border}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid Height="{TemplateBinding Height}"
                              ClipToBounds="True">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- HEADER: dowolny XAML przekazany w GroupBox.Header -->
                            <ContentPresenter Grid.Row="0"
                                              Content="{TemplateBinding Header}"
                                              Margin="0,0,0,6"
                                              VerticalAlignment="Center"/>

                            <!-- BODY -->
                            <Border Grid.Row="1"
                                    Background="{DynamicResource Surface.Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="10"
                                    Padding="10"
                                    SnapsToDevicePixels="True">
                                <ContentPresenter VerticalAlignment="Stretch"
                                                  HorizontalAlignment="Stretch"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Mały przycisk w nagłówkach filtrów -->
        <Style x:Key="FilterHeaderButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="6,0,0,0"/>
            <Setter Property="Padding" Value="6,0"/>
            <Setter Property="MinWidth" Value="64"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{DynamicResource Brand.Blue}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Brand.Blue}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="8,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- listy do edycji -->
        <x:Array x:Key="CategoriesForEditRes" Type="{x:Type sys:String}"/>
        <x:Array x:Key="AccountsForEditRes" Type="{x:Type sys:String}"/>

        <!-- Transaction card reusable template with Read/Edit modes -->
        <DataTemplate x:Key="TransactionCardTemplate">
            <Border Background="{DynamicResource Surface.Background}"
                    BorderBrush="{DynamicResource Surface.Border}"
                    BorderThickness="1"
                    CornerRadius="10"
                    Padding="12"
                    Margin="0,0,16,12"
                    SnapsToDevicePixels="True">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Read mode layer -->
                    <Grid x:Name="ReadMode" Grid.RowSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- LEFT info -->
                        <StackPanel Grid.Column="0" Orientation="Vertical" Margin="4,0,8,0">
                            <!-- Header: type icon + type label ONLY -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,6" VerticalAlignment="Center">
                                <Image Width="20" Height="20" Margin="0,0,6,0">
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Setter Property="Source" Value="/Assets/Icons/wydatki.png"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Kind}" Value="Expense">
                                                    <Setter Property="Source" Value="/Assets/Icons/wydatki.png"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Kind}" Value="Income">
                                                    <Setter Property="Source" Value="/Assets/Icons/przychody.png"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Kind}" Value="Transfer">
                                                    <Setter Property="Source" Value="/Assets/Icons/transfer.png"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>
                                <TextBlock FontWeight="Bold" FontSize="14" Foreground="{DynamicResource App.Foreground}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="Wydatek"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Kind}" Value="Expense">
                                                    <Setter Property="Text" Value="Wydatek"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Kind}" Value="Income">
                                                    <Setter Property="Text" Value="Przychód"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Kind}" Value="Transfer">
                                                    <Setter Property="Text" Value="Transfer"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>

                            <!-- ORDER: Data, Kwota, Konto, Kategoria, Opis -->
                            <!-- Data -->
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Data:" FontWeight="SemiBold" Foreground="{DynamicResource App.Foreground}" Margin="0,0,6,0"/>
                                <TextBlock Foreground="{DynamicResource App.Foreground}">
                                    <TextBlock.Text>
                                        <Binding Path="DateDisplay" Converter="{StaticResource DateStringToPLConverter}"/>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>
                            <!-- Kwota -->
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Kwota:" FontWeight="SemiBold" Foreground="{DynamicResource App.Foreground}" Margin="0,0,6,0"/>
                                <TextBlock Text="{Binding AmountStr}" Foreground="{DynamicResource App.Foreground}"/>
                            </StackPanel>
                            <!-- Konto -->
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Konto:" FontWeight="SemiBold" Foreground="{DynamicResource App.Foreground}" Margin="0,0,6,0"/>
                                <TextBlock Text="{Binding AccountName, TargetNullValue=Nie dotyczy, FallbackValue=Nie dotyczy}" Foreground="{DynamicResource App.Foreground}"/>
                            </StackPanel>
                            <!-- Kategoria -->
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Kategoria:" FontWeight="SemiBold" Foreground="{DynamicResource App.Foreground}" Margin="0,0,6,0"/>
                                <TextBlock Text="{Binding CategoryName, TargetNullValue=(brak), FallbackValue=(brak)}" Foreground="{DynamicResource App.Foreground}"/>
                            </StackPanel>
                            <!-- Opis -->
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Opis:" FontWeight="SemiBold" Foreground="{DynamicResource App.Foreground}" Margin="0,0,6,0"/>
                                <TextBlock Text="{Binding Description, TargetNullValue=Brak danych, FallbackValue=Brak danych}"
                                           Foreground="{DynamicResource App.Foreground}" TextTrimming="CharacterEllipsis"/>
                            </StackPanel>

                            <!-- Delete confirmation panel -->
                            <StackPanel Visibility="{Binding IsDeleteConfirmationVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                                        Margin="0,6,0,0">
                                <TextBlock Text="Czy na pewno chcesz usunąć tę transakcję?"
                                           Margin="0,0,0,6"
                                           Foreground="{DynamicResource App.Foreground}"/>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Tak"
                                            Padding="8,4"
                                            MinWidth="70"
                                            Command="{Binding DataContext.DeleteTransactionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"/>
                                    <Button Content="Nie"
                                            Padding="8,4"
                                            MinWidth="70"
                                            Margin="8,0,0,0"
                                            Command="{Binding HideDeleteConfirmationCommand}"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                    <!-- Edit mode layer -->
                    <Grid x:Name="EditMode" Grid.RowSpan="2" Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- LEFT edit fields in requested order, styled like AddExpense (Height=28) -->
                        <StackPanel Grid.Column="0" Orientation="Vertical" Margin="4,0,8,0">
                            <!-- EDIT HEADER: icon + type name -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <Image Width="20" Height="20" Margin="0,0,6,0">
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Setter Property="Source" Value="/Assets/Icons/wydatki.png"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Kind}" Value="Expense">
                                                    <Setter Property="Source" Value="/Assets/Icons/wydatki.png"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Kind}" Value="Income">
                                                    <Setter Property="Source" Value="/Assets/Icons/przychody.png"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Kind}" Value="Transfer">
                                                    <Setter Property="Source" Value="/Assets/Icons/transfer.png"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>
                                <TextBlock FontWeight="Bold" FontSize="14" Foreground="{DynamicResource App.Foreground}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="Wydatek"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Kind}" Value="Expense">
                                                    <Setter Property="Text" Value="Wydatek"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Kind}" Value="Income">
                                                    <Setter Property="Text" Value="Przychód"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Kind}" Value="Transfer">
                                                    <Setter Property="Text" Value="Transfer"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>

                            <!-- Data -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                                <TextBlock Text="Data:" FontWeight="SemiBold" Foreground="{DynamicResource App.Foreground}" Margin="0,0,6,0"/>
                                <DatePicker x:Name="DateEditor" SelectedDate="{Binding EditDate, Mode=TwoWay}" Height="28"/>
                            </StackPanel>
                            <!-- Kwota -->
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Kwota:" FontWeight="SemiBold" Foreground="{DynamicResource App.Foreground}" Margin="0,0,6,0"/>
                                <TextBox x:Name="AmountBox" Height="28" Text="{Binding EditAmountText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" GotFocus="EditAmount_GotFocus"/>
                            </StackPanel>
                            <!-- Konto -->
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Konto:" FontWeight="SemiBold" Foreground="{DynamicResource App.Foreground}" Margin="0,0,6,0"/>
                                <ComboBox x:Name="AccountCombo" Height="28"
                                          ItemsSource="{Binding DataContext.AvailableAccounts, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                          SelectedItem="{Binding SelectedAccount, Mode=TwoWay}"
                                          IsEditable="False"
                                          Width="260"
                                          MinWidth="220"
                                          MaxDropDownHeight="240"
                                          HorizontalContentAlignment="Left"/>
                            </StackPanel>
                            <!-- Kategoria -->
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Kategoria:" FontWeight="SemiBold" Foreground="{DynamicResource App.Foreground}" Margin="0,0,6,0"/>
                                <ComboBox x:Name="CategoryCombo" Height="28"
                                          ItemsSource="{Binding DataContext.AvailableCategories, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                          SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
                                          IsEditable="False"
                                          Width="260"
                                          MinWidth="220"
                                          MaxDropDownHeight="240"
                                          HorizontalContentAlignment="Left"/>
                            </StackPanel>
                            <!-- Opis -->
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Opis:" FontWeight="SemiBold" Foreground="{DynamicResource App.Foreground}" Margin="0,0,6,0"/>
                                <TextBox x:Name="DescriptionBox" Height="28" Width="260" Text="{Binding EditDescription, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" GotFocus="EditDescription_GotFocus"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- RIGHT actions (hidden in our flow) -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Visibility="Collapsed"/>
                    </Grid>

                    <!-- Bottom-right actions overlay (always in front) -->
                    <Grid HorizontalAlignment="Right"
                          VerticalAlignment="Bottom"
                          Margin="0,8,0,0"
                          Panel.ZIndex="10">
                        <!-- Normal actions -->
                        <StackPanel x:Name="NormalActions" Orientation="Horizontal">
                            <Button Margin="0,0,8,0" ToolTip="Edytuj" Click="StartEdit_Click" Style="{StaticResource EditIconButton}"/>
                            <Button ToolTip="Usuń" Command="{Binding ShowDeleteConfirmationCommand}" Style="{StaticResource DeleteIconButton}"/>
                        </StackPanel>
                        <!-- Edit actions -->
                        <StackPanel x:Name="EditActions" Orientation="Horizontal" Visibility="Collapsed">
                            <Button x:Name="SaveBottomButton" Padding="8,4" MinWidth="70" Width="92" ToolTip="Zapisz" Click="SaveEdit_Click" Style="{StaticResource PrimaryButton}">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <Path Data="M2,10 L6,14 L14,4" Stroke="{DynamicResource Brand.Blue}" StrokeThickness="2.4" StrokeStartLineCap="Round" StrokeEndLineCap="Round" StrokeLineJoin="Round" Width="16" Height="16"/>
                                    <TextBlock Text="Zapisz" Margin="6,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="CancelEditButton" Padding="8,4" MinWidth="70" Width="92" ToolTip="Anuluj" Click="CancelEdit_Click" Margin="8,0,0,0" Style="{StaticResource SecondaryButton}">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Text="Anuluj" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Grid>

                <Border.Style>
                    <Style TargetType="Border" BasedOn="{StaticResource TransactionCard}">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="{DynamicResource Surface.Border}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>

            <DataTemplate.Triggers>
                <!-- Toggle action overlays based on IsEditing -->
                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                    <Setter TargetName="NormalActions" Property="Visibility" Value="Collapsed"/>
                    <Setter TargetName="EditActions" Property="Visibility" Value="Visible"/>
                    <Setter TargetName="ReadMode" Property="Visibility" Value="Visible"/>
                    <Setter TargetName="EditMode" Property="Visibility" Value="Visible"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsEditing}" Value="False">
                    <Setter TargetName="NormalActions" Property="Visibility" Value="Visible"/>
                    <Setter TargetName="EditActions" Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
    </UserControl.Resources>

    <!-- Główny scroll -->
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled"
                  PanningMode="VerticalOnly">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- DASHBOARD-LIKE KPI (6 small cards) -->
            <Grid Grid.Row="0" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource AccentCard}">
                <StackPanel>
                    <TextBlock Text="Cały majątek" Style="{StaticResource KpiHeader}"/>
                    <TextBlock x:Name="TotalWealthText" Text="0,00 zł" Style="{StaticResource KpiValueStyle}"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Style="{StaticResource AccentCard}">
                <StackPanel>
                    <TextBlock Text="Konta bankowe" Style="{StaticResource KpiHeader}"/>
                    <TextBlock x:Name="BanksText" Text="0,00 zł" Style="{StaticResource KpiValueStyle}"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Style="{StaticResource AccentCard}">
                <StackPanel>
                    <TextBlock Text="Wolna gotówka" Style="{StaticResource KpiHeader}"/>
                    <TextBlock x:Name="FreeCashDashboardText" Text="0,00 zł" Style="{StaticResource KpiValueStyle}"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="3" Style="{StaticResource AccentCard}">
                <StackPanel>
                    <TextBlock Text="Gotówka odłożona" Style="{StaticResource KpiHeader}" TextWrapping="Wrap"/>
                    <TextBlock x:Name="SavedToAllocateText" Text="0,00 zł" Style="{StaticResource KpiValueStyle}"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="4" Style="{StaticResource AccentCard}" Margin="0">
                <StackPanel HorizontalAlignment="Left">
                    <TextBlock Text="Gotówka w kopertach" Style="{StaticResource KpiHeader}" TextWrapping="Wrap"/>
                    <TextBlock x:Name="EnvelopesDashboardText" Text="0,00 zł" Style="{StaticResource KpiValueStyle}"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="5" Style="{StaticResource AccentCard}" Margin="0">
                <StackPanel>
                    <TextBlock Text="Inwestycje" Style="{StaticResource KpiHeader}"/>
                    <TextBlock x:Name="InvestmentsText" Text="0,00 zł" Style="{StaticResource KpiValueStyle}"/>
                </StackPanel>
            </Border>
            </Grid>

            <!-- KPI -->
            <Grid Grid.Row="1" Margin="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource AccentCard}" BorderBrush="{DynamicResource Brand.Orange}">
                    <StackPanel>
                        <TextBlock Text="Suma wydatków"
                                   Style="{StaticResource KpiHeader}"/>
                        <TextBlock Text="{Binding TotalExpenses, StringFormat={}{0:N2} zł}"
                                   Style="{StaticResource KpiValueStyle}"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Style="{StaticResource AccentCard}" BorderBrush="{DynamicResource Brand.Orange}">
                    <StackPanel>
                        <TextBlock Text="Suma przychodów"
                                   Style="{StaticResource KpiHeader}"/>
                        <TextBlock Text="{Binding TotalIncomes, StringFormat={}{0:N2} zł}"
                                   Style="{StaticResource KpiValueStyle}"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Style="{StaticResource AccentCard}" BorderBrush="{DynamicResource Brand.Orange}">
                    <StackPanel>
                        <TextBlock Text="Bilans"
                                   Style="{StaticResource KpiHeader}"/>
                        <TextBlock Text="{Binding Balance, StringFormat={}{0:N2} zł}"
                                   Style="{StaticResource KpiValueStyle}"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- FILTRY -->
            <StackPanel Grid.Row="2"
                        Margin="16,0,16,12"
                        Orientation="Vertical">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Typ transakcji GroupBox header with 'Pokaż wszystko' + ikony -->
                    <GroupBox Grid.Column="0"
                              Style="{StaticResource FilterPanelStyle}">
                        <GroupBox.Header>
                            <DockPanel>
                                <TextBlock Text="Typ transakcji"
                                           FontWeight="Bold"
                                           FontSize="16"
                                           Foreground="{DynamicResource App.Foreground}"
                                           VerticalAlignment="Center"/>
                                <Button Content="Pokaż wszystko"
                                        Style="{StaticResource FilterHeaderButtonStyle}"
                                        Click="ShowAllTypes_Click"
                                        DockPanel.Dock="Right"/>
                            </DockPanel>
                        </GroupBox.Header>

                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <!-- Wydatki -->
                                <CheckBox Style="{StaticResource FilterCheckBox}"
                                          IsChecked="{Binding ShowExpenses, Mode=TwoWay}">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Assets/Icons/wydatki.png"
                                               Width="18"
                                               Height="18"
                                               Margin="0,0,6,0"/>
                                        <TextBlock Text="Wydatki"/>
                                    </StackPanel>
                                </CheckBox>

                                <!-- Przychody -->
                                <CheckBox Style="{StaticResource FilterCheckBox}"
                                          IsChecked="{Binding ShowIncomes, Mode=TwoWay}">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Assets/Icons/przychody.png"
                                               Width="18"
                                               Height="18"
                                               Margin="0,0,6,0"/>
                                        <TextBlock Text="Przychody"/>
                                    </StackPanel>
                                </CheckBox>

                                <!-- Transfery -->
                                <CheckBox Style="{StaticResource FilterCheckBox}"
                                          IsChecked="{Binding ShowTransfers, Mode=TwoWay}">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Assets/Icons/transfer.png"
                                               Width="18"
                                               Height="18"
                                               Margin="0,0,6,0"/>
                                        <TextBlock Text="Transfery"/>
                                    </StackPanel>
                                </CheckBox>
                            </StackPanel>
                        </ScrollViewer>
                    </GroupBox>

                    <!-- Kategorie GroupBox header with 'Pokaż wszystko' -->
                    <GroupBox Grid.Column="1"
                              Style="{StaticResource FilterPanelStyle}">
                        <GroupBox.Header>
                            <DockPanel>
                                <TextBlock Text="Kategorie"
                                           FontWeight="Bold"
                                           FontSize="16"
                                           Foreground="{DynamicResource App.Foreground}"
                                           VerticalAlignment="Center"/>
                                <Button Content="Pokaż wszystko"
                                        Style="{StaticResource FilterHeaderButtonStyle}"
                                        Click="ShowAllCategories_Click"
                                        DockPanel.Dock="Right"/>
                            </DockPanel>
                        </GroupBox.Header>

                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding Categories}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Style="{StaticResource FilterCheckBox}"
                                                  Content="{Binding Name}"
                                                  IsChecked="{Binding IsSelected, Mode=TwoWay}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </GroupBox>

                    <!-- Konta GroupBox header with 'Pokaż wszystko' -->
                    <GroupBox Grid.Column="2"
                              Style="{StaticResource FilterPanelStyle}">
                        <GroupBox.Header>
                            <DockPanel>
                                <TextBlock Text="Konta"
                                           FontWeight="Bold"
                                           FontSize="16"
                                           Foreground="{DynamicResource App.Foreground}"
                                           VerticalAlignment="Center"/>
                                <Button Content="Pokaż wszystko"
                                        Style="{StaticResource FilterHeaderButtonStyle}"
                                        Click="ShowAllAccounts_Click"
                                        DockPanel.Dock="Right"/>
                            </DockPanel>
                        </GroupBox.Header>

                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding Accounts}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Style="{StaticResource FilterCheckBox}"
                                                  Content="{Binding Name}"
                                                  IsChecked="{Binding IsSelected, Mode=TwoWay}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </GroupBox>
                </Grid>

                <Border Height="2"
                        Background="{DynamicResource Brand.Orange}"
                        CornerRadius="0,0,8,8"
                        Margin="0,8,0,0"/>
            </StackPanel>

            <!-- GŁÓWNY CONTENT -->
            <Border Grid.Row="3"
                    Margin="16"
                    BorderBrush="{DynamicResource Surface.Border}"
                    BorderThickness="1"
                    CornerRadius="10"
                    Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Pasek okresu -->
                    <StackPanel Grid.Row="0"
                                Grid.ColumnSpan="2"
                                Margin="0,0,0,12">
                        <ctrls:PeriodBarControl x:Name="PeriodBar"
                                                RangeChanged="PeriodBar_RangeChanged"/>

                        <!-- WYSZUKIWARKA (pod paskiem okresu) -->
                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- TextBox z watermarkiem (Twój globalny styl) -->
                            <TextBox x:Name="SearchBox"
                                     Grid.Column="0"
                                     Style="{StaticResource SearchBoxStyle}"
                                     Tag="Szukaj: opis, kategoria, konto…"
                                     Text="{Binding SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     KeyDown="SearchBox_KeyDown"/>

                            <!-- Wyczyść -->
                            <Button Grid.Column="1"
                                    Content="Wyczyść"
                                    Margin="10,0,0,0"
                                    Padding="14,6"
                                    Click="ClearSearch_Click"/>
                        </Grid>

                        <Border Height="3"
                                Background="{DynamicResource Brand.Blue}"
                                CornerRadius="0,0,8,8"
                                Margin="0,10,0,0"/>
                    </StackPanel>

                    <!-- TRANS. ZREALIZOWANE (lewa) -->
                    <Border Grid.Row="1"
                            Grid.Column="0"
                            Style="{StaticResource TransactionCard}"
                            Margin="0,0,8,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Text="Transakcje"
                                       Style="{StaticResource KpiHeader}"
                                       Margin="0,0,0,8"/>

                            <Grid Grid.Row="1">
                                <!-- Placeholder -->
                                <TextBlock Text="Brak danych w tym okresie"
                                           Foreground="{DynamicResource App.Foreground}"
                                           FontStyle="Italic"
                                           HorizontalAlignment="Center"
                                           Margin="0,8,0,8">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Setter Property="Text">
                                                <Setter.Value>
                                                    <Binding ElementName="PlannedItemsList" Path="HasItems"/>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=RealizedItems, Path=HasItems}"
                                                             Value="False">
                                                    <Setter Property="Visibility"
                                                            Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <!-- Lista -->
                                <ItemsControl x:Name="RealizedItems"
                                              ItemsSource="{Binding FilteredTransactions}"
                                              ItemTemplate="{StaticResource TransactionCardTemplate}">
                                </ItemsControl>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- ZAPLANOWANE (prawa) -->
                    <Border Grid.Row="1"
                            Grid.Column="1"
                            Style="{StaticResource TransactionCard}"
                            Margin="8,0,0,0"
                            Visibility="{Binding ShowScheduled, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Text="Zaplanowane transakcje"
                                       Style="{StaticResource KpiHeader}"
                                       Margin="0,0,0,8"/>

                            <Grid Grid.Row="1">
                                <TextBlock Text="Brak danych w tym okresie"
                                           Foreground="{DynamicResource App.Foreground}"
                                           FontStyle="Italic"
                                           HorizontalAlignment="Center"
                                           Margin="0,8,0,8">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=PlannedItemsList, Path=HasItems}"
                                                             Value="False">
                                                    <Setter Property="Visibility"
                                                            Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <ItemsControl x:Name="PlannedItemsList"
                                              ItemsSource="{Binding PlannedTransactionsList}"
                                              ItemTemplate="{StaticResource TransactionCardTemplate}">
                                </ItemsControl>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
