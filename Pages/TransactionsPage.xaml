<UserControl x:Class="Finly.Pages.TransactionsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Finly.Pages"
             xmlns:controls="clr-namespace:Finly.Views.Controls"
             x:Name="Root"
             mc:Ignorable="d"
             SnapsToDevicePixels="True"
             UseLayoutRounding="True"
             TextOptions.TextFormattingMode="Display"
             TextOptions.TextRenderingMode="ClearType"
             RequestBringIntoView="Root_RequestBringIntoView">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Sortowanie: DateDesc/DateAsc -> PL -->
        <local:SortModeToPolishTextConverter x:Key="SortModeTextConv"/>

        <!-- ===================== KPI ===================== -->

        <Style x:Key="KpiHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
            <Setter Property="Opacity" Value="1"/>
        </Style>

        <Style x:Key="KpiValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
            <Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
        </Style>

        <!-- Kafelek KPI (jak na screenie: ciemne tło, nieprzeźroczyste) -->
        <Style x:Key="AccentCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource Surface.Background}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Brand.Blue}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="14"/>
            <Setter Property="Margin" Value="0,0,12,0"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="UseLayoutRounding" Value="True"/>
        </Style>

        <!-- ===================== FILTRY ===================== -->

        <!-- większy tytuł sekcji (Typ transakcji / Kategorie / Konta) -->
        <Style x:Key="FilterHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
        </Style>

        <!-- GroupBox: pomarańczowa ramka + surface w środku (jak na screenie) -->
        <Style x:Key="FilterPanelStyle" TargetType="GroupBox">
            <Setter Property="Height" Value="185"/>
            <Setter Property="MinHeight" Value="185"/>
            <Setter Property="Margin" Value="0,0,12,0"/>
            <Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Brand.Orange}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid Height="{TemplateBinding Height}" ClipToBounds="True">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- HEADER -->
                            <ContentPresenter Grid.Row="0"
                                              Content="{TemplateBinding Header}"
                                              Margin="0,0,0,6"
                                              VerticalAlignment="Center"/>

                            <!-- BODY -->
                            <Border Grid.Row="1"
                                    Background="{DynamicResource Surface.Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="10"
                                    Padding="12"
                                    SnapsToDevicePixels="True">
                                <ContentPresenter VerticalAlignment="Stretch"
                                                  HorizontalAlignment="Stretch"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- przycisk "Pokaż wszystko" -->
        <Style x:Key="FilterHeaderButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="MinWidth" Value="102"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{DynamicResource Brand.Blue}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Brand.Blue}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="IsTabStop" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="10,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.92"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.60"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- checkbox: JAK NA SCREENIE:
             - mały kwadrat,
             - checked: pomarańczowe wypełnienie + biały ptaszek,
             - unchecked: obrys pomarańczowy, środek transparent,
             - tekst pogrubiony. -->
        <Style x:Key="OrangeCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="IsTabStop" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="22"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- box -->
                            <Border x:Name="Box"
                                    Width="14"
                                    Height="14"
                                    CornerRadius="2"
                                    BorderThickness="2"
                                    BorderBrush="{DynamicResource Brand.Orange}"
                                    Background="Transparent"
                                    VerticalAlignment="Center"
                                    Margin="0,0,8,0"/>

                            <!-- check -->
                            <Path x:Name="Check"
                                  Data="M 2 7 L 6 11 L 13 2"
                                  Stroke="White"
                                  StrokeThickness="2.4"
                                  StrokeStartLineCap="Round"
                                  StrokeEndLineCap="Round"
                                  StrokeLineJoin="Round"
                                  Width="14"
                                  Height="14"
                                  VerticalAlignment="Center"
                                  Visibility="Collapsed"/>

                            <!-- content -->
                            <ContentPresenter Grid.Column="1"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Box" Property="Background" Value="{DynamicResource Brand.Orange}"/>
                                <Setter TargetName="Box" Property="BorderBrush" Value="{DynamicResource Brand.Orange}"/>
                                <Setter TargetName="Check" Property="Visibility" Value="Visible"/>
                            </Trigger>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.95"/>
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.60"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ===================== KARTY / SEKCJE ===================== -->

        <Style x:Key="SectionCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource Surface.Background}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Surface.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="UseLayoutRounding" Value="True"/>
            <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
            <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
        </Style>

        <Style x:Key="TransactionItemCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource Surface.Background}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Surface.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="UseLayoutRounding" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8"
                                      ShadowDepth="2"
                                      Opacity="0.16"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ========= Transaction Card Template (Read/Edit) ========= -->
        <DataTemplate x:Key="TransactionCardTemplate">
            <Border Style="{StaticResource TransactionItemCard}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- CONTENT -->
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- READ MODE -->
                        <Grid x:Name="ReadMode" Grid.RowSpan="2">
                            <StackPanel Orientation="Vertical" Margin="4,0,16,0">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8" VerticalAlignment="Center">

                                    <!-- ICON (pewne: po IsExpense/IsIncome/IsTransfer + pack uri) -->
                                    <Image Width="20" Height="20" Margin="0,0,6,0">
                                        <Image.Style>
                                            <Style TargetType="Image">
                                                <Setter Property="Source" Value="pack://application:,,,/Assets/Icons/wydatki.png"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsIncome}" Value="True">
                                                        <Setter Property="Source" Value="pack://application:,,,/Assets/Icons/przychody.png"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsTransfer}" Value="True">
                                                        <Setter Property="Source" Value="pack://application:,,,/Assets/Icons/transfer.png"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Image.Style>
                                    </Image>

                                    <TextBlock FontWeight="Bold" FontSize="14" Foreground="{DynamicResource App.Foreground}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="Wydatek"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsIncome}" Value="True">
                                                        <Setter Property="Text" Value="Przychód"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsTransfer}" Value="True">
                                                        <Setter Property="Text" Value="Transfer"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                    <TextBlock Text="Data:" FontWeight="SemiBold" Foreground="{DynamicResource App.Foreground}" Margin="0,0,6,0"/>
                                    <TextBlock Text="{Binding DateDisplay}" Foreground="{DynamicResource App.Foreground}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                    <TextBlock Text="Kwota:" FontWeight="SemiBold" Foreground="{DynamicResource App.Foreground}" Margin="0,0,6,0"/>
                                    <TextBlock Text="{Binding AmountStr}" Foreground="{DynamicResource App.Foreground}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,2"
                                            Visibility="{Binding IsExpense, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <TextBlock Text="Z konta:" FontWeight="SemiBold" Foreground="{DynamicResource App.Foreground}" Margin="0,0,6,0"/>
                                    <TextBlock Text="{Binding FromAccountName, TargetNullValue=Nie dotyczy, FallbackValue=Nie dotyczy}"
                                               Foreground="{DynamicResource App.Foreground}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,2"
                                            Visibility="{Binding IsIncome, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <TextBlock Text="Na konto:" FontWeight="SemiBold" Foreground="{DynamicResource App.Foreground}" Margin="0,0,6,0"/>
                                    <TextBlock Text="{Binding ToAccountName, TargetNullValue=Nie dotyczy, FallbackValue=Nie dotyczy}"
                                               Foreground="{DynamicResource App.Foreground}"/>
                                </StackPanel>

                                <StackPanel Margin="0,0,0,2"
                                            Visibility="{Binding IsTransfer, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                        <TextBlock Text="Z konta:" FontWeight="SemiBold" Foreground="{DynamicResource App.Foreground}" Margin="0,0,6,0"/>
                                        <TextBlock Text="{Binding FromAccountName, TargetNullValue=Nie dotyczy, FallbackValue=Nie dotyczy}"
                                                   Foreground="{DynamicResource App.Foreground}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Na konto:" FontWeight="SemiBold" Foreground="{DynamicResource App.Foreground}" Margin="0,0,6,0"/>
                                        <TextBlock Text="{Binding ToAccountName, TargetNullValue=Nie dotyczy, FallbackValue=Nie dotyczy}"
                                                   Foreground="{DynamicResource App.Foreground}"/>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsTransfer}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>

                                    <TextBlock Text="Kategoria:" FontWeight="SemiBold" Foreground="{DynamicResource App.Foreground}" Margin="0,0,6,0"/>
                                    <TextBlock Text="{Binding CategoryName, TargetNullValue=(brak), FallbackValue=(brak)}"
                                               Foreground="{DynamicResource App.Foreground}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                    <TextBlock Text="Opis:" FontWeight="SemiBold" Foreground="{DynamicResource App.Foreground}" Margin="0,0,6,0"/>
                                    <TextBlock Text="{Binding Description, TargetNullValue=Brak danych, FallbackValue=Brak danych}"
                                               Foreground="{DynamicResource App.Foreground}"
                                               TextTrimming="CharacterEllipsis"/>
                                </StackPanel>

                                <StackPanel Visibility="{Binding IsDeleteConfirmationVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                                            Margin="0,8,0,0">
                                    <TextBlock Text="Czy na pewno chcesz usunąć tę transakcję?"
                                               Margin="0,0,0,6"
                                               Foreground="{DynamicResource App.Foreground}"/>

                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="Tak"
                                                Padding="8,4"
                                                MinWidth="70"
                                                Focusable="False"
                                                IsTabStop="False"
                                                Command="{Binding DataContext.DeleteTransactionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"/>
                                        <Button Content="Nie"
                                                Padding="8,4"
                                                MinWidth="70"
                                                Margin="8,0,0,0"
                                                Focusable="False"
                                                IsTabStop="False"
                                                Command="{Binding HideDeleteConfirmationCommand}"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Grid>

                        <!-- EDIT MODE -->
                        <Grid x:Name="EditMode" Grid.RowSpan="2" Visibility="Collapsed">
                            <StackPanel Orientation="Vertical" Margin="4,0,16,0">

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <Image Width="20" Height="20" Margin="0,0,6,0">
                                        <Image.Style>
                                            <Style TargetType="Image">
                                                <Setter Property="Source" Value="pack://application:,,,/Assets/Icons/wydatki.png"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsIncome}" Value="True">
                                                        <Setter Property="Source" Value="pack://application:,,,/Assets/Icons/przychody.png"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsTransfer}" Value="True">
                                                        <Setter Property="Source" Value="pack://application:,,,/Assets/Icons/transfer.png"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Image.Style>
                                    </Image>

                                    <TextBlock FontWeight="Bold" FontSize="14" Foreground="{DynamicResource App.Foreground}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="Wydatek"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsIncome}" Value="True">
                                                        <Setter Property="Text" Value="Przychód"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsTransfer}" Value="True">
                                                        <Setter Property="Text" Value="Transfer"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>

                                <!-- DATA -->
                                <Grid Margin="0,0,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="110"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Text="Data:"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource App.Foreground}"
                                               VerticalAlignment="Center"/>

                                    <DatePicker Grid.Column="1"
                                                Width="160"
                                                HorizontalAlignment="Left"
                                                SelectedDate="{Binding EditDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                Height="28"/>
                                </Grid>

                                <!-- KWOTA (read-only) -->
                                <Grid Margin="0,0,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="110"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Text="Kwota:"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource App.Foreground}"
                                               VerticalAlignment="Center"/>

                                    <TextBlock Grid.Column="1"
                                               Text="{Binding AmountStr}"
                                               Foreground="{DynamicResource App.Foreground}"
                                               VerticalAlignment="Center"/>
                                </Grid>

                                <!-- KONTO (read-only) -->
                                <Grid Margin="0,0,0,6"
                                      Visibility="{Binding IsExpense, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="110"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Text="Z konta:"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource App.Foreground}"
                                               VerticalAlignment="Center"/>

                                    <TextBlock Grid.Column="1"
                                               Text="{Binding FromAccountName, TargetNullValue=Nie dotyczy, FallbackValue=Nie dotyczy}"
                                               Foreground="{DynamicResource App.Foreground}"
                                               VerticalAlignment="Center"/>
                                </Grid>

                                <Grid Margin="0,0,0,6"
                                      Visibility="{Binding IsIncome, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="110"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Text="Na konto:"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource App.Foreground}"
                                               VerticalAlignment="Center"/>

                                    <TextBlock Grid.Column="1"
                                               Text="{Binding ToAccountName, TargetNullValue=Nie dotyczy, FallbackValue=Nie dotyczy}"
                                               Foreground="{DynamicResource App.Foreground}"
                                               VerticalAlignment="Center"/>
                                </Grid>

                                <TextBlock Margin="0,6,0,0"
                                           Foreground="{DynamicResource App.Foreground}"
                                           Opacity="0.75"
                                           Text="Transferów nie edytujesz inline (tylko podgląd).">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsTransfer}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <!-- KATEGORIA -->
                                <Grid Margin="0,0,0,6">
                                    <Grid.Style>
                                        <Style TargetType="Grid">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsTransfer}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="110"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Text="Kategoria:"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource App.Foreground}"
                                               VerticalAlignment="Center"/>

                                    <ComboBox Grid.Column="1"
                                              Width="260"
                                              Height="28"
                                              HorizontalAlignment="Left"
                                              ItemsSource="{Binding DataContext.AvailableCategories, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                              SelectedItem="{Binding SelectedCategory, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              IsEditable="False"
                                              MaxDropDownHeight="240"
                                              HorizontalContentAlignment="Left"/>
                                </Grid>

                                <!-- OPIS -->
                                <Grid Margin="0,0,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="110"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Text="Opis:"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource App.Foreground}"
                                               VerticalAlignment="Center"/>

                                    <TextBox Grid.Column="1"
                                             Width="260"
                                             Height="28"
                                             HorizontalAlignment="Left"
                                             Text="{Binding EditDescription, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             GotFocus="EditDescription_GotFocus"/>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Grid>

                    <!-- ACTIONS -->
                    <Grid Grid.Column="1"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Top"
                          Margin="12,0,0,0"
                          Panel.ZIndex="10">

                        <StackPanel x:Name="NormalActions" Orientation="Horizontal">
                            <Button Margin="0,0,8,0"
                                    ToolTip="Edytuj"
                                    Click="StartEdit_Click"
                                    Focusable="False"
                                    IsTabStop="False">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource EditIconButton}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsTransfer}" Value="True">
                                                <Setter Property="IsEnabled" Value="False"/>
                                                <Setter Property="Opacity" Value="0.5"/>
                                                <Setter Property="ToolTip" Value="Transferów nie edytujesz inline."/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <Button ToolTip="Usuń"
                                    Command="{Binding ShowDeleteConfirmationCommand}"
                                    Style="{StaticResource DeleteIconButton}"
                                    Focusable="False"
                                    IsTabStop="False"/>
                        </StackPanel>

                        <StackPanel x:Name="EditActions" Orientation="Horizontal" Visibility="Collapsed">
                            <Button Padding="8,4"
                                    MinWidth="92"
                                    ToolTip="Zapisz"
                                    Click="SaveEdit_Click"
                                    Style="{StaticResource PrimaryButton}"
                                    Focusable="False"
                                    IsTabStop="False">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <Path Data="M2,10 L6,14 L14,4"
                                          Stroke="{DynamicResource Brand.Blue}"
                                          StrokeThickness="2.4"
                                          StrokeStartLineCap="Round"
                                          StrokeEndLineCap="Round"
                                          StrokeLineJoin="Round"
                                          Width="16"
                                          Height="16"/>
                                    <TextBlock Text="Zapisz" Margin="6,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button Padding="8,4"
                                    MinWidth="92"
                                    ToolTip="Anuluj"
                                    Click="CancelEdit_Click"
                                    Margin="8,0,0,0"
                                    Style="{StaticResource SecondaryButton}"
                                    Focusable="False"
                                    IsTabStop="False">
                                <TextBlock Text="Anuluj" VerticalAlignment="Center"/>
                            </Button>
                        </StackPanel>

                    </Grid>
                </Grid>
            </Border>

            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                    <Setter TargetName="NormalActions" Property="Visibility" Value="Collapsed"/>
                    <Setter TargetName="EditActions" Property="Visibility" Value="Visible"/>
                    <Setter TargetName="ReadMode" Property="Visibility" Value="Collapsed"/>
                    <Setter TargetName="EditMode" Property="Visibility" Value="Visible"/>
                </DataTrigger>

                <DataTrigger Binding="{Binding IsEditing}" Value="False">
                    <Setter TargetName="NormalActions" Property="Visibility" Value="Visible"/>
                    <Setter TargetName="EditActions" Property="Visibility" Value="Collapsed"/>
                    <Setter TargetName="ReadMode" Property="Visibility" Value="Visible"/>
                    <Setter TargetName="EditMode" Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
    </UserControl.Resources>

    <ScrollViewer x:Name="RootScroll"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled"
                  PanningMode="VerticalOnly">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- KPI (6) -->
            <Grid Grid.Row="0" Margin="16,16,16,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource AccentCard}">
                    <StackPanel>
                        <TextBlock Text="Cały majątek" Style="{StaticResource KpiHeader}"/>
                        <TextBlock x:Name="TotalWealthText" Text="0,00 zł" Style="{StaticResource KpiValueStyle}"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Style="{StaticResource AccentCard}">
                    <StackPanel>
                        <TextBlock Text="Konta bankowe" Style="{StaticResource KpiHeader}"/>
                        <TextBlock x:Name="BanksText" Text="0,00 zł" Style="{StaticResource KpiValueStyle}"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Style="{StaticResource AccentCard}">
                    <StackPanel>
                        <TextBlock Text="Wolna gotówka" Style="{StaticResource KpiHeader}"/>
                        <TextBlock x:Name="FreeCashDashboardText" Text="0,00 zł" Style="{StaticResource KpiValueStyle}"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="3" Style="{StaticResource AccentCard}">
                    <StackPanel>
                        <TextBlock Text="Gotówka odłożona" Style="{StaticResource KpiHeader}" TextWrapping="Wrap"/>
                        <TextBlock x:Name="SavedToAllocateText" Text="0,00 zł" Style="{StaticResource KpiValueStyle}"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="4" Style="{StaticResource AccentCard}" Margin="0,0,12,0">
                    <StackPanel HorizontalAlignment="Left">
                        <TextBlock Text="Gotówka w kopertach" Style="{StaticResource KpiHeader}" TextWrapping="Wrap"/>
                        <TextBlock x:Name="EnvelopesDashboardText" Text="0,00 zł" Style="{StaticResource KpiValueStyle}"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="5" Style="{StaticResource AccentCard}" Margin="0">
                    <StackPanel>
                        <TextBlock Text="Inwestycje" Style="{StaticResource KpiHeader}"/>
                        <TextBlock x:Name="InvestmentsText" Text="0,00 zł" Style="{StaticResource KpiValueStyle}"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- KPI (3) -->
            <Grid Grid.Row="1" Margin="16,0,16,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource AccentCard}" BorderBrush="{DynamicResource Brand.Orange}">
                    <StackPanel>
                        <TextBlock Text="Suma wydatków" Style="{StaticResource KpiHeader}"/>
                        <TextBlock Text="{Binding TotalExpenses, StringFormat={}{0:N2} zł}" Style="{StaticResource KpiValueStyle}"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Style="{StaticResource AccentCard}" BorderBrush="{DynamicResource Brand.Orange}">
                    <StackPanel>
                        <TextBlock Text="Suma przychodów" Style="{StaticResource KpiHeader}"/>
                        <TextBlock Text="{Binding TotalIncomes, StringFormat={}{0:N2} zł}" Style="{StaticResource KpiValueStyle}"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Style="{StaticResource AccentCard}" BorderBrush="{DynamicResource Brand.Orange}" Margin="0">
                    <StackPanel>
                        <TextBlock Text="Bilans" Style="{StaticResource KpiHeader}"/>
                        <TextBlock Text="{Binding Balance, StringFormat={}{0:N2} zł}" Style="{StaticResource KpiValueStyle}"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- FILTRY (Typ / Kategorie / Konta) -->
            <Grid Grid.Row="2" Margin="16,0,16,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Typ transakcji -->
                <GroupBox Grid.Column="0" Style="{StaticResource FilterPanelStyle}">
                    <GroupBox.Header>
                        <DockPanel LastChildFill="True">
                            <TextBlock Text="Typ transakcji"
                                       Style="{StaticResource FilterHeaderTextStyle}"
                                       VerticalAlignment="Center"/>
                            <Button DockPanel.Dock="Right"
                                    Content="Pokaż wszystko"
                                    Style="{StaticResource FilterHeaderButtonStyle}"
                                    Click="ShowAllTypes_Click"/>
                        </DockPanel>
                    </GroupBox.Header>

                    <StackPanel VerticalAlignment="Top">

                        <!-- Wydatki -->
                        <CheckBox Style="{StaticResource OrangeCheckBoxStyle}"
                                  IsChecked="{Binding ShowExpenses, Mode=TwoWay}">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Image Width="16" Height="16" Margin="0,0,8,0"
                                       Source="pack://application:,,,/Assets/Icons/wydatki.png"/>
                                <TextBlock Text="Wydatki" FontWeight="Bold" />
                            </StackPanel>
                        </CheckBox>

                        <!-- Przychody -->
                        <CheckBox Style="{StaticResource OrangeCheckBoxStyle}"
                                  IsChecked="{Binding ShowIncomes, Mode=TwoWay}">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Image Width="16" Height="16" Margin="0,0,8,0"
                                       Source="pack://application:,,,/Assets/Icons/przychody.png"/>
                                <TextBlock Text="Przychody" FontWeight="Bold" />
                            </StackPanel>
                        </CheckBox>

                        <!-- Transfery -->
                        <CheckBox Style="{StaticResource OrangeCheckBoxStyle}"
                                  IsChecked="{Binding ShowTransfers, Mode=TwoWay}"
                                  Margin="0">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Image Width="16" Height="16" Margin="0,0,8,0"
                                       Source="pack://application:,,,/Assets/Icons/transfer.png"/>
                                <TextBlock Text="Transfery" FontWeight="Bold" />
                            </StackPanel>
                        </CheckBox>

                    </StackPanel>
                </GroupBox>

                <!-- Kategorie -->
                <GroupBox Grid.Column="1" Style="{StaticResource FilterPanelStyle}">
                    <GroupBox.Header>
                        <DockPanel LastChildFill="True">
                            <TextBlock Text="Kategorie"
                                       Style="{StaticResource FilterHeaderTextStyle}"
                                       VerticalAlignment="Center"/>
                            <Button DockPanel.Dock="Right"
                                    Content="Pokaż wszystko"
                                    Style="{StaticResource FilterHeaderButtonStyle}"
                                    Click="ShowAllCategories_Click"/>
                        </DockPanel>
                    </GroupBox.Header>

                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding Categories}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Name}"
                                              Style="{StaticResource OrangeCheckBoxStyle}"
                                              IsChecked="{Binding IsSelected, Mode=TwoWay}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </GroupBox>

                <!-- Konta -->
                <GroupBox Grid.Column="2" Style="{StaticResource FilterPanelStyle}" Margin="0">
                    <GroupBox.Header>
                        <DockPanel LastChildFill="True">
                            <TextBlock Text="Konta"
                                       Style="{StaticResource FilterHeaderTextStyle}"
                                       VerticalAlignment="Center"/>
                            <Button DockPanel.Dock="Right"
                                    Content="Pokaż wszystko"
                                    Style="{StaticResource FilterHeaderButtonStyle}"
                                    Click="ShowAllAccounts_Click"/>
                        </DockPanel>
                    </GroupBox.Header>

                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding Accounts}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Name}"
                                              Style="{StaticResource OrangeCheckBoxStyle}"
                                              IsChecked="{Binding IsSelected, Mode=TwoWay}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </GroupBox>
            </Grid>

            <!-- CONTENT -->
            <Border Grid.Row="3"
                    Margin="16"
                    BorderBrush="{DynamicResource Surface.Border}"
                    BorderThickness="1"
                    CornerRadius="10"
                    Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- PeriodBar + search + sort -->
                    <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,12">

                        <Border Background="{DynamicResource Surface.Background}"
                                BorderBrush="{DynamicResource Surface.Border}"
                                BorderThickness="1"
                                CornerRadius="10"
                                Padding="10">
                            <controls:PeriodBarControl x:Name="PeriodBar"/>
                        </Border>

                        <!-- Szukaj + Wyczyść + Sortowanie -->
                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="SearchBox"
                                     Grid.Column="0"
                                     Width="420"
                                     Style="{StaticResource SearchBoxStyle}"
                                     Tag="Szukaj: opis, kategoria, konto, kwota…"
                                     Text="{Binding SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     KeyDown="SearchBox_KeyDown"/>

                            <Button Grid.Column="1"
                                    Content="Wyczyść"
                                    Margin="10,0,0,0"
                                    Padding="14,6"
                                    Focusable="False"
                                    IsTabStop="False"
                                    Click="ClearSearch_Click"/>

                            <StackPanel Grid.Column="2"
                                        Orientation="Horizontal"
                                        Margin="16,0,0,0"
                                        VerticalAlignment="Center">
                                <TextBlock Text="Sortowanie:"
                                           Foreground="{DynamicResource App.Foreground}"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>
                                <ComboBox Width="180"
                                          Height="30"
                                          ItemsSource="{Binding SortModes}"
                                          SelectedItem="{Binding SortMode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Converter={StaticResource SortModeTextConv}}"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </StackPanel>

                            <Border Grid.Column="3"/>
                        </Grid>

                        <Border Height="3"
                                Background="{DynamicResource Brand.Blue}"
                                CornerRadius="0,0,8,8"
                                Margin="0,10,0,0"/>
                    </StackPanel>

                    <!-- LEFT: realized -->
                    <Border Grid.Row="1"
                            Grid.Column="0"
                            Style="{StaticResource SectionCard}"
                            Margin="0,0,8,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Text="Transakcje"
                                       Style="{StaticResource KpiHeader}"
                                       Margin="0,0,0,8"/>

                            <Grid Grid.Row="1">
                                <TextBlock Text="Brak danych w tym okresie"
                                           Foreground="{DynamicResource App.Foreground}"
                                           FontStyle="Italic"
                                           HorizontalAlignment="Center"
                                           Margin="0,8,0,8">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=RealizedItems, Path=HasItems}" Value="False">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <ItemsControl x:Name="RealizedItems"
                                              ItemsSource="{Binding FilteredTransactions}"
                                              ItemTemplate="{StaticResource TransactionCardTemplate}"/>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- RIGHT: planned -->
                    <Border Grid.Row="1"
                            Grid.Column="1"
                            Style="{StaticResource SectionCard}"
                            Margin="8,0,0,0"
                            Visibility="{Binding ShowScheduled, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Text="Zaplanowane transakcje"
                                       Style="{StaticResource KpiHeader}"
                                       Margin="0,0,0,8"/>

                            <Grid Grid.Row="1">
                                <TextBlock Text="Brak danych w tym okresie"
                                           Foreground="{DynamicResource App.Foreground}"
                                           FontStyle="Italic"
                                           HorizontalAlignment="Center"
                                           Margin="0,8,0,8">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=PlannedItemsList, Path=HasItems}" Value="False">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <ItemsControl x:Name="PlannedItemsList"
                                              ItemsSource="{Binding PlannedTransactionsList}"
                                              ItemTemplate="{StaticResource TransactionCardTemplate}"/>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
