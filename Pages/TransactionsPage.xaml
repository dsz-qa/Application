<UserControl x:Class="Finly.Pages.TransactionsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ctrls="clr-namespace:Finly.Views.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:Finly.Pages"
             xmlns:vm="clr-namespace:Finly.ViewModels"
             x:Name="Root"
             mc:Ignorable="d">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Converter for formatting DateDisplay string (yyyy-MM-dd) to dd.MM.yyyy -->
        <local:DateStringToPLConverter x:Key="DateStringToPLConverter"/>

        <!-- Styl kontenera edycji: ciemne tło, biała czcionka -->
        <Style x:Key="EditContainerBorder" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource Control.Background}"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="Margin" Value="4,0,0,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Visibility" Value="Collapsed"/>
        </Style>

        <Style x:Key="EditTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource Control.Foreground}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="MinWidth" Value="120"/>
        </Style>

        <Style x:Key="EditComboStyle" TargetType="ComboBox">
            <Style.Resources>
                <!-- Wymuszenie czarnego tła w rozwijanej liście dla domyślnego ComboBox popup -->
                <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="#111"/>
                <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#111"/>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#222"/>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="White"/>
                <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}" Color="White"/>
            </Style.Resources>
            <Setter Property="Background" Value="#111"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="MinWidth" Value="160"/>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Background" Value="#111"/>
                        <Setter Property="Padding" Value="6,3"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBoxItem">
                                    <Border x:Name="Bd"
                                            Background="{TemplateBinding Background}"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsHighlighted" Value="True">
                                            <Setter TargetName="Bd"
                                                    Property="Background"
                                                    Value="#222"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Bd"
                                                    Property="Background"
                                                    Value="{DynamicResource Brand.Blue}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Mały przycisk ikonowy -->
        <Style x:Key="IconButtonSmall" TargetType="Button">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Background" Value="{DynamicResource Surface.Background}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Surface.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd"
                                        Property="Background"
                                        Value="{DynamicResource Btn.Hover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- KPI -->
        <Style x:Key="KpiValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,2,0,0"/>
            <Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
        </Style>

        <Style x:Key="KpiHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
            <Setter Property="Opacity" Value="1"/>
        </Style>

        <!-- Karta akcentowa KPI -->
        <Style x:Key="AccentCard" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Brand.Blue}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,16,0"/>
        </Style>

        <!-- Karty transakcji -->
        <Style x:Key="TransactionCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource Surface.Background}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Surface.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,16,12"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8"
                                      ShadowDepth="2"
                                      Opacity="0.16"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{DynamicResource Surface.Border}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TransactionCardPlanned"
               TargetType="Border"
               BasedOn="{StaticResource TransactionCard}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsPlanned}" Value="True">
                    <Setter Property="Opacity" Value="0.95"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PlannedLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
            <Setter Property="Opacity" Value="0.7"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- checkbox filtrów -->
        <Style x:Key="FilterCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0,4,0,4"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border x:Name="Box"
                                    Width="18"
                                    Height="18"
                                    CornerRadius="3"
                                    Background="{DynamicResource Surface.Background}"
                                    BorderBrush="{DynamicResource Surface.Border}"
                                    BorderThickness="1"
                                    VerticalAlignment="Center"
                                    Margin="0,0,8,0"/>
                            <Path x:Name="CheckGlyph"
                                  Data="M4,9 L7,12 L14,5"
                                  Stroke="{DynamicResource App.Foreground}"
                                  StrokeThickness="2.2"
                                  StrokeLineJoin="Round"
                                  StrokeStartLineCap="Round"
                                  StrokeEndLineCap="Round"
                                  Visibility="Collapsed"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Center"
                                  Margin="2,0,0,0"/>
                            <ContentPresenter Grid.Column="1"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"
                                              RecognizesAccessKey="True"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckGlyph"
                                        Property="Visibility"
                                        Value="Visible"/>
                                <Setter TargetName="Box"
                                        Property="Background"
                                        Value="{DynamicResource Accent}"/>
                                <Setter TargetName="Box"
                                        Property="BorderBrush"
                                        Value="{DynamicResource Accent}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Box"
                                        Property="Background"
                                        Value="{DynamicResource Btn.Hover}"/>
                                <Setter TargetName="Box"
                                        Property="BorderBrush"
                                        Value="{DynamicResource Btn.Border}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Box"
                                        Property="Opacity"
                                        Value="0.5"/>
                                <Setter Property="Foreground"
                                        Value="{DynamicResource App.Foreground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Panel filtrów – nagłówek jako dowolny XAML (żeby można było dodać przycisk) -->
        <Style x:Key="FilterPanelStyle" TargetType="GroupBox">
            <Setter Property="Height" Value="220"/>
            <Setter Property="MinHeight" Value="220"/>
            <Setter Property="Margin" Value="0,0,16,0"/>
            <Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Surface.Border}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid Height="{TemplateBinding Height}"
                              ClipToBounds="True">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- HEADER: dowolny XAML przekazany w GroupBox.Header -->
                            <ContentPresenter Grid.Row="0"
                                              Content="{TemplateBinding Header}"
                                              Margin="0,0,0,6"
                                              VerticalAlignment="Center"/>

                            <!-- BODY -->
                            <Border Grid.Row="1"
                                    Background="{DynamicResource Surface.Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="10"
                                    Padding="10"
                                    SnapsToDevicePixels="True">
                                <ContentPresenter VerticalAlignment="Stretch"
                                                  HorizontalAlignment="Stretch"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Mały przycisk w nagłówkach filtrów -->
        <Style x:Key="FilterHeaderButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="6,0,0,0"/>
            <Setter Property="Padding" Value="6,0"/>
            <Setter Property="MinWidth" Value="64"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{DynamicResource Brand.Blue}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Brand.Blue}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="8,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- listy do edycji -->
        <x:Array x:Key="CategoriesForEditRes" Type="{x:Type sys:String}"/>
        <x:Array x:Key="AccountsForEditRes" Type="{x:Type sys:String}"/>

        <!-- Transaction card reusable template with Read/Edit modes -->
        <DataTemplate x:Key="TransactionCardTemplate" DataType="{x:Type vm:TransactionCardVm}">
            <Border Background="{DynamicResource Surface.Background}"
                    BorderBrush="{DynamicResource Surface.Border}"
                    BorderThickness="1"
                    CornerRadius="10"
                    Padding="12"
                    Margin="0,0,16,12"
                    SnapsToDevicePixels="True">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Read mode layer -->
                    <Grid x:Name="ReadMode" Grid.RowSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- LEFT info -->
                        <StackPanel Grid.Column="0" Orientation="Vertical" Margin="4,0,8,0">
                            <!-- Header: type icon + category name -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                <Image Width="20" Height="20" Margin="0,0,6,0">
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Setter Property="Source" Value="/Assets/Icons/wydatki.png"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Kind}" Value="Expense">
                                                    <Setter Property="Source" Value="/Assets/Icons/wydatki.png"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Kind}" Value="Income">
                                                    <Setter Property="Source" Value="/Assets/Icons/przychody.png"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Kind}" Value="Transfer">
                                                    <Setter Property="Source" Value="/Assets/Icons/transfer.png"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>
                                <TextBlock Text="{Binding CategoryName, TargetNullValue=Brak kategorii, FallbackValue=Brak kategorii}"
                                           FontWeight="Bold"
                                           FontSize="14"
                                           Foreground="{DynamicResource App.Foreground}"/>
                            </StackPanel>

                            <!-- Description -->
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Opis:" FontWeight="SemiBold" Foreground="{DynamicResource App.Foreground}" Margin="0,0,6,0"/>
                                <TextBlock Text="{Binding Description, TargetNullValue=Brak danych, FallbackValue=Brak danych}"
                                           Foreground="{DynamicResource App.Foreground}" TextTrimming="CharacterEllipsis"/>
                            </StackPanel>

                            <!-- Date -->
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Data:" FontWeight="SemiBold" Foreground="{DynamicResource App.Foreground}" Margin="0,0,6,0"/>
                                <TextBlock Foreground="{DynamicResource App.Foreground}">
                                    <TextBlock.Text>
                                        <Binding Path="DateDisplay" Converter="{StaticResource DateStringToPLConverter}"/>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>

                            <!-- Account name -->
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Konto:" FontWeight="SemiBold" Foreground="{DynamicResource App.Foreground}" Margin="0,0,6,0"/>
                                <TextBlock Text="{Binding AccountName, TargetNullValue=Nie dotyczy, FallbackValue=Nie dotyczy}" Foreground="{DynamicResource App.Foreground}"/>
                            </StackPanel>

                            <!-- Amount -->
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Kwota:" FontWeight="SemiBold" Foreground="{DynamicResource App.Foreground}" Margin="0,0,6,0"/>
                                <TextBlock Text="{Binding AmountStr}" Foreground="{DynamicResource App.Foreground}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- RIGHT actions -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                            <Button Style="{StaticResource IconButtonSmall}" ToolTip="Edytuj" Click="StartEdit_Click">
                                <Path Data="M3,17 L7,21 L21,7 L17,3 Z M2,22 L8,22 L2,16 Z" Fill="{DynamicResource Brand.Blue}" Stretch="Uniform" Width="14" Height="14"/>
                            </Button>
                            <Button Style="{StaticResource IconButtonSmall}" ToolTip="Usuń" Click="ShowDeleteConfirm_Click" Margin="6,0,0,0">
                                <Image Source="/Assets/Icons/delete.png" Width="14" Height="14" Stretch="Uniform"/>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!-- Edit mode layer -->
                    <Grid x:Name="EditMode" Grid.RowSpan="2" Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- LEFT edit fields -->
                        <StackPanel Grid.Column="0" Orientation="Vertical" Margin="4,0,8,0">
                            <!-- Date editor with icon button -->
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Data:" FontWeight="SemiBold" Foreground="{DynamicResource App.Foreground}" Margin="0,0,6,0"/>
                                <Button x:Name="DateEditButton" Background="Transparent" BorderBrush="{x:Null}" Padding="2" Margin="0,0,6,0" Click="DateIcon_Click">
                                    <Image Source="/Assets/Icons/kalendarz.png" Width="18" Height="18"/>
                                </Button>
                                <DatePicker x:Name="DateEditor" SelectedDate="{Binding EditDate, Mode=TwoWay}"/>
                            </StackPanel>

                            <!-- Amount edit -->
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Kwota:" FontWeight="SemiBold" Foreground="{DynamicResource App.Foreground}" Margin="0,0,6,0"/>
                                <TextBox x:Name="AmountBox" Style="{StaticResource EditTextBoxStyle}" Text="{Binding EditAmountText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" GotFocus="EditAmount_GotFocus"/>
                            </StackPanel>

                            <!-- Category edit -->
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Kategoria:" FontWeight="SemiBold" Foreground="{DynamicResource App.Foreground}" Margin="0,0,6,0"/>
                                <ComboBox x:Name="CategoryCombo" Style="{StaticResource EditComboStyle}" ItemsSource="{StaticResource CategoriesForEditRes}" SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"/>
                            </StackPanel>

                            <!-- Account edit -->
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Konto:" FontWeight="SemiBold" Foreground="{DynamicResource App.Foreground}" Margin="0,0,6,0"/>
                                <ComboBox x:Name="AccountCombo" Style="{StaticResource EditComboStyle}" ItemsSource="{StaticResource AccountsForEditRes}" SelectedItem="{Binding SelectedAccount, Mode=TwoWay}"/>
                            </StackPanel>

                            <!-- Description edit -->
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Opis:" FontWeight="SemiBold" Foreground="{DynamicResource App.Foreground}" Margin="0,0,6,0"/>
                                <TextBox x:Name="DescriptionBox" Style="{StaticResource EditTextBoxStyle}" Width="260" Text="{Binding EditDescription, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" GotFocus="EditDescription_GotFocus"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- RIGHT actions -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                            <Button x:Name="SaveButton" Style="{StaticResource IconButtonSmall}" ToolTip="Zapisz" Click="SaveEdit_Click">
                                <Path Data="M2,10 L6,14 L14,4" Stroke="{DynamicResource Brand.Blue}" StrokeThickness="2.4" StrokeStartLineCap="Round" StrokeEndLineCap="Round" StrokeLineJoin="Round" Width="14" Height="14"/>
                            </Button>
                            <Button Style="{StaticResource IconButtonSmall}" ToolTip="Anuluj" Click="CancelEdit_Click" Margin="6,0,0,0">
                                <TextBlock Text="Anuluj" Foreground="{DynamicResource App.Foreground}"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Grid>

                <Border.Style>
                    <Style TargetType="Border" BasedOn="{StaticResource TransactionCard}">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="{DynamicResource Surface.Border}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>

            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                    <Setter TargetName="ReadMode" Property="Visibility" Value="Collapsed"/>
                    <Setter TargetName="EditMode" Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
    </UserControl.Resources>

    <!-- Główny scroll -->
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled"
                  PanningMode="VerticalOnly">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- KPI -->
            <Grid Grid.Row="0" Margin="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource AccentCard}">
                    <StackPanel>
                        <TextBlock Text="Suma wydatków"
                                   Style="{StaticResource KpiHeader}"/>
                        <TextBlock Text="{Binding TotalExpenses, StringFormat={}{0:N2} zł}"
                                   Style="{StaticResource KpiValueStyle}"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Style="{StaticResource AccentCard}">
                    <StackPanel>
                        <TextBlock Text="Suma przychodów"
                                   Style="{StaticResource KpiHeader}"/>
                        <TextBlock Text="{Binding TotalIncomes, StringFormat={}{0:N2} zł}"
                                   Style="{StaticResource KpiValueStyle}"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Style="{StaticResource AccentCard}">
                    <StackPanel>
                        <TextBlock Text="Bilans"
                                   Style="{StaticResource KpiHeader}"/>
                        <TextBlock Text="{Binding Balance, StringFormat={}{0:N2} zł}"
                                   Style="{StaticResource KpiValueStyle}"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- FILTRY -->
            <StackPanel Grid.Row="1"
                        Margin="16,0,16,12"
                        Orientation="Vertical">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Typ transakcji GroupBox header with 'Pokaż wszystko' + ikony -->
                    <GroupBox Grid.Column="0"
                              Style="{StaticResource FilterPanelStyle}">
                        <GroupBox.Header>
                            <DockPanel>
                                <TextBlock Text="Typ transakcji"
                                           FontWeight="Bold"
                                           FontSize="16"
                                           Foreground="{DynamicResource App.Foreground}"
                                           VerticalAlignment="Center"/>
                                <Button Content="Pokaż wszystko"
                                        Style="{StaticResource FilterHeaderButtonStyle}"
                                        Click="ShowAllTypes_Click"
                                        DockPanel.Dock="Right"/>
                            </DockPanel>
                        </GroupBox.Header>

                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <!-- Wydatki -->
                                <CheckBox Style="{StaticResource FilterCheckBoxStyle}"
                                          IsChecked="{Binding ShowExpenses, Mode=TwoWay}">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Assets/Icons/wydatki.png"
                                               Width="18"
                                               Height="18"
                                               Margin="0,0,6,0"/>
                                        <TextBlock Text="Wydatki"/>
                                    </StackPanel>
                                </CheckBox>

                                <!-- Przychody -->
                                <CheckBox Style="{StaticResource FilterCheckBoxStyle}"
                                          IsChecked="{Binding ShowIncomes, Mode=TwoWay}">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Assets/Icons/przychody.png"
                                               Width="18"
                                               Height="18"
                                               Margin="0,0,6,0"/>
                                        <TextBlock Text="Przychody"/>
                                    </StackPanel>
                                </CheckBox>

                                <!-- Transfery -->
                                <CheckBox Style="{StaticResource FilterCheckBoxStyle}"
                                          IsChecked="{Binding ShowTransfers, Mode=TwoWay}">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Assets/Icons/transfer.png"
                                               Width="18"
                                               Height="18"
                                               Margin="0,0,6,0"/>
                                        <TextBlock Text="Transfery"/>
                                    </StackPanel>
                                </CheckBox>
                            </StackPanel>
                        </ScrollViewer>
                    </GroupBox>

                    <!-- Kategorie GroupBox header with 'Pokaż wszystko' -->
                    <GroupBox Grid.Column="1"
                              Style="{StaticResource FilterPanelStyle}">
                        <GroupBox.Header>
                            <DockPanel>
                                <TextBlock Text="Kategorie"
                                           FontWeight="Bold"
                                           FontSize="16"
                                           Foreground="{DynamicResource App.Foreground}"
                                           VerticalAlignment="Center"/>
                                <Button Content="Pokaż wszystko"
                                        Style="{StaticResource FilterHeaderButtonStyle}"
                                        Click="ShowAllCategories_Click"
                                        DockPanel.Dock="Right"/>
                            </DockPanel>
                        </GroupBox.Header>

                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding Categories}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Style="{StaticResource FilterCheckBoxStyle}"
                                                  Content="{Binding Name}"
                                                  IsChecked="{Binding IsSelected, Mode=TwoWay}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </GroupBox>

                    <!-- Konta GroupBox header with 'Pokaż wszystko' -->
                    <GroupBox Grid.Column="2"
                              Style="{StaticResource FilterPanelStyle}">
                        <GroupBox.Header>
                            <DockPanel>
                                <TextBlock Text="Konta"
                                           FontWeight="Bold"
                                           FontSize="16"
                                           Foreground="{DynamicResource App.Foreground}"
                                           VerticalAlignment="Center"/>
                                <Button Content="Pokaż wszystko"
                                        Style="{StaticResource FilterHeaderButtonStyle}"
                                        Click="ShowAllAccounts_Click"
                                        DockPanel.Dock="Right"/>
                            </DockPanel>
                        </GroupBox.Header>

                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding Accounts}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Style="{StaticResource FilterCheckBoxStyle}"
                                                  Content="{Binding Name}"
                                                  IsChecked="{Binding IsSelected, Mode=TwoWay}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </GroupBox>
                </Grid>

                <Border Height="2"
                        Background="{DynamicResource Brand.Orange}"
                        CornerRadius="0,0,8,8"
                        Margin="0,8,0,0"/>
            </StackPanel>

            <!-- GŁÓWNY CONTENT -->
            <Border Grid.Row="2"
                    Margin="16"
                    BorderBrush="{DynamicResource Surface.Border}"
                    BorderThickness="1"
                    CornerRadius="10"
                    Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Pasek okresu -->
                    <StackPanel Grid.Row="0"
                                Grid.ColumnSpan="2"
                                Margin="0,0,0,12">
                        <ctrls:PeriodBarControl x:Name="PeriodBar"
                                                RangeChanged="PeriodBar_RangeChanged"/>
                        <Border Height="3"
                                Background="{DynamicResource Brand.Blue}"
                                CornerRadius="0,0,8,8"
                                Margin="0,6,0,0"/>
                    </StackPanel>

                    <!-- TRANS. ZREALIZOWANE (lewa) -->
                    <Border Grid.Row="1"
                            Grid.Column="0"
                            Style="{StaticResource TransactionCard}"
                            Margin="0,0,8,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Text="Transakcje"
                                       Style="{StaticResource KpiHeader}"
                                       Margin="0,0,0,8"/>

                            <Grid Grid.Row="1">
                                <!-- Placeholder -->
                                <TextBlock Text="Brak danych w tym okresie"
                                           Foreground="{DynamicResource App.Foreground}"
                                           FontStyle="Italic"
                                           HorizontalAlignment="Center"
                                           Margin="0,8,0,8">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Setter Property="Text">
                                                <Setter.Value>
                                                    <Binding ElementName="PlannedItems" Path="HasItems"/>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=RealizedItems, Path=HasItems}"
                                                             Value="False">
                                                    <Setter Property="Visibility"
                                                            Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <!-- Lista -->
                                <ItemsControl x:Name="RealizedItems"
                                              ItemsSource="{Binding FilteredTransactions}"
                                              ItemTemplate="{StaticResource TransactionCardTemplate}">
                                </ItemsControl>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- ZAPLANOWANE (prawa) -->
                    <Border Grid.Row="1"
                            Grid.Column="1"
                            Style="{StaticResource TransactionCard}"
                            Margin="8,0,0,0"
                            Visibility="{Binding ShowScheduled, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Text="Zaplanowane transakcje"
                                       Style="{StaticResource KpiHeader}"
                                       Margin="0,0,0,8"/>

                            <Grid Grid.Row="1">
                                <TextBlock Text="Brak danych w tym okresie"
                                           Foreground="{DynamicResource App.Foreground}"
                                           FontStyle="Italic"
                                           HorizontalAlignment="Center"
                                           Margin="0,8,0,8">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=PlannedItems, Path=HasItems}"
                                                             Value="False">
                                                    <Setter Property="Visibility"
                                                            Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <ItemsControl x:Name="PlannedItems"
                                              ItemsSource="{Binding PlannedTransactionsList}"
                                              ItemTemplate="{StaticResource TransactionCardTemplate}">
                                </ItemsControl>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
