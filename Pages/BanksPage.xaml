<UserControl x:Class="Finly.Pages.BanksPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24">

            <TextBlock Text="Rachunki bankowe" FontSize="24" FontWeight="Bold"/>

            <!-- ===== SNAPSHOT jak w 'Konto' ===== -->
            <Border Margin="0,12,0,0"
                    Background="{DynamicResource Surface.Background}"
                    BorderBrush="{DynamicResource Surface.Border}"
                    BorderThickness="1" CornerRadius="10">
                <Grid Margin="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="Banki" FontWeight="SemiBold"/>
                        <TextBlock x:Name="LblBanks" FontSize="18" FontWeight="Bold"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Gotówka" FontWeight="SemiBold"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="LblCash" FontSize="18" FontWeight="Bold"/>
                            <Button Content="Edytuj" Margin="8,0,0,0" Click="EditCash_Click"/>
                            <Button Content="Wypłać z banku" Margin="8,0,0,0" Click="WithdrawFromBank_Click"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="W kopertach" FontWeight="SemiBold"/>
                        <TextBlock x:Name="LblEnvelopes" FontSize="18" FontWeight="Bold"/>
                    </StackPanel>

                    <StackPanel Grid.Column="3">
                        <TextBlock Text="Do rozdysponowania" FontWeight="SemiBold"/>
                        <TextBlock x:Name="LblAvailable" FontSize="18" FontWeight="Bold"/>
                    </StackPanel>

                    <Button Grid.Column="4"
                            Content="Koperty"
                            Style="{StaticResource PrimaryButton}"
                            Click="OpenEnvelopes_Click"/>
                </Grid>
            </Border>

            <!-- Pasek akcji -->
            <StackPanel Orientation="Horizontal" Margin="0,12,0,8">
                <Button Content="Dodaj konto" Click="AddAccount_Click"/>
                <Button Content="Edytuj zaznaczone" Margin="8,0,0,0" Click="EditSelected_Click"/>
                <Button Content="Usuń zaznaczone"  Margin="8,0,0,0" Click="DeleteSelected_Click"/>
            </StackPanel>

            <!-- Lista rachunków -->
            <DataGrid x:Name="AccountsGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      MouseDoubleClick="AccountsGrid_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Bank"           Binding="{Binding Row[BankName]}"    Width="160"/>
                    <DataGridTextColumn Header="Nazwa rachunku" Binding="{Binding Row[AccountName]}" Width="*"/>
                    <DataGridTextColumn Header="IBAN"           Binding="{Binding Row[Iban]}"        Width="240"/>
                    <DataGridTextColumn Header="Waluta"         Binding="{Binding Row[Currency]}"    Width="80"/>
                    <DataGridTextColumn Header="Saldo"          Binding="{Binding Row[Balance], StringFormat={}{0:N2}}"
                                        Width="120"/>
                    <DataGridTemplateColumn Header="Akcje" Width="160" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="Edytuj" Margin="0,0,8,0"
                                            Tag="{Binding Path=Row[Id]}"
                                            Click="EditAccount_Click"/>
                                    <Button Content="Usuń"
                                            Tag="{Binding Path=Row[Id]}"
                                            Click="DeleteAccount_Click"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </ScrollViewer>
</UserControl>

