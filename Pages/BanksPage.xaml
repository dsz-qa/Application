<UserControl x:Class="Finly.Pages.BanksPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Finly.Pages"
             Background="{DynamicResource App.Background}"
             Foreground="{DynamicResource App.Foreground}"
             SnapsToDevicePixels="True"
             UseLayoutRounding="True"
             TextOptions.TextFormattingMode="Display"
             TextOptions.TextRenderingMode="ClearType">

    <UserControl.Resources>
        <!-- =====  Kafelek banku =====  -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Surface.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,12,0,0"/>
        </Style>

        <!-- =====  KPI =====  -->
        <Style x:Key="AccentCard" TargetType="Border" BasedOn="{StaticResource Card}">
            <Setter Property="BorderBrush" Value="{DynamicResource Brand.Blue}"/>
            <Setter Property="BorderThickness" Value="1.5"/>
        </Style>

        <!-- =====  Nagłówek =====  -->
        <Style x:Key="CardHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
            <Setter Property="Opacity" Value="0.9"/>
        </Style>

        <!-- =====  Wartość KPI =====  -->
        <Style x:Key="KpiValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
            <Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
        </Style>

        <!-- ===== Kafel konta bankowego ===== -->
        <DataTemplate DataType="{x:Type local:BankAccountVm}">
            <Border Style="{StaticResource Card}"
                    Margin="0,0,16,16"
                    Width="300">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- ===== NAZWA BANKU ===== -->
                    <StackPanel Grid.Row="0"
                                Orientation="Horizontal"
                                Margin="0,0,0,6">
                        <Image Source="{Binding LogoPath}"
                               Width="28" Height="28"
                               Margin="0,0,8,0"
                               VerticalAlignment="Center"/>

                        <TextBlock Text="{Binding BankName}"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource App.Foreground}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- ===== SZCZEGÓŁY RACHUNKU ===== -->
                    <StackPanel Grid.Row="1"
                                Margin="0,2,0,0">

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Nazwa rachunku: "
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource App.Foreground}"
                                       Margin="0,0,4,0"/>
                            <TextBlock Text="{Binding AccountName}"
                                       Foreground="{DynamicResource App.Foreground}"/>
                        </StackPanel>

                        <Grid Margin="0,2,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="IBAN: "
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource App.Foreground}"
                                       Margin="0,0,4,0"
                                       VerticalAlignment="Top"/>

                            <TextBlock Grid.Column="1"
                                       Text="{Binding Iban}"
                                       Foreground="{DynamicResource App.Foreground}"
                                       TextWrapping="Wrap"
                                       TextTrimming="None"/>
                        </Grid>

                        <StackPanel Orientation="Horizontal"
                                    Margin="0,2,0,0">
                            <TextBlock Text="Saldo: "
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource App.Foreground}"
                                       Margin="0,0,4,0"/>
                            <TextBlock Text="{Binding BalanceStr}"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource App.Foreground}"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Row="2"
                                Margin="0,12,0,0">

                        <!-- =====  Wypłata / Wpłata =====  -->
                        <Grid HorizontalAlignment="Left">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button x:Name="WithdrawButton"
                                    Grid.Column="0"
                                    Content="Wypłać ▼"
                                    Padding="10,5"
                                    MinWidth="130"
                                    Click="WithdrawFromAccount_Click"
                                    Tag="{Binding}"/>

                            <Button x:Name="DepositButton"
                                    Grid.Column="2"
                                    Content="Wpłać ▼"
                                    Padding="10,5"
                                    MinWidth="130"
                                    Click="DepositToAccount_Click"
                                    Tag="{Binding}"/>
                        </Grid>

                        <!-- ===== Edytuj / Usuń ===== -->
                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0"
                                    Click="EditAccount_Click"
                                    Tag="{Binding}"
                                    Style="{StaticResource EditIconButton}"/>

                            <Button Grid.Column="2"
                                    Click="DeleteAccount_Click"
                                    Tag="{Binding}"
                                    Style="{StaticResource DeleteIconButton}"/>
                        </Grid>
                    </StackPanel>

                    <!-- =====  PANEL POTWIERDZENIA USUNIĘCIA ===== -->
                    <Border x:Name="DeleteConfirmPanel"
                            Grid.Row="3"
                            Background="{DynamicResource Surface.Background}"
                            BorderBrush="{DynamicResource Surface.Border}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="8"
                            Margin="0,8,0,0"
                            Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock Text="Na pewno chcesz usunąć ten rachunek?"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,8"
                                       Foreground="{DynamicResource App.Foreground}"/>

                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Right">
                                <Button Content="Nie"
                                        Width="80"
                                        Margin="0,0,8,0"
                                        Click="DeleteCancel_Click"/>
                                <Button Content="Tak"
                                        Width="80"
                                        Background="{DynamicResource Brand.Red}"
                                        Foreground="White"
                                        BorderBrush="{DynamicResource Brand.Red}"
                                        Click="DeleteConfirm_Click"
                                        Tag="{Binding}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                </Grid>
            </Border>
        </DataTemplate>

        <!-- ===== KAFEL „DODAJ KONTO” ===== -->
        <DataTemplate DataType="{x:Type local:AddAccountTile}">
            <Border Style="{StaticResource Card}"
                    Margin="0,0,16,16"
                    Width="260"
                    Cursor="Hand"
                    HorizontalAlignment="Left"
                    MouseLeftButtonUp="AddAccountCard_Click">
                <Grid>
                    <StackPanel HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="0,16,0,16">
                        <TextBlock Text="+"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource App.Foreground}"/>
                        <TextBlock Text="Dodaj konto"
                                   Margin="0,6,0,0"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource App.Foreground}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="24">
            <StackPanel>
                <Border Style="{StaticResource AccentCard}"
                        BorderThickness="2"
                        Margin="0,16,0,8"
                        HorizontalAlignment="Left">
                    <Grid>
                        <StackPanel>
                            <TextBlock Text="Razem wszystkie konta bankowe"
                                       Style="{StaticResource CardHeader}"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Margin="0,0,0,4"/>

                            <TextBlock Text="Suma sald na wszystkich Twoich kontach bankowych."
                                       Margin="0,2,0,0"
                                       Foreground="{DynamicResource App.Foreground}"
                                       Opacity="0.7"/>

                            <TextBlock x:Name="LblTotalBanks"
                                       Style="{StaticResource KpiValueStyle}"
                                       FontSize="26"
                                       Text="0,00 zł"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Separator Margin="0,12,0,8"
                           Height="1"
                           Background="{DynamicResource Surface.Border}"
                           Opacity="0.8"/>

                <TextBlock Text="Konta bankowe"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="{DynamicResource App.Foreground}"
                           Margin="0,4,0,12"/>

                <!-- ===== Lista kafelków ===== -->
                <ItemsControl x:Name="AccountsRepeater"
                              Margin="0,8,0,0">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel HorizontalAlignment="Stretch"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>

            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
