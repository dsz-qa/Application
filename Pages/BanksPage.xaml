<UserControl x:Class="Finly.Pages.BanksPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:Finly.Helpers.Converters">

    <UserControl.Resources>

        <!-- Konwerter: null/pusty string -> Visibility -->
        <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />

        <!-- Karta ogólna -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background"      Value="{DynamicResource Surface.Background}"/>
            <Setter Property="BorderBrush"     Value="{DynamicResource Surface.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius"    Value="10"/>
            <Setter Property="Padding"         Value="12"/>
            <Setter Property="Margin"          Value="0,12,0,0"/>
        </Style>

        <!-- Karta z niebieskim obramowaniem -->
        <Style x:Key="AccentCard" TargetType="Border" BasedOn="{StaticResource Card}">
            <Setter Property="BorderBrush"     Value="{DynamicResource Brand.Blue}"/>
            <Setter Property="BorderThickness" Value="1.8"/>
        </Style>

        <!-- Nagłówek kafelka -->
        <Style x:Key="CardHeader" TargetType="TextBlock">
            <Setter Property="FontSize"   Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
            <Setter Property="Opacity"    Value="0.9"/>
        </Style>

    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24">

            <!-- Tytuł strony -->
            <TextBlock Text="Konta bankowe"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="{DynamicResource App.Foreground}"/>

            <!-- ===== KAFEL: RAZEM WSZYSTKIE KONTA ===== -->
            <Border Style="{StaticResource AccentCard}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="Razem wszystkie konta bankowe"
                                   Style="{StaticResource CardHeader}"/>

                        <TextBlock Text="Suma sald na wszystkich Twoich kontach bankowych."
                                   Margin="0,2,0,0"
                                   Foreground="{DynamicResource App.Foreground}"
                                   Opacity="0.7"/>

                        <TextBlock x:Name="LblTotalBanks"
                                   Margin="0,8,0,0"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource App.Foreground}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Pasek akcji -->
            <StackPanel Orientation="Horizontal" Margin="0,16,0,8">
                <Button Content="Dodaj konto"
                        Click="AddAccount_Click"
                        Style="{DynamicResource PrimaryButton}"/>
            </StackPanel>

            <!-- ===== LISTA KONT – KAFELKI ===== -->
            <ItemsControl x:Name="AccountsRepeater">
                <!-- WrapPanel jako układ kafelków -->
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Margin="0,8,0,0"
                                   HorizontalAlignment="Stretch"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <!-- Jeden kafelek konta -->
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="12"
                                Margin="0,0,16,16"
                                CornerRadius="10"
                                Width="260"
                                Background="{DynamicResource Surface.Background}"
                                BorderBrush="{DynamicResource Brand.Blue}"
                                BorderThickness="1.5">

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- LOGO + nazwa banku -->
                                <StackPanel Grid.Row="0"
                                            Orientation="Horizontal"
                                            Margin="0,0,0,8">
                                    <Image Source="{Binding LogoPath}"
                                           Width="22" Height="22"
                                           Margin="0,0,6,0"
                                           VerticalAlignment="Center"/>

                                    <TextBlock Text="{Binding BankName}"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource App.Foreground}"/>
                                </StackPanel>

                                <!-- IBAN -->
                                <TextBlock Grid.Row="1"
                                           Text="{Binding Iban}"
                                           FontSize="11"
                                           Margin="0,0,0,4"
                                           Foreground="{DynamicResource App.Foreground}"
                                           Opacity="0.7"
                                           Visibility="{Binding Iban,
                                                Converter={StaticResource NullToVisibilityConverter}}"/>

                                <!-- Saldo -->
                                <StackPanel Grid.Row="1" Margin="0,20,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Saldo:"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource App.Foreground}"
                                                   Margin="0,0,4,0"/>
                                        <TextBlock Text="{Binding BalanceStr}"
                                                   FontSize="14"
                                                   FontWeight="Bold"
                                                   Foreground="{DynamicResource App.Foreground}"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- AKCJE -->
                                <StackPanel Grid.Row="2" Margin="0,12,0,0">

                                    <!-- WYPŁAĆ + WPŁAĆ -->
                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Left">
                                        <Button Content="Wypłać z konta ▼"
                                                Padding="10,5"
                                                Margin="0,0,8,0"
                                                Click="WithdrawFromAccount_Click"
                                                Tag="{Binding}"/>

                                        <Button Content="Wpłać na ▼"
                                                Padding="10,5"
                                                Click="DepositToAccount_Click"
                                                Tag="{Binding}"/>
                                    </StackPanel>

                                    <!-- EDYTUJ + USUŃ -->
                                    <StackPanel Orientation="Horizontal"
                                                Margin="0,12,0,0">

                                        <Button Content="Edytuj"
                                                Padding="8,4"
                                                MinWidth="80"
                                                Click="EditAccount_Click"
                                                Tag="{Binding}"/>

                                        <Button Padding="8,4"
                                                MinWidth="40"
                                                Margin="8,0,0,0"
                                                Background="Transparent"
                                                BorderBrush="{DynamicResource Brand.Red}"
                                                BorderThickness="1.2"
                                                Click="DeleteAccount_Click"
                                                Tag="{Binding}">
                                            <StackPanel Orientation="Horizontal">
                                                <Image Source="/Assets/Icons/delete.png"
                                                       Width="16" Height="16"
                                                       Margin="0,0,4,0"/>
                                                <TextBlock Text="Usuń"
                                                           Foreground="{DynamicResource Brand.Red}"/>
                                            </StackPanel>
                                        </Button>

                                    </StackPanel>
                                </StackPanel>

                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </StackPanel>
    </ScrollViewer>
</UserControl>




