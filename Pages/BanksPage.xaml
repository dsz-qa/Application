<UserControl x:Class="Finly.Pages.BanksPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Finly.Pages">

    <UserControl.Resources>
        <!-- Karta ogólna -->
        <Style x:Key="Card" TargetType="Border">
            <!-- usunięto podwójne tło: zostaje tylko przeźroczyste -->
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Surface.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,12,0,0"/>
        </Style>

        <!-- Karta z niebieskim obramowaniem (tylko KPI) -->
        <Style x:Key="AccentCard" TargetType="Border" BasedOn="{StaticResource Card}">
            <Setter Property="BorderBrush" Value="{DynamicResource Brand.Blue}"/>
            <Setter Property="BorderThickness" Value="1.5"/>
        </Style>

        <!-- Nagłówek -->
        <Style x:Key="CardHeader" TargetType="TextBlock">
            <Setter Property="FontSize"   Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
            <Setter Property="Opacity"    Value="0.9"/>
        </Style>

        <!-- Wartość KPI -->
        <Style x:Key="KpiValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize"   Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin"     Value="0,4,0,0"/>
            <Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
        </Style>

        <!-- Toggle przy operacjach (wolna gotówka / odłożona / koperta) -->
        <Style x:Key="OperationToggleButton" TargetType="ToggleButton">
            <Setter Property="Background" Value="#111111"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,6"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="14">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Margin="6,2"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- lekkie zacienienie przy najechaniu -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border"
                                Property="Background"
                                Value="#191919"/>
                            </Trigger>
                            <!-- mocniejsze przy wciśnięciu -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border"
                                Property="Background"
                                Value="#222222"/>
                            </Trigger>
                            <!-- zaznaczone = pomarańczowa ramka -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border"
                                Property="BorderBrush"
                                Value="{DynamicResource Brand.Orange}"/>
                                <Setter TargetName="border"
                                Property="BorderThickness"
                                Value="1.5"/>
                            </Trigger>
                            <!-- wyszarzanie gdy disabled (na przyszłość) -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border"
                                Property="Background"
                                Value="#303030"/>
                                <Setter Property="Foreground"
                                Value="#808080"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- Styl dla przycisków źródła pieniędzy w panelu operacji -->
        <Style x:Key="OpSourceToggleStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="#222222"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Surface.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="BorderBrush"
                    Value="{DynamicResource Brand.Orange}"/>
                    <Setter Property="BorderThickness" Value="1.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>


        <!-- ===== KAFEL KONTA BANKOWEGO ===== -->
        <DataTemplate DataType="{x:Type local:BankAccountVm}">
            <Border Style="{StaticResource Card}"
                    Margin="0,0,16,16"
                    Width="300">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- LOGO + NAZWA BANKU -->
                    <StackPanel Grid.Row="0"
                                Orientation="Horizontal"
                                Margin="0,0,0,6">
                        <Image Source="{Binding LogoPath}"
                               Width="28" Height="28"
                               Margin="0,0,8,0"
                               VerticalAlignment="Center"/>

                        <TextBlock Text="{Binding BankName}"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- SZCZEGÓŁY RACHUNKU -->
                    <StackPanel Grid.Row="1"
                                Margin="0,2,0,0">

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Nazwa rachunku: "
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource App.Foreground}"
                                       Margin="0,0,4,0"/>
                            <TextBlock Text="{Binding AccountName}"
                                       Foreground="{DynamicResource App.Foreground}"/>
                        </StackPanel>
                        
                        <Grid Margin="0,2,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
               Text="IBAN: "
               FontWeight="SemiBold"
               Foreground="{DynamicResource App.Foreground}"
               Margin="0,0,4,0"
               VerticalAlignment="Top"/>

                            <TextBlock Grid.Column="1"
               Text="{Binding Iban}"
               Foreground="{DynamicResource App.Foreground}"
               TextWrapping="Wrap"
               TextTrimming="None"/>
                        </Grid>


                        <StackPanel Orientation="Horizontal"
                                    Margin="0,2,0,0">
                            <TextBlock Text="Saldo: "
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource App.Foreground}"
                                       Margin="0,0,4,0"/>
                            <TextBlock Text="{Binding BalanceStr}"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource App.Foreground}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- AKCJE -->
                    <StackPanel Grid.Row="2"
                                Margin="0,12,0,0">

                        <!-- Wypłata / Wpłata -->
                        <Grid HorizontalAlignment="Left">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button x:Name="WithdrawButton"
                                    Grid.Column="0"
                                    Content="Wypłać ▼"
                                    Padding="10,5"
                                    MinWidth="130"
                                    Click="WithdrawFromAccount_Click"
                                    Tag="{Binding}"/>

                            <Button x:Name="DepositButton"
                                    Grid.Column="2"
                                    Content="Wpłać ▼"
                                    Padding="10,5"
                                    MinWidth="130"
                                    Click="DepositToAccount_Click"
                                    Tag="{Binding}"/>
                        </Grid>

                        <!-- Edytuj / Usuń -->
                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Zmienione: dodano ikonę edit.png po lewej stronie -->
                            <Button Grid.Column="0" Click="EditAccount_Click" Tag="{Binding}" Style="{StaticResource EditIconButton}"/>

                            <Button Grid.Column="2" Click="DeleteAccount_Click" Tag="{Binding}" Style="{StaticResource DeleteIconButton}"/>
                        </Grid>
                    </StackPanel>

                    <!-- PANEL POTWIERDZENIA USUNIĘCIA -->
                    <Border x:Name="DeleteConfirmPanel"
                            Grid.Row="3"
                            Background="{DynamicResource Surface.Background}"
                            BorderBrush="{DynamicResource Surface.Border}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="8"
                            Margin="0,8,0,0"
                            Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock Text="Na pewno chcesz usunąć ten rachunek?"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,8"
                                       Foreground="{DynamicResource App.Foreground}"/>

                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Right">
                                <Button Content="Nie"
                                        Width="80"
                                        Margin="0,0,8,0"
                                        Click="DeleteCancel_Click"/>
                                <Button Content="Tak"
                                        Width="80"
                                        Background="{DynamicResource Brand.Red}"
                                        Foreground="White"
                                        BorderBrush="{DynamicResource Brand.Red}"
                                        Click="DeleteConfirm_Click"
                                        Tag="{Binding}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                </Grid>
            </Border>
        </DataTemplate>

        <!-- ===== KAFEL „DODAJ KONTO” ===== -->
        <DataTemplate DataType="{x:Type local:AddAccountTile}">
            <Border Style="{StaticResource Card}"
                    Margin="0,0,16,16"
                    Width="260"
                    Cursor="Hand"
                    HorizontalAlignment="Left"
                    MouseLeftButtonUp="AddAccountCard_Click">
                <Grid>
                    <StackPanel HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="0,16,0,16">
                        <TextBlock Text="+"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource App.Foreground}"/>
                        <TextBlock Text="Dodaj konto"
                                   Margin="0,6,0,0"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource App.Foreground}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

    </UserControl.Resources>

    <!-- CAŁA STRONA w ScrollViewerze -->
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ===== GÓRA ===== -->
            <StackPanel Grid.Row="0">

                <!-- KAFEL RAZEM WSZYSTKIE KONTA -->
                <Border Style="{StaticResource AccentCard}"
                        BorderThickness="2"
                        Margin="0,16,0,8"
                        HorizontalAlignment="Left">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock Text="Razem wszystkie konta bankowe"
                                       Style="{StaticResource CardHeader}"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Margin="0,0,0,4"/>

                            <TextBlock Text="Suma sald na wszystkich Twoich kontach bankowych."
                                       Margin="0,2,0,0"
                                       Foreground="{DynamicResource App.Foreground}"
                                       Opacity="0.7"/>

                            <TextBlock x:Name="LblTotalBanks"
                                       Style="{StaticResource KpiValueStyle}"
                                       FontSize="26"
                                       Text="0,00 zł"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Separator Margin="0,12,0,8"
                           Height="1"
                           Background="{DynamicResource Surface.Border}"
                           Opacity="0.8"/>

                <TextBlock Text="Konta bankowe"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="{DynamicResource App.Foreground}"
                           Margin="0,4,0,12"/>

                <!-- LISTA KONT + DODAJ -->
                <ItemsControl x:Name="AccountsRepeater"
                              Margin="0,8,0,0">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel HorizontalAlignment="Stretch"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>

            </StackPanel>

            <!-- ===== DÓŁ: OPERACJE / EDYCJA ===== -->
            <Grid Grid.Row="1">

                <!-- PANEL OPERACJI -->
                <Border x:Name="OperationPanel"
                        Background="Transparent"
                        BorderBrush="{DynamicResource Surface.Border}"
                        BorderThickness="1"
                        CornerRadius="10"
                        Padding="24"
                        Margin="0,0,0,16"
                        Visibility="Collapsed"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                    <Grid HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          MaxWidth="800">
                        <StackPanel HorizontalAlignment="Center" Width="480">

                            <TextBlock x:Name="OpTitle"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Margin="0,0,0,10"
                                       TextAlignment="Center"
                                       Foreground="{DynamicResource App.Foreground}"/>

                            <!-- Kwota -->
                            <Grid Margin="0,0,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="180"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="Kwota:"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource App.Foreground}"
                                           VerticalAlignment="Center"/>
                                <TextBox Grid.Column="2"
         x:Name="OpAmountBox"
         Height="26"
         HorizontalContentAlignment="Right"
         VerticalContentAlignment="Center"
         GotFocus="OpAmountBox_GotFocus"
         LostFocus="OpAmountBox_LostFocus"/>

                            </Grid>

                            <TextBlock x:Name="OpErrorText"
                                       Foreground="{DynamicResource Brand.Red}"
                                       FontSize="11"
                                       Margin="0,0,0,4"
                                       Visibility="Collapsed"/>

                            <!-- Pytanie: skąd/dokąd -->
                            <StackPanel Margin="0,8,0,0">
                                <TextBlock x:Name="OpQuestionLabel"
                                           Text="Skąd chcesz wpłacić pieniądze na konto?"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource App.Foreground}"/>

                                <StackPanel Orientation="Horizontal"
            Margin="0,6,0,0">

                                    <ToggleButton x:Name="OpFreeCashButton"
                  Content="Wolna gotówka"
                  Tag="free"
                  MinWidth="120"
                  Style="{StaticResource OperationToggleButton}"
                  Click="OpSourceButton_Click"/>

                                    <ToggleButton x:Name="OpSavedCashButton"
                  Content="Odłożona gotówka"
                  Tag="saved"
                  MinWidth="140"
                  Style="{StaticResource OperationToggleButton}"
                  Click="OpSourceButton_Click"/>

                                    <ToggleButton x:Name="OpEnvelopeButton"
                  Content="Koperta"
                  Tag="envelope"
                  MinWidth="100"
                  Style="{StaticResource OperationToggleButton}"
                  Click="OpSourceButton_Click"/>
                                </StackPanel>

                            </StackPanel>

                            <!-- Wybór koperty (tylko gdy wybrano „Koperta”) -->
                            <StackPanel x:Name="OpEnvelopeRow"
                                        Margin="0,8,0,0"
                                        Visibility="Collapsed">
                                <TextBlock Text="Wybierz kopertę:"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource App.Foreground}"/>
                                <ComboBox x:Name="OpEnvelopeCombo"
          Width="260"
          Margin="0,4,0,0"
          DisplayMemberPath="Name"/>

                            </StackPanel>

                            <!-- PRZYCISKI -->
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Right"
                                        Margin="0,16,0,0">
                                <Button Content="Zapisz"
                                        Width="90"
                                        Style="{DynamicResource PrimaryButton}"
                                        Margin="0,0,8,0"
                                        Click="OpSave_Click"/>
                                <Button Content="Anuluj"
                                        Width="90"
                                        Click="OpCancel_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- PANEL EDYCJI KONTA -->
                <Border x:Name="EditPanel"
                        Background="Transparent"
                        BorderBrush="{DynamicResource Surface.Border}"
                        BorderThickness="1"
                        CornerRadius="10"
                        Padding="24"
                        Margin="0,0,0,16"
                        Visibility="Collapsed"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                    <Grid HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          MaxWidth="800">
                        <StackPanel HorizontalAlignment="Center" Width="480">
                            <TextBlock x:Name="EditTitle"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Margin="0,0,0,10"
                                       TextAlignment="Center"
                                       Foreground="{DynamicResource App.Foreground}"/>

                            <TextBlock x:Name="EditErrorText"
                                       Foreground="{DynamicResource Brand.Red}"
                                       FontSize="11"
                                       Margin="0,0,0,8"
                                       Visibility="Collapsed"/>

                            <!-- Bank -->
                            <StackPanel Margin="0,4,0,8">
                                <TextBlock Text="Bank"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource App.Foreground}"/>

                                <ComboBox x:Name="EditBankCombo"
                                          Margin="0,4,0,0"
                                          MinWidth="260">
                                    <ComboBoxItem>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Width="20" Height="20"
                                                   Margin="0,0,8,0"
                                                   Source="pack://application:,,,/Assets/Banks/revolutlogo.png"/>
                                            <TextBlock Text="Revolut"/>
                                        </StackPanel>
                                    </ComboBoxItem>

                                    <ComboBoxItem>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Width="20" Height="20"
                                                   Margin="0,0,8,0"
                                                   Source="pack://application:,,,/Assets/Banks/pkobplogo.jpg"/>
                                            <TextBlock Text="PKO Bank Polski"/>
                                        </StackPanel>
                                    </ComboBoxItem>

                                    <ComboBoxItem>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Width="20" Height="20"
                                                   Margin="0,0,8,0"
                                                   Source="pack://application:,,,/Assets/Banks/mbanklogo.jpg"/>
                                            <TextBlock Text="mBank"/>
                                        </StackPanel>
                                    </ComboBoxItem>

                                    <ComboBoxItem>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Width="20" Height="20"
                                                   Margin="0,0,8,0"
                                                   Source="pack://application:,,,/Assets/Banks/pekaologo.jpg"/>
                                            <TextBlock Text="Bank Pekao"/>
                                        </StackPanel>
                                    </ComboBoxItem>

                                    <ComboBoxItem>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Width="20" Height="20"
                                                   Margin="0,0,8,0"
                                                   Source="pack://application:,,,/Assets/Banks/inglogo.png"/>
                                            <TextBlock Text="ING Bank Śląski"/>
                                        </StackPanel>
                                    </ComboBoxItem>

                                    <ComboBoxItem>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Width="20" Height="20"
                                                   Margin="0,0,8,0"
                                                   Source="pack://application:,,,/Assets/Banks/creditagricolelogo.png"/>
                                            <TextBlock Text="Credit Agricole"/>
                                        </StackPanel>
                                    </ComboBoxItem>

                                    <ComboBoxItem>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Width="20" Height="20"
                                                   Margin="0,0,8,0"
                                                   Source="pack://application:,,,/Assets/Banks/santanderlogo.png"/>
                                            <TextBlock Text="Santander Bank Polska"/>
                                        </StackPanel>
                                    </ComboBoxItem>

                                    <ComboBoxItem>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Width="20" Height="20"
                                                   Margin="0,0,8,0"
                                                   Source="pack://application:,,,/Assets/Banks/aliorbanklogo.png"/>
                                            <TextBlock Text="Alior Bank"/>
                                        </StackPanel>
                                    </ComboBoxItem>

                                    <ComboBoxItem>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Width="20" Height="20"
                                                   Margin="0,0,8,0"
                                                   Source="pack://application:,,,/Assets/Banks/milleniumlogo.png"/>
                                            <TextBlock Text="Millennium"/>
                                        </StackPanel>
                                    </ComboBoxItem>

                                    <ComboBoxItem>
                                        <StackPanel Orientation="Horizontal">
                                            <Image Width="20" Height="20"
                                                   Margin="0,0,8,0"
                                                   Source="pack://application:,,,/Assets/Banks/innybank.png"/>
                                            <TextBlock Text="Inny bank"/>
                                        </StackPanel>
                                    </ComboBoxItem>
                                </ComboBox>

                                <TextBox x:Name="EditBankCustomBox"
                                         Margin="0,4,0,0"
                                         Height="26"
                                         VerticalContentAlignment="Center"
                                         Visibility="Collapsed"
                                         ToolTip="Jeśli wybrałaś 'Inny bank', wpisz tutaj nazwę."/>
                            </StackPanel>

                            <!-- Nazwa rachunku -->
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
               Text="Nazwa rachunku"
               FontWeight="SemiBold"
               VerticalAlignment="Center"
               Foreground="{DynamicResource App.Foreground}"/>

                                <TextBox Grid.Column="2"
             x:Name="EditAccountNameBox"
             Height="26"
             VerticalContentAlignment="Center"/>
                            </Grid>

                            <!-- IBAN + opis pod spodem -->
                            <StackPanel Margin="0,0,0,8">
                                <!-- samo pole IBAN -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="16"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                   Text="IBAN (opcjonalnie)"
                   FontWeight="SemiBold"
                   VerticalAlignment="Center"
                   Foreground="{DynamicResource App.Foreground}"/>


                                    <TextBox Grid.Column="2"
         x:Name="EditIbanBox"
         Height="26"
         VerticalContentAlignment="Center"
         TextChanged="EditIbanBox_TextChanged"/>

                                </Grid>

                                <!-- informacja o poprawnym IBAN – CZERWONA, pod polem -->
                                <TextBlock x:Name="IbanHintText"
               Margin="0,4,0,0"
               Foreground="{DynamicResource Brand.Red}"
               FontSize="11"
               Text="Polski IBAN musi mieć dokładnie 28 znaków (PL + 26 cyfr)."
               TextWrapping="Wrap"
               Visibility="Collapsed"/>
                            </StackPanel>



                            <!-- Saldo -->
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="140"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
               Text="Saldo (PLN)"
               FontWeight="SemiBold"
               VerticalAlignment="Center"
               Foreground="{DynamicResource App.Foreground}"/>

                                <TextBox Grid.Column="2"
             x:Name="EditBalanceBox"
             Height="26"
             HorizontalContentAlignment="Right"
             VerticalContentAlignment="Center"
             GotFocus="EditBalanceBox_GotFocus"
             LostFocus="EditBalanceBox_LostFocus"/>
                            </Grid>


                            <!-- PRZYCISKI -->
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Right"
                                        Margin="0,16,0,0">
                                <Button Content="Zapisz"
                                        Width="80"
                                        Style="{DynamicResource PrimaryButton}"
                                        Margin="0,0,8,0"
                                        Click="EditSave_Click"/>
                                <Button Content="Anuluj"
                                        Width="80"
                                        Click="EditCancel_Click"/>
                            </StackPanel>

                        </StackPanel>
                    </Grid>
                </Border>

            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>









