<UserControl x:Class="Finly.Pages.EnvelopesPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Finly.Pages"
             xmlns:data="clr-namespace:System.Data;assembly=System.Data"
             mc:Ignorable="d">

    <UserControl.Resources>

        <!-- Karta ogólna -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background"      Value="{DynamicResource Surface.Background}"/>
            <Setter Property="BorderBrush"     Value="{DynamicResource Surface.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius"    Value="10"/>
            <Setter Property="Padding"         Value="12"/>
            <Setter Property="Margin"          Value="0,12,16,0"/>
        </Style>

        <!-- Karta z niebieskim obramowaniem (KPI) -->
        <Style x:Key="AccentCard" TargetType="Border" BasedOn="{StaticResource Card}">
            <Setter Property="BorderBrush"     Value="{DynamicResource Brand.Blue}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Margin"          Value="0,16,16,0"/>
        </Style>

        <!-- Nagłówek karty -->
        <Style x:Key="CardHeader" TargetType="TextBlock">
            <Setter Property="FontSize"   Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
            <Setter Property="Opacity"    Value="0.9"/>
        </Style>

        <!-- Wartość KPI -->
        <Style x:Key="KpiValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize"   Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin"     Value="0,4,0,0"/>
            <Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
        </Style>

        <!-- ===== KAFEL ISTNIEJĄCEJ KOPERTY (DataRowView) ===== -->
        <DataTemplate DataType="{x:Type data:DataRowView}">
            <Border Style="{StaticResource Card}"
                    Width="260">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0">

                        <!-- Nazwa + ikonka -->
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,0,4">
                            <TextBlock Text="✉"
                                       FontSize="18"
                                       Margin="0,0,6,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Row[Name]}"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Docelowa kwota -->
                        <TextBlock Text="Docelowa kwota"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource App.Foreground}"
                                   Opacity="0.9"/>
                        <TextBlock Text="{Binding Row[Target], StringFormat={}{0:N2} zł}"
                                   Margin="0,2,0,4"
                                   Foreground="{DynamicResource App.Foreground}"/>

                        <!-- Przydzielona kwota -->
                        <TextBlock Text="Przydzielona kwota"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource App.Foreground}"
                                   Opacity="0.9"/>
                        <TextBlock Text="{Binding Row[Allocated], StringFormat={}{0:N2} zł}"
                                   Margin="0,2,0,4"
                                   Foreground="{DynamicResource App.Foreground}"/>

                        <!-- Cel (z notatki) -->
                        <TextBlock Text="Cel"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource App.Foreground}"
                                   Opacity="0.9"/>
                        <TextBlock Text="{Binding Row[GoalText]}"
                                   Margin="0,2,0,4"
                                   Foreground="{DynamicResource App.Foreground}"
                                   TextWrapping="Wrap"/>

                        <!-- Opis (z notatki) -->
                        <TextBlock Text="Opis"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource App.Foreground}"
                                   Opacity="0.9"/>
                        <TextBlock Text="{Binding Row[Description]}"
                                   Margin="0,2,0,4"
                                   Foreground="{DynamicResource App.Foreground}"
                                   TextWrapping="Wrap"/>

                        <!-- Termin (tylko data, bez miesięcznej kwoty) -->
                        <TextBlock Text="Termin"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource App.Foreground}"
                                   Opacity="0.9"/>
                        <TextBlock Text="{Binding Row[Deadline]}"
                                   Margin="0,2,0,4"
                                   Foreground="{DynamicResource App.Foreground}"
                                   TextWrapping="Wrap"/>
                    </StackPanel>

                    <!-- Przyciski + potwierdzenie (inline) -->
                    <StackPanel Grid.Row="1"
                                Margin="0,10,0,0"
                                HorizontalAlignment="Right">

                        <!-- Przyciski -->
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Right">
                            <Button Margin="0,0,8,0"
                                    Padding="8,4"
                                    MinWidth="70"
                                    Tag="{Binding}"
                                    Click="EditEnvelope_Click">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <Image Source="/Assets/Icons/edit.png" Width="16" Height="16" Margin="0,0,6,0"/>
                                    <TextBlock Text="Edytuj" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Padding="8,4"
                                    MinWidth="70"
                                    Tag="{Binding}"
                                    Click="DeleteEnvelope_Click">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <Image Source="/Assets/Icons/delete.png" Width="16" Height="16" Margin="0,0,6,0"/>
                                    <TextBlock Text="Usuń" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <!-- Inline confirmation: hidden by default -->
                        <StackPanel x:Name="DeleteConfirmPanel"
                                    Orientation="Horizontal"
                                    Visibility="Collapsed"
                                    HorizontalAlignment="Right"
                                    Margin="0,8,0,0">
                            <TextBlock Text="Czy na pewno chcesz usunąć kopertę?"
                                       Margin="0,0,8,0"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource App.Foreground}"/>
                            <Button Content="Tak"
                                    Padding="8,4"
                                    MinWidth="70"
                                    Tag="{Binding}"
                                    Click="ConfirmDeleteEnvelope_Click"
                                    Margin="0,0,8,0"/>
                            <Button Content="Nie"
                                    Padding="8,4"
                                    MinWidth="70"
                                    Click="CancelDeleteEnvelope_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- ===== KAFEL „DODAJ KOPERTĘ” ===== -->
        <DataTemplate DataType="{x:Type local:AddEnvelopeTile}">
            <Border Style="{StaticResource Card}"
                    Width="260"
                    Cursor="Hand"
                    MouseLeftButtonUp="AddEnvelopeCard_Click">
                <Grid>
                    <StackPanel HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="0,16,0,16">
                        <TextBlock Text="+"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource App.Foreground}"/>
                        <TextBlock Text="Dodaj kopertę"
                                   Margin="0,6,0,0"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource App.Foreground}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

    </UserControl.Resources>

    <!-- CAŁA STRONA -->
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- KPI -->
                <RowDefinition Height="*"/>
                <!-- Koperty -->
                <RowDefinition Height="Auto"/>
                <!-- Formularz -->
            </Grid.RowDefinitions>

            <!-- ==================== GÓRNE KPI ==================== -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Razem wszystkie koperty -->
                <Border Grid.Column="0" Style="{StaticResource AccentCard}">
                    <StackPanel>
                        <TextBlock Text="Razem wszystkie koperty"
                                   Style="{StaticResource CardHeader}"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Margin="0,0,0,4"
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="Suma środków przydzielonych do wszystkich kopert."
                                   Margin="0,2,0,0"
                                   Foreground="{DynamicResource App.Foreground}"
                                   Opacity="0.7"
                                   TextWrapping="Wrap"/>
                        <TextBlock x:Name="TotalEnvelopesText"
                                   Style="{StaticResource KpiValueStyle}"
                                   FontSize="24"
                                   Text="0,00 zł"/>
                    </StackPanel>
                </Border>

                <!-- Odłożona gotówka -->
                <Border Grid.Column="1" Style="{StaticResource AccentCard}">
                    <StackPanel>
                        <TextBlock Text="Odłożona gotówka"
                                   Style="{StaticResource CardHeader}"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Margin="0,0,0,4"
                                   TextWrapping="Wrap"/>
                        <TextBlock x:Name="SavedCashText"
                                   Style="{StaticResource KpiValueStyle}"
                                   FontSize="24"
                                   Text="0,00 zł"/>
                    </StackPanel>
                </Border>

                <!-- Gotówka w kopertach -->
                <Border Grid.Column="2" Style="{StaticResource AccentCard}">
                    <StackPanel>
                        <TextBlock Text="Gotówka w kopertach"
                                   Style="{StaticResource CardHeader}"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Margin="0,0,0,4"
                                   TextWrapping="Wrap"/>
                        <TextBlock x:Name="EnvelopesSumText"
                                   Style="{StaticResource KpiValueStyle}"
                                   FontSize="24"
                                   Text="0,00 zł"/>
                    </StackPanel>
                </Border>

                <!-- Gotówka do rozdysponowania -->
                <Border Grid.Column="3" Style="{StaticResource AccentCard}">
                    <StackPanel>
                        <TextBlock Text="Gotówka do rozdysponowania"
                                   Style="{StaticResource CardHeader}"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Margin="0,0,0,4"
                                   TextWrapping="Wrap"/>
                        <TextBlock x:Name="UnassignedText"
                                   Style="{StaticResource KpiValueStyle}"
                                   FontSize="24"
                                   Text="0,00 zł"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- ==================== LISTA KOPERT + DODAJ ==================== -->
            <StackPanel Grid.Row="1" Margin="0,12,0,0">
                <Separator Height="1"
                           Background="{DynamicResource Surface.Border}"
                           Opacity="0.8"
                           Margin="0,0,0,8"/>

                <TextBlock Text="Koperty"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="{DynamicResource App.Foreground}"
                           Margin="0,4,0,12"/>

                <ItemsControl x:Name="EnvelopesCards">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel HorizontalAlignment="Stretch"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </StackPanel>

            <!-- ==================== FORMULARZ DODAJ / EDYTUJ ==================== -->
            <Border x:Name="FormBorder"
                    Grid.Row="2"
                    Margin="0,16,0,24"
                    Background="{DynamicResource Surface.Background}"
                    BorderBrush="{DynamicResource Surface.Border}"
                    BorderThickness="1"
                    CornerRadius="10"
                    Padding="16"
                    Visibility="Collapsed">
                <StackPanel HorizontalAlignment="Center"
                            MaxWidth="600">

                    <TextBlock x:Name="FormHeader"
                               Text="Dodaj kopertę"
                               FontSize="18"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource App.Foreground}"/>

                    <Grid Margin="0,12,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="220"/>
                        </Grid.ColumnDefinitions>

                        <!-- Nazwa -->
                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Text="Nazwa:"
                                   Margin="0,4,8,4"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource App.Foreground}"/>
                        <TextBox x:Name="NameBox"
                                 Grid.Row="0" Grid.Column="1"
                                 MinWidth="220"/>

                        <!-- Przydzielono -->
                        <TextBlock Grid.Row="1" Grid.Column="0"
                                   Text="Przydzielono:"
                                   Margin="0,4,8,4"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource App.Foreground}"/>
                        <TextBox x:Name="AllocatedBox"
                                 Grid.Row="1" Grid.Column="1"
                                 HorizontalContentAlignment="Right"
                                 Text="0,00"
                                 GotFocus="AmountBox_GotFocus"
                                 LostFocus="AmountBox_LostFocus"/>

                        <!-- Docelowa kwota -->
                        <TextBlock Grid.Row="2" Grid.Column="0"
                                   Text="Docelowa kwota:"
                                   Margin="0,4,8,4"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource App.Foreground}"/>
                        <TextBox x:Name="TargetBox"
                                 Grid.Row="2" Grid.Column="1"
                                 HorizontalContentAlignment="Right"
                                 Text="0,00"
                                 GotFocus="AmountBox_GotFocus"
                                 LostFocus="AmountBox_LostFocus"/>

                        <!-- Cel -->
                        <TextBlock Grid.Row="3" Grid.Column="0"
                                   Text="Cel:"
                                   Margin="0,4,8,4"
                                   VerticalAlignment="Top"
                                   Foreground="{DynamicResource App.Foreground}"/>
                        <TextBox x:Name="GoalBox"
                                 Grid.Row="3" Grid.Column="1"
                                 Height="50"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"/>

                        <!-- Opis -->
                        <TextBlock Grid.Row="4" Grid.Column="0"
                                   Text="Opis:"
                                   Margin="0,4,8,4"
                                   VerticalAlignment="Top"
                                   Foreground="{DynamicResource App.Foreground}"/>
                        <TextBox x:Name="DescriptionBox"
                                 Grid.Row="4" Grid.Column="1"
                                 Height="60"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"/>

                        <!-- Termin -->
                        <TextBlock Grid.Row="5" Grid.Column="0"
                                   Text="Termin (data):"
                                   Margin="0,4,8,4"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource App.Foreground}"/>
                        <DatePicker x:Name="DeadlinePicker"
                                    Grid.Row="5" Grid.Column="1"
                                    Height="28"
                                    SelectedDateChanged="DeadlinePicker_SelectedDateChanged"/>

                        <!-- Miesięcznie trzeba odkładać – ukryte w UI -->
                        <TextBlock Grid.Row="6" Grid.Column="0"
                                   Text="Miesięcznie trzeba odkładać:"
                                   Margin="0,4,8,4"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource App.Foreground}"
                                   Visibility="Collapsed"/>
                        <TextBlock x:Name="MonthlyRequiredText"
                                   Grid.Row="6" Grid.Column="1"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource App.Foreground}"
                                   Visibility="Collapsed"/>
                    </Grid>

                    <StackPanel Orientation="Horizontal"
                                Margin="0,12,0,0"
                                HorizontalAlignment="Center">
                        <Button x:Name="SaveEnvelopeBtn"
                                Content="Dodaj"
                                Width="100"
                                Margin="0,0,8,0"
                                Click="SaveEnvelope_Click"/>
                        <Button Content="Anuluj"
                                Width="100"
                                Click="CancelEdit_Click"/>
                    </StackPanel>

                    <TextBlock x:Name="FormMessage"
                               Margin="0,8,0,0"
                               HorizontalAlignment="Center"
                               Foreground="OrangeRed"/>
                </StackPanel>
            </Border>

        </Grid>
    </ScrollViewer>
</UserControl>