<UserControl x:Class="Finly.Pages.ChartsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lvc="http://livecharts.com"
             xmlns:lvcwpf="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:lvcsk="clr-namespace:LiveChartsCore.SkiaSharpView;assembly=LiveChartsCore.SkiaSharpView"
             xmlns:vc="clr-namespace:Finly.Views.Controls">

    <UserControl.Resources>
        <!-- Ten sam styl kart co na Dashboardzie -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background"      Value="{DynamicResource Surface.Background}"/>
            <Setter Property="BorderBrush"     Value="{DynamicResource Surface.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius"    Value="10"/>
            <Setter Property="Padding"         Value="12"/>
        </Style>

        <Style x:Key="CardHeader" TargetType="TextBlock">
            <Setter Property="FontSize"   Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Pasek okresu + tryb -->
            <Border Grid.Row="0" Style="{StaticResource Card}" Margin="0,0,0,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Własny pasek okresu -->
                    <vc:PeriodBarControl Grid.Column="0" x:Name="PeriodBar"/>

                    <!-- Tryb -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Tryb:" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="{DynamicResource App.Foreground}"/>
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="ModeExpensesBtn" Content="Wydatki"  Click="Mode_Click"/>
                            <Button x:Name="ModeIncomesBtn"  Content="Przychody" Click="Mode_Click" Margin="8,0,0,0"/>
                            <Button x:Name="ModeTransferBtn" Content="Transfer" Click="Mode_Click" Margin="8,0,0,0"/>
                            <Button x:Name="ModeCashflowBtn" Content="Cashflow" Click="Mode_Click" Margin="8,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Karty statystik -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    <!-- Karta 1: Pie -->
                    <Border Style="{StaticResource Card}" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="Podział wg kategorii" Style="{StaticResource CardHeader}"/>
                            <lvcwpf:PieChart Series="{Binding CategoriesSeries}"
                                             Background="{DynamicResource Surface.Background}"/>
                        </StackPanel>
                    </Border>

                    <!-- Karta 2: Line -->
                    <Border Style="{StaticResource Card}" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="Trend w czasie" Style="{StaticResource CardHeader}"/>
                            <lvcwpf:CartesianChart Series="{Binding TrendSeries}"
                                                   XAxes="{Binding TrendXAxes}"
                                                   Background="{DynamicResource Surface.Background}"/>
                        </StackPanel>
                    </Border>

                    <!-- Karta 3: Column (konta/koperty) -->
                    <Border Style="{StaticResource Card}" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="Wg kont / kopert" Style="{StaticResource CardHeader}"/>
                            <lvcwpf:CartesianChart Series="{Binding AccountsSeries}"
                                                   XAxes="{Binding AccountsXAxes}"
                                                   Background="{DynamicResource Surface.Background}"/>
                        </StackPanel>
                    </Border>

                    <!-- Karta 4: Column (dni tygodnia) -->
                    <Border Style="{StaticResource Card}" Margin="0,0,12,0">
                        <StackPanel>
                            <TextBlock Text="Wg dnia tygodnia" Style="{StaticResource CardHeader}"/>
                            <lvcwpf:CartesianChart Series="{Binding WeekdaySeries}"
                                                   XAxes="{Binding WeekdayXAxes}"
                                                   Background="{DynamicResource Surface.Background}"/>
                        </StackPanel>
                    </Border>

                    <!-- Sekcja eksportu -->
                    <Border Style="{StaticResource Card}" Margin="0,12,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="Eksport do PDF" Click="ExportPdf_Click"/>
                            <Button Content="Eksport do CSV" Click="ExportCsv_Click" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </ScrollViewer>
</UserControl>




