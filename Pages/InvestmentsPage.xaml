<UserControl x:Class="Finly.Pages.InvestmentsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:Finly.Views.Controls"
             xmlns:local="clr-namespace:Finly.Pages"
             mc:Ignorable="d"
             x:Name="Root"
             Background="{DynamicResource App.Background}"
             SnapsToDevicePixels="True"
             UseLayoutRounding="True"
             TextOptions.TextFormattingMode="Display"
             TextOptions.TextRenderingMode="ClearType">

    <UserControl.Resources>

        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>

        <!-- Styl kart -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource Surface.Background}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Surface.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,12,12,0"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="UseLayoutRounding" Value="True"/>
        </Style>

        <Style x:Key="SelectedCard" TargetType="Border" BasedOn="{StaticResource Card}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="BorderBrush" Value="{DynamicResource Brand.Orange}"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="AccentCard" TargetType="Border" BasedOn="{StaticResource Card}">
            <Setter Property="BorderBrush" Value="{DynamicResource Brand.Blue}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Margin" Value="0,16,12,0"/>
        </Style>

        <Style x:Key="CardHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
            <Setter Property="Opacity" Value="0.9"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>

        <Style x:Key="KpiValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
            <Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>

        <Style x:Key="DeltaBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{DynamicResource Surface.Background}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Surface.Border}"/>
        </Style>

        <!-- ===================== MINI TABLE (VALUATIONS) ===================== -->

        <DataTemplate x:Key="ValuationsHeaderTemplate">
            <Border Style="{StaticResource MiniTableHeaderBorder}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Data" Style="{StaticResource MiniTableHeaderText}"/>
                    <TextBlock Grid.Column="1" Text="Wartość" Style="{StaticResource MiniTableHeaderText}"/>
                    <TextBlock Grid.Column="2" Text="Zmiana vs poprzednia" Style="{StaticResource MiniTableHeaderText}"/>
                    <TextBlock Grid.Column="3" Text="Zmiana %" Style="{StaticResource MiniTableHeaderText}"/>
                </Grid>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="ValuationsRowTemplate" DataType="{x:Type local:HistoryRowVm}">
            <Grid Margin="0,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding Date}" Style="{StaticResource MiniTableCellText}"/>
                <TextBlock Grid.Column="1" Text="{Binding Value}" Style="{StaticResource MiniTableCellText}"/>
                <TextBlock Grid.Column="2" Text="{Binding Delta}" Style="{StaticResource MiniTableCellText}"/>
                <TextBlock Grid.Column="3" Text="{Binding DeltaPct}" Style="{StaticResource MiniTableCellText}"/>
            </Grid>
        </DataTemplate>

        <!-- ===================== OŚ Y (tick) – Canvas.Top binding ===================== -->
        <Style x:Key="AxisTickPresenterStyle" TargetType="ContentPresenter">
            <Setter Property="Canvas.Top" Value="{Binding Top}"/>
        </Style>

        <!-- ===================== RANGE BAR TEMPLATE ===================== -->
        <DataTemplate x:Key="RangeBarTemplate" DataType="{x:Type local:RangeBarVm}">
            <Grid Width="64" Margin="4,0" ToolTip="{Binding Tooltip}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="220"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="{Binding CurrentText}"
                           FontSize="11"
                           Opacity="0.85"
                           HorizontalAlignment="Center"
                           Foreground="{DynamicResource App.Foreground}"/>

                <Grid Grid.Row="1" Background="Transparent">
                    <Canvas Height="220" Background="Transparent">
                        <Border Canvas.Left="18"
                                Width="28"
                                Height="{Binding BarHeight}"
                                CornerRadius="6"
                                Background="{Binding Fill}"
                                BorderThickness="1"
                                BorderBrush="{DynamicResource Surface.Border}"
                                Canvas.Top="{Binding BarTop}"/>

                        <Ellipse Width="8"
                                 Height="8"
                                 Fill="{DynamicResource App.Foreground}"
                                 Opacity="0.9"
                                 Canvas.Left="28"
                                 Canvas.Top="{Binding CurrentDotTop}"/>
                    </Canvas>
                </Grid>

                <TextBlock Grid.Row="2"
                           Text="{Binding Label}"
                           FontSize="11"
                           Opacity="0.8"
                           HorizontalAlignment="Center"
                           Foreground="{DynamicResource App.Foreground}"/>
            </Grid>
        </DataTemplate>

        <!-- ===================== KARTA INWESTYCJI ===================== -->
        <DataTemplate DataType="{x:Type local:InvestmentVm}">
            <!-- Brak stałych Width/MinWidth: UniformGrid sam nada szerokość (2 kolumny),
                 a cała strona i tak skaluje się przez Viewbox u góry -->
            <Border Style="{StaticResource SelectedCard}"
                    HorizontalAlignment="Stretch"
                    Cursor="Hand"
                    MouseLeftButtonUp="InvestmentCard_Click">

                <StackPanel Background="Transparent">

                    <Grid Margin="0,0,0,8" Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Rectangle Grid.Column="0"
                                   Width="24"
                                   Height="24"
                                   Margin="0,0,8,0"
                                   VerticalAlignment="Top"
                                   Fill="{DynamicResource Brand.Orange}">
                            <Rectangle.OpacityMask>
                                <ImageBrush Stretch="Uniform" ImageSource="/Assets/Icons/inwestycje.png"/>
                            </Rectangle.OpacityMask>
                        </Rectangle>

                        <StackPanel Grid.Column="1" Background="Transparent">
                            <TextBlock FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource App.Foreground}"
                                       TextWrapping="Wrap"
                                       TextTrimming="CharacterEllipsis">
                                <Run Text="Inwestycja: "/>
                                <Run Text="{Binding Name}"/>
                            </TextBlock>

                            <TextBlock FontSize="12"
                                       Opacity="0.85"
                                       Foreground="{DynamicResource App.Foreground}"
                                       TextWrapping="Wrap"
                                       TextTrimming="CharacterEllipsis">
                                <Run Text="{Binding TypeDisplay, Mode=OneWay}"/>
                                <Run Text="  •  "/>
                                <Run Text="{Binding LastDateDisplay, Mode=OneWay}"/>
                            </TextBlock>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="Ostatnia wycena"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource App.Foreground}"
                               Opacity="0.9"/>
                    <TextBlock Text="{Binding LastValueDisplay, Mode=OneWay}"
                               Margin="0,2,0,8"
                               Foreground="{DynamicResource App.Foreground}"
                               TextTrimming="CharacterEllipsis"/>

                    <TextBlock Text="Zmiana od poprzedniej wyceny"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource App.Foreground}"
                               Opacity="0.9"/>
                    <Border Style="{StaticResource DeltaBadge}" Margin="0,4,0,8">
                        <TextBlock Text="{Binding DeltaDisplay, Mode=OneWay}"
                                   Foreground="{Binding DeltaBrush}"
                                   FontWeight="SemiBold"
                                   TextWrapping="Wrap"
                                   TextTrimming="CharacterEllipsis"/>
                    </Border>

                    <TextBlock Text="Opis"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource App.Foreground}"
                               Opacity="0.9"/>
                    <TextBlock Text="{Binding Description, Mode=OneWay}"
                               Margin="0,2,0,6"
                               TextWrapping="Wrap"
                               TextTrimming="CharacterEllipsis"
                               Foreground="{DynamicResource App.Foreground}"/>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,10,0,0"
                                Background="Transparent">
                        <Button Content="Dodaj wycenę"
                                Style="{StaticResource SecondaryButton}"
                                Padding="12,6"
                                Margin="0,0,8,0"
                                Click="AddValuation_Click"/>

                        <Button Click="EditInvestment_Click"
                                Style="{StaticResource EditIconButton}"
                                Margin="0,0,8,0"/>
                        <Button Click="DeleteInvestment_Click"
                                Style="{StaticResource DeleteIconButton}"/>
                    </StackPanel>

                    <Border Margin="0,8,0,0"
                            Padding="10"
                            CornerRadius="8"
                            BorderThickness="1"
                            BorderBrush="{DynamicResource Surface.Border}"
                            Background="{DynamicResource Surface.Background}"
                            Visibility="{Binding IsDeleteConfirmVisible, Converter={StaticResource BoolToVisibility}}">
                        <StackPanel Background="Transparent">
                            <TextBlock Text="Czy na pewno chcesz usunąć tę inwestycję?"
                                       FontSize="12"
                                       Foreground="{DynamicResource App.Foreground}"
                                       Margin="0,0,0,8"
                                       TextWrapping="Wrap"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="Tak"
                                        Margin="0,0,8,0"
                                        Padding="10,4"
                                        MinWidth="70"
                                        Click="DeleteInvestmentConfirm_Click"/>
                                <Button Content="Nie"
                                        Padding="10,4"
                                        MinWidth="70"
                                        Click="DeleteInvestmentCancel_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </Border>
        </DataTemplate>

        <!-- KAFEL „DODAJ INWESTYCJĘ” -->
        <DataTemplate DataType="{x:Type local:AddInvestmentTile}">
            <Border Style="{StaticResource Card}"
                    HorizontalAlignment="Stretch"
                    Cursor="Hand"
                    MouseLeftButtonUp="AddInvestmentCard_Click">
                <Grid Background="Transparent">
                    <Border Margin="10"
                            BorderThickness="1"
                            CornerRadius="8"
                            BorderBrush="{DynamicResource Surface.Border}"
                            Background="Transparent"/>

                    <StackPanel HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="0,18,0,18"
                                Background="Transparent">
                        <TextBlock Text="+"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource App.Foreground}"/>
                        <TextBlock Text="Dodaj inwestycję"
                                   Margin="0,6,0,0"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource App.Foreground}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

    </UserControl.Resources>

    <!-- Pionowy scroll OK, poziomy scroll strony: NIE -->
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled"
                  Background="Transparent">

        <!-- Klucz do Twojego wymagania:
             Viewbox skaluje CAŁĄ stronę, ale NIE zmienia układu (wciąż 3 KPI w rzędzie, 2 kafle w rzędzie).
             To jest standardowe podejście w WPF, kiedy chcesz utrzymać stały layout i skalować UI. :contentReference[oaicite:1]{index=1} -->
        <Viewbox Stretch="Uniform"
                 StretchDirection="Both"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Top">

            <!-- Ta szerokość jest "bazą projektową". Viewbox skaluje w dół i w górę.
                 Dobierz ją pod swój “idealny” wygląd (np. laptop 15-16"). -->
            <Grid Width="1400"
                  Margin="24"
                  Background="Transparent">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- KPI PORTFELA: zawsze 1 rząd / 3 kolumny -->
                <Grid Grid.Row="0" Background="Transparent">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Style="{StaticResource AccentCard}" Margin="0,16,12,0">
                        <StackPanel Background="Transparent">
                            <TextBlock Text="Wartość portfela inwestycyjnego"
                                       Style="{StaticResource CardHeader}"/>
                            <TextBlock x:Name="TotalValueText"
                                       Style="{StaticResource KpiValueStyle}"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Style="{StaticResource AccentCard}" Margin="0,16,12,0">
                        <StackPanel Background="Transparent">
                            <TextBlock Text="Zmiana od poprzednich wycen"
                                       Style="{StaticResource CardHeader}"/>
                            <TextBlock x:Name="TotalDeltaText"
                                       Style="{StaticResource KpiValueStyle}"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" Style="{StaticResource AccentCard}" Margin="0,16,0,0">
                        <StackPanel Background="Transparent">
                            <TextBlock Text="Zmiana % od poprzednich wycen"
                                       Style="{StaticResource CardHeader}"/>
                            <TextBlock x:Name="TotalDeltaPctText"
                                       Style="{StaticResource KpiValueStyle}"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- CONTENT: LEWO (LISTA) + PRAWO (SZCZEGÓŁY) -->
                <Grid Grid.Row="1" Margin="0,12,0,0" Background="Transparent">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- LEWA STRONA -->
                    <Border Grid.Column="0"
                            Background="{DynamicResource App.Background}"
                            CornerRadius="10">
                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled"
                                      Background="Transparent">
                            <StackPanel Background="Transparent">

                                <Separator Height="1"
                                           Background="{DynamicResource Surface.Border}"
                                           Opacity="0.8"
                                           Margin="0,0,0,10"/>

                                <TextBlock Text="Inwestycje"
                                           FontSize="24"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource App.Foreground}"
                                           Margin="0,4,0,12"/>

                                <TextBlock x:Name="InvestmentsErrorText"
                                           Visibility="Collapsed"
                                           Foreground="OrangeRed"
                                           Margin="0,0,0,8"
                                           TextWrapping="Wrap"/>

                                <!-- ZAWSZE 2 W RZĘDZIE -->
                                <ItemsControl x:Name="InvestmentsRepeater" Margin="0,6,0,0">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="2"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>

                            </StackPanel>
                        </ScrollViewer>
                    </Border>

                    <!-- PRAWA STRONA -->
                    <Border Grid.Column="2"
                            Background="{DynamicResource App.Background}"
                            CornerRadius="10">
                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled"
                                      Background="Transparent">
                            <StackPanel Background="Transparent">

                                <Separator Height="1"
                                           Background="{DynamicResource Surface.Border}"
                                           Opacity="0.8"
                                           Margin="0,0,0,10"/>

                                <TextBlock Text="Szczegóły inwestycji"
                                           FontSize="24"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource App.Foreground}"
                                           Margin="0,4,0,12"/>

                                <!-- Placeholder gdy brak wyboru -->
                                <Border x:Name="NoSelectionCard"
                                        Style="{StaticResource Card}"
                                        Margin="0,0,0,12">
                                    <TextBlock Text="Kliknij kafelek inwestycji po lewej, aby zobaczyć wykres i historię wycen."
                                               Foreground="{DynamicResource App.Foreground}"
                                               Opacity="0.85"
                                               TextWrapping="Wrap"/>
                                </Border>

                                <!-- Panel szczegółów -->
                                <Border x:Name="DetailsCard"
                                        Style="{StaticResource Card}"
                                        Margin="0,0,0,12"
                                        Visibility="Collapsed">
                                    <StackPanel Background="Transparent">

                                        <Grid Margin="0,0,0,10" Background="Transparent">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" Background="Transparent">
                                                <TextBlock x:Name="SelectedTitleText"
                                                           FontSize="18"
                                                           FontWeight="Bold"
                                                           Foreground="{DynamicResource App.Foreground}"
                                                           TextWrapping="Wrap"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <TextBlock x:Name="SelectedSubtitleText"
                                                           FontSize="12"
                                                           Opacity="0.8"
                                                           Foreground="{DynamicResource App.Foreground}"
                                                           TextWrapping="Wrap"
                                                           TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>

                                            <Button Grid.Column="1"
                                                    x:Name="AddValuationRightButton"
                                                    Content="Dodaj wycenę"
                                                    Style="{StaticResource PrimaryButton}"
                                                    Padding="14,6"
                                                    Click="AddValuationRight_Click"/>
                                        </Grid>

                                        <!-- KPI wybranej inwestycji -->
                                        <Grid Background="Transparent">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0"
                                                    CornerRadius="10"
                                                    BorderThickness="1"
                                                    BorderBrush="{DynamicResource Surface.Border}"
                                                    Background="{DynamicResource Surface.Background}"
                                                    Padding="12"
                                                    Margin="0,0,12,0">
                                                <StackPanel Background="Transparent">
                                                    <TextBlock Text="Pierwsza wycena"
                                                               Opacity="0.85"
                                                               Foreground="{DynamicResource App.Foreground}"/>
                                                    <TextBlock x:Name="FirstText"
                                                               FontWeight="Bold"
                                                               FontSize="16"
                                                               Foreground="{DynamicResource App.Foreground}"
                                                               TextWrapping="Wrap"
                                                               TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>
                                            </Border>

                                            <Border Grid.Column="1"
                                                    CornerRadius="10"
                                                    BorderThickness="1"
                                                    BorderBrush="{DynamicResource Surface.Border}"
                                                    Background="{DynamicResource Surface.Background}"
                                                    Padding="12"
                                                    Margin="0,0,12,0">
                                                <StackPanel Background="Transparent">
                                                    <TextBlock Text="Ostatnia wycena"
                                                               Opacity="0.85"
                                                               Foreground="{DynamicResource App.Foreground}"/>
                                                    <TextBlock x:Name="LastText"
                                                               FontWeight="Bold"
                                                               FontSize="16"
                                                               Foreground="{DynamicResource App.Foreground}"
                                                               TextWrapping="Wrap"
                                                               TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>
                                            </Border>

                                            <Border Grid.Column="2"
                                                    CornerRadius="10"
                                                    BorderThickness="1"
                                                    BorderBrush="{DynamicResource Surface.Border}"
                                                    Background="{DynamicResource Surface.Background}"
                                                    Padding="12">
                                                <StackPanel Background="Transparent">
                                                    <TextBlock Text="Zmiana od pierwszej wyceny"
                                                               Opacity="0.85"
                                                               Foreground="{DynamicResource App.Foreground}"/>
                                                    <TextBlock x:Name="ChangeText"
                                                               FontWeight="Bold"
                                                               FontSize="16"
                                                               TextWrapping="Wrap"
                                                               TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>
                                            </Border>
                                        </Grid>

                                        <!-- WYKRES -->
                                        <Border Margin="0,12,0,0"
                                                Padding="10"
                                                CornerRadius="10"
                                                BorderThickness="1"
                                                BorderBrush="{DynamicResource Surface.Border}"
                                                Background="{DynamicResource Surface.Background}">
                                            <StackPanel Background="Transparent">
                                                <TextBlock Text="Wartość wycen w czasie"
                                                           Foreground="{DynamicResource App.Foreground}"
                                                           Opacity="0.85"
                                                           Margin="0,0,0,8"/>

                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="84"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <Grid Grid.Column="0" Height="220" Background="Transparent">
                                                        <Canvas Height="220" Background="Transparent">
                                                            <ItemsControl ItemsSource="{Binding AxisTicks}"
                                                                          ItemContainerStyle="{StaticResource AxisTickPresenterStyle}">
                                                                <ItemsControl.ItemsPanel>
                                                                    <ItemsPanelTemplate>
                                                                        <Canvas/>
                                                                    </ItemsPanelTemplate>
                                                                </ItemsControl.ItemsPanel>

                                                                <ItemsControl.ItemTemplate>
                                                                    <DataTemplate DataType="{x:Type local:AxisTickVm}">
                                                                        <Grid Width="84">
                                                                            <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition Width="60"/>
                                                                                <ColumnDefinition Width="24"/>
                                                                            </Grid.ColumnDefinitions>

                                                                            <TextBlock Grid.Column="0"
                                                                                       Text="{Binding Text}"
                                                                                       FontSize="11"
                                                                                       Opacity="0.85"
                                                                                       HorizontalAlignment="Right"
                                                                                       Foreground="{DynamicResource App.Foreground}"/>

                                                                            <Border Grid.Column="1"
                                                                                    Margin="6,0,0,0"
                                                                                    Height="1"
                                                                                    VerticalAlignment="Center"
                                                                                    Background="{DynamicResource Surface.Border}"
                                                                                    Opacity="0.7"/>
                                                                        </Grid>
                                                                    </DataTemplate>
                                                                </ItemsControl.ItemTemplate>
                                                            </ItemsControl>
                                                        </Canvas>
                                                    </Grid>

                                                    <!-- Tu poziomy scroll jest OK: wykres może mieć wiele słupków -->
                                                    <ScrollViewer Grid.Column="1"
                                                                  HorizontalScrollBarVisibility="Auto"
                                                                  VerticalScrollBarVisibility="Disabled"
                                                                  Background="Transparent">
                                                        <ItemsControl x:Name="RangeBars"
                                                                      ItemTemplate="{StaticResource RangeBarTemplate}">
                                                            <ItemsControl.ItemsPanel>
                                                                <ItemsPanelTemplate>
                                                                    <StackPanel Orientation="Horizontal"/>
                                                                </ItemsPanelTemplate>
                                                            </ItemsControl.ItemsPanel>
                                                        </ItemsControl>
                                                    </ScrollViewer>
                                                </Grid>

                                                <TextBlock x:Name="ValuationChartHint"
                                                           Margin="0,8,0,0"
                                                           Opacity="0.7"
                                                           Foreground="{DynamicResource App.Foreground}"
                                                           Text="Dodaj co najmniej dwie wyceny, aby zobaczyć wykres."
                                                           Visibility="Collapsed"/>
                                            </StackPanel>
                                        </Border>

                                        <!-- TABELA -->
                                        <Border Margin="0,12,0,0"
                                                Style="{StaticResource MiniTableCard}">
                                            <controls:MiniTableControl x:Name="ValuationsMiniTable"
                                                                       HeaderTemplate="{StaticResource ValuationsHeaderTemplate}"
                                                                       RowTemplate="{StaticResource ValuationsRowTemplate}"
                                                                       SelectionMode="Single"
                                                                       HorizontalScrollBarVisibility="Disabled"
                                                                       VerticalScrollBarVisibility="Auto"/>
                                        </Border>

                                    </StackPanel>
                                </Border>

                            </StackPanel>
                        </ScrollViewer>
                    </Border>

                </Grid>
            </Grid>
        </Viewbox>
    </ScrollViewer>
</UserControl>
