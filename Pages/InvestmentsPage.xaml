<UserControl x:Class="Finly.Pages.InvestmentsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Finly.Pages"
             mc:Ignorable="d">

	<UserControl.Resources>
		<!-- Reuse tych samych stylów co w innych stronach -->
		<!-- Lightweight card style with subtle shadow and no thick borders -->
		<Style x:Key="Card" TargetType="Border">
			<Setter Property="Background" Value="{DynamicResource Surface.Background}" />
			<Setter Property="CornerRadius" Value="8" />
			<Setter Property="Padding" Value="12" />
			<Setter Property="Margin" Value="0,12,16,0" />
			<Setter Property="SnapsToDevicePixels" Value="True" />
			<Setter Property="Effect">
				<Setter.Value>
					<DropShadowEffect Color="#22000000" BlurRadius="8" ShadowDepth="2"/>
				</Setter.Value>
			</Setter>
		</Style>

		<!-- KPI tile variant: minimal border, compact height, unified look -->
		<Style x:Key="KpiCard" TargetType="Border" BasedOn="{StaticResource Card}">
			<Setter Property="Width" Value="Auto" />
			<Setter Property="Padding" Value="10" />
			<Setter Property="Margin" Value="0,8,12,0" />
		</Style>

		<Style x:Key="CardHeader" TargetType="TextBlock">
			<Setter Property="FontSize"   Value="12"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
			<Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
			<Setter Property="Opacity"    Value="0.85"/>
		</Style>

		<Style x:Key="KpiValueStyle" TargetType="TextBlock">
			<Setter Property="FontSize"   Value="22"/>
			<Setter Property="FontWeight" Value="Bold"/>
			<Setter Property="Margin"     Value="0,6,0,0"/>
			<Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
		</Style>

		<!-- thin elegant progress bar -->
		<Style x:Key="ThinProgressBar" TargetType="ProgressBar">
			<Setter Property="Height" Value="6" />
			<Setter Property="Foreground" Value="{DynamicResource Brand.Blue}" />
			<!-- subtle translucent background -->
			<Setter Property="Background" Value="#20000000" />
			<Setter Property="BorderThickness" Value="0" />
		</Style>

		<!-- DataTemplate dla inwestycji -->
		<DataTemplate DataType="{x:Type local:InvestmentVm}">
			<Border Style="{StaticResource Card}" Width="340">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
					</Grid.RowDefinitions>

					<!-- Header: name + date -->
					<StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Center">
						<TextBlock Text="{Binding Name}" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource App.Foreground}" />
						<TextBlock Text="•" Margin="8,0" Opacity="0.5" />
						<TextBlock Text="{Binding TargetDate, StringFormat={}{0:dd.MM.yyyy}}" FontSize="12" Opacity="0.8" VerticalAlignment="Center"/>
					</StackPanel>

					<!-- Values block -->
					<StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,0" HorizontalAlignment="Stretch">
						<StackPanel Margin="0,0,12,0">
							<TextBlock Text="Docelowo" FontSize="11" Opacity="0.8"/>
							<TextBlock Text="{Binding TargetAmount, StringFormat={}{0:N2} zł}" FontWeight="Bold"/>
						</StackPanel>
						<StackPanel Margin="0,0,12,0">
							<TextBlock Text="Aktualnie" FontSize="11" Opacity="0.8"/>
							<TextBlock Text="{Binding CurrentAmount, StringFormat={}{0:N2} zł}" FontWeight="Bold"/>
						</StackPanel>
						<StackPanel>
							<TextBlock Text="Pozostało" FontSize="11" Opacity="0.8"/>
							<TextBlock Text="{Binding Remaining, StringFormat={}{0:N2} zł}" FontWeight="Bold"/>
						</StackPanel>
					</StackPanel>

					<!-- Progress -->
					<StackPanel Grid.Row="2" Margin="0,10,0,0">
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="Auto" />
							</Grid.ColumnDefinitions>
							<TextBlock Text="Progres" FontSize="12" Opacity="0.85" Grid.Column="0" />
							<TextBlock Text="{Binding CompletionPercent, StringFormat={}{0:N0}%}" FontSize="12" Opacity="0.85" Grid.Column="1" />
						</Grid>
						<ProgressBar Style="{StaticResource ThinProgressBar}" Minimum="0" Maximum="100" Value="{Binding CompletionPercent, Mode=OneWay}" Margin="0,6,0,0"/>
						<TextBlock Text="{Binding Description}" FontSize="12" Opacity="0.8" Margin="0,8,0,0" TextWrapping="Wrap"/>

						<!-- Actions (plain buttons to avoid missing style resources) -->
						<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
							<Button Click="EditInvestment_Click" Margin="0,0,8,0" ToolTip="Edytuj">Edytuj</Button>
							<Button Click="DeleteInvestment_Click" ToolTip="Usuń">Usuń</Button>
						</StackPanel>
					</StackPanel>
				</Grid>
			</Border>
		</DataTemplate>

		<!-- Kafelek Dodaj inwestycję -->
		<DataTemplate DataType="{x:Type local:AddInvestmentTile}">
			<!-- Use existing Card style to avoid missing resource errors -->
			<Border Style="{StaticResource Card}" Width="260" Cursor="Hand" MouseLeftButtonUp="AddInvestmentCard_Click">
				<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="6">
					<Border Width="32" Height="32" CornerRadius="6" Background="{DynamicResource Brand.Blue}" HorizontalAlignment="Center" VerticalAlignment="Center">
						<TextBlock Text="+" Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
					</Border>
					<TextBlock Text="Dodaj inwestycję" Margin="0,8,0,0" FontSize="13" FontWeight="SemiBold" HorizontalAlignment="Center"/>
				</StackPanel>
			</Border>
		</DataTemplate>

	</UserControl.Resources>

	<ScrollViewer VerticalScrollBarVisibility="Auto">
		<Grid Margin="24">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>

			<!-- KPI -->
			<Grid Grid.Row="0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>

				<Border Grid.Column="0" Style="{StaticResource KpiCard}">
					<StackPanel>
						<TextBlock Text="Wartość docelowa" Style="{StaticResource CardHeader}"/>
						<TextBlock x:Name="TotalTargetText" Style="{StaticResource KpiValueStyle}"/>
						<TextBlock Text="Suma wartości we wszystkich inwestycjach" FontSize="11" Opacity="0.7" Margin="0,6,0,0"/>
					</StackPanel>
				</Border>

				<Border Grid.Column="1" Style="{StaticResource KpiCard}">
					<StackPanel>
						<TextBlock Text="Aktualna wartość" Style="{StaticResource CardHeader}"/>
						<TextBlock x:Name="TotalCurrentText" Style="{StaticResource KpiValueStyle}"/>
						<TextBlock Text="Aktualne saldo portfela inwestycyjnego" FontSize="11" Opacity="0.7" Margin="0,6,0,0"/>
					</StackPanel>
				</Border>

				<Border Grid.Column="2" Style="{StaticResource KpiCard}">
					<StackPanel>
						<TextBlock Text="Miesięcznie" Style="{StaticResource CardHeader}"/>
						<TextBlock x:Name="TotalMonthlyText" Style="{StaticResource KpiValueStyle}"/>
						<TextBlock Text="Suma miesięcznych wpłat potrzebnych, by dojść do celów" FontSize="11" Opacity="0.7" Margin="0,6,0,0"/>
					</StackPanel>
				</Border>
			</Grid>

			<!-- Lista inwestycji + kafelek Dodaj -->
			<StackPanel Grid.Row="1" Margin="0,12,0,0">
				<Separator Height="1" Background="{DynamicResource Surface.Border}" Opacity="0.8" Margin="0,0,0,8"/>
				<TextBlock Text="Inwestycje" FontSize="24" FontWeight="Bold" Foreground="{DynamicResource App.Foreground}" Margin="0,4,0,12"/>
				<!-- Inline error area to show load errors without crashing the app -->
				<TextBlock x:Name="InvestmentsErrorText" Visibility="Collapsed" Foreground="OrangeRed" Margin="0,0,0,8" TextWrapping="Wrap"/>
				<ItemsControl x:Name="InvestmentsRepeater" Margin="0,8,0,0">
					<ItemsControl.ItemsPanel>
						<ItemsPanelTemplate>
							<WrapPanel HorizontalAlignment="Stretch"/>
						</ItemsPanelTemplate>
					</ItemsControl.ItemsPanel>
				</ItemsControl>
			</StackPanel>

			<!-- Formularz Dodaj / Edytuj -->
			<Border x:Name="FormBorder" Grid.Row="2" Margin="0,16,0,24" Background="Transparent" BorderBrush="{DynamicResource Surface.Border}" BorderThickness="1" CornerRadius="10" Padding="16" Visibility="Collapsed">
				<StackPanel HorizontalAlignment="Center" MaxWidth="600">
					<TextBlock x:Name="FormHeader" Text="Dodaj inwestycję" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="{DynamicResource App.Foreground}"/>

					<Grid Margin="0,12,0,0">
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
						</Grid.RowDefinitions>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto"/>
							<ColumnDefinition Width="260"/>
						</Grid.ColumnDefinitions>

						<TextBlock Grid.Row="0" Grid.Column="0" Text="Nazwa:" Margin="0,4,8,4" VerticalAlignment="Center" Foreground="{DynamicResource App.Foreground}"/>
						<TextBox x:Name="InvestmentNameBox" Grid.Row="0" Grid.Column="1"/>

						<TextBlock Grid.Row="1" Grid.Column="0" Text="Wartość docelowa:" Margin="0,4,8,4" VerticalAlignment="Center" Foreground="{DynamicResource App.Foreground}"/>
						<TextBox x:Name="InvestmentTargetBox" Grid.Row="1" Grid.Column="1" HorizontalContentAlignment="Right" Text="0,00" GotFocus="AmountBox_GotFocus" LostFocus="AmountBox_LostFocus"/>

						<TextBlock Grid.Row="2" Grid.Column="0" Text="Aktualnie:" Margin="0,4,8,4" VerticalAlignment="Center" Foreground="{DynamicResource App.Foreground}"/>
						<TextBox x:Name="InvestmentCurrentBox" Grid.Row="2" Grid.Column="1" HorizontalContentAlignment="Right" Text="0,00" GotFocus="AmountBox_GotFocus" LostFocus="AmountBox_LostFocus"/>

						<TextBlock Grid.Row="3" Grid.Column="0" Text="Termin (data):" Margin="0,4,8,4" VerticalAlignment="Center" Foreground="{DynamicResource App.Foreground}"/>
						<DatePicker x:Name="InvestmentTargetDatePicker" Grid.Row="3" Grid.Column="1"/>

						<TextBlock Grid.Row="4" Grid.Column="0" Text="Opis:" Margin="0,4,8,4" VerticalAlignment="Top" Foreground="{DynamicResource App.Foreground}"/>
						<TextBox x:Name="InvestmentDescriptionBox" Grid.Row="4" Grid.Column="1" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>
					</Grid>

					<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0">
						<Button Content="Zapisz" Width="110" Margin="0,0,8,0" Click="AddInvestment_Click"/>
						<Button Content="Anuluj" Width="110" Click="ClearInvestmentForm_Click"/>
					</StackPanel>

					<TextBlock x:Name="InvestmentFormMessage" Margin="0,8,0,0" HorizontalAlignment="Center" Foreground="OrangeRed"/>
				</StackPanel>
			</Border>

		</Grid>
	</ScrollViewer>
</UserControl>