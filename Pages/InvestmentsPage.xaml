<UserControl x:Class="Finly.Pages.InvestmentsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Finly.Pages"
             mc:Ignorable="d"
             x:Name="Root"
             Background="{DynamicResource App.Background}"
             SnapsToDevicePixels="True"
             UseLayoutRounding="True"
             TextOptions.TextFormattingMode="Display"
             TextOptions.TextRenderingMode="ClearType">

    <UserControl.Resources>

        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>

        <!-- Styl kart -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource Surface.Background}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Surface.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,12,12,0"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="UseLayoutRounding" Value="True"/>
        </Style>

        <Style x:Key="SelectedCard" TargetType="Border" BasedOn="{StaticResource Card}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="BorderBrush" Value="{DynamicResource Brand.Orange}"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="AccentCard" TargetType="Border" BasedOn="{StaticResource Card}">
            <Setter Property="BorderBrush" Value="{DynamicResource Brand.Blue}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Margin" Value="0,16,12,0"/>
        </Style>

        <Style x:Key="CardHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
            <Setter Property="Opacity" Value="0.9"/>
        </Style>

        <Style x:Key="KpiValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
            <Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
        </Style>

        <Style x:Key="DeltaBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{DynamicResource Surface.Background}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Surface.Border}"/>
        </Style>

        <!-- KARTA INWESTYCJI -->
        <DataTemplate DataType="{x:Type local:InvestmentVm}">
            <Border Style="{StaticResource SelectedCard}"
                    MinWidth="320"
                    Cursor="Hand"
                    MouseLeftButtonUp="InvestmentCard_Click">
                <StackPanel Background="Transparent">

                    <!-- Nagłówek -->
                    <Grid Margin="0,0,0,8" Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Ikona -->
                        <Rectangle Grid.Column="0"
                                   Width="24"
                                   Height="24"
                                   Margin="0,0,8,0"
                                   VerticalAlignment="Top"
                                   Fill="{DynamicResource Brand.Orange}">
                            <Rectangle.OpacityMask>
                                <ImageBrush Stretch="Uniform" ImageSource="/Assets/Icons/inwestycje.png"/>
                            </Rectangle.OpacityMask>
                        </Rectangle>

                        <StackPanel Grid.Column="1" Background="Transparent">
                            <TextBlock FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource App.Foreground}"
                                       TextWrapping="Wrap">
                                <Run Text="Inwestycja: "/>
                                <Run Text="{Binding Name}"/>
                            </TextBlock>

                            <TextBlock FontSize="12"
                                       Opacity="0.85"
                                       Foreground="{DynamicResource App.Foreground}"
                                       TextWrapping="Wrap">
                                <Run Text="{Binding TypeDisplay, Mode=OneWay}"/>
                                <Run Text="  •  "/>
                                <Run Text="{Binding LastDateDisplay, Mode=OneWay}"/>
                            </TextBlock>
                        </StackPanel>
                    </Grid>

                    <!-- Ostatnia wycena -->
                    <TextBlock Text="Ostatnia wycena"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource App.Foreground}"
                               Opacity="0.9"/>
                    <TextBlock Text="{Binding LastValueDisplay, Mode=OneWay}"
                               Margin="0,2,0,8"
                               Foreground="{DynamicResource App.Foreground}"/>

                    <!-- Zmiana -->
                    <TextBlock Text="Zmiana od poprzedniej wyceny"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource App.Foreground}"
                               Opacity="0.9"/>
                    <Border Style="{StaticResource DeltaBadge}" Margin="0,4,0,8">
                        <TextBlock Text="{Binding DeltaDisplay, Mode=OneWay}"
                                   Foreground="{Binding DeltaBrush}"
                                   FontWeight="SemiBold"/>
                    </Border>

                    <!-- Opis -->
                    <TextBlock Text="Opis"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource App.Foreground}"
                               Opacity="0.9"/>
                    <TextBlock Text="{Binding Description, Mode=OneWay}"
                               Margin="0,2,0,6"
                               TextWrapping="Wrap"
                               Foreground="{DynamicResource App.Foreground}"/>

                    <!-- Akcje -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,10,0,0"
                                Background="Transparent">
                        <Button Content="Dodaj wycenę"
                                Style="{StaticResource SecondaryButton}"
                                Padding="12,6"
                                Margin="0,0,8,0"
                                Click="AddValuation_Click"/>

                        <Button Click="EditInvestment_Click"
                                Style="{StaticResource EditIconButton}"
                                Margin="0,0,8,0"/>
                        <Button Click="DeleteInvestment_Click"
                                Style="{StaticResource DeleteIconButton}"/>
                    </StackPanel>

                    <!-- Potwierdzenie usunięcia -->
                    <Border Margin="0,8,0,0"
                            Padding="10"
                            CornerRadius="8"
                            BorderThickness="1"
                            BorderBrush="{DynamicResource Surface.Border}"
                            Background="{DynamicResource Surface.Background}"
                            Visibility="{Binding IsDeleteConfirmVisible, Converter={StaticResource BoolToVisibility}}">
                        <StackPanel Background="Transparent">
                            <TextBlock Text="Czy na pewno chcesz usunąć tę inwestycję?"
                                       FontSize="12"
                                       Foreground="{DynamicResource App.Foreground}"
                                       Margin="0,0,0,8"
                                       TextWrapping="Wrap"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="Tak"
                                        Margin="0,0,8,0"
                                        Padding="10,4"
                                        MinWidth="70"
                                        Click="DeleteInvestmentConfirm_Click"/>
                                <Button Content="Nie"
                                        Padding="10,4"
                                        MinWidth="70"
                                        Click="DeleteInvestmentCancel_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </Border>
        </DataTemplate>

        <!-- KAFEL „DODAJ INWESTYCJĘ” -->
        <DataTemplate DataType="{x:Type local:AddInvestmentTile}">
            <Border Style="{StaticResource Card}"
                    MinWidth="320"
                    Cursor="Hand"
                    MouseLeftButtonUp="AddInvestmentCard_Click">
                <Grid Background="Transparent">
                    <Border Margin="10"
                            BorderThickness="1"
                            CornerRadius="8"
                            BorderBrush="{DynamicResource Surface.Border}"
                            Background="Transparent"/>

                    <StackPanel HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="0,18,0,18"
                                Background="Transparent">
                        <TextBlock Text="+"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource App.Foreground}"/>
                        <TextBlock Text="Dodaj inwestycję"
                                   Margin="0,6,0,0"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource App.Foreground}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- ITEM wykresu delta (WPF) -->
        <DataTemplate x:Key="DeltaBarTemplate">
            <Grid Width="44" Margin="3,0" ToolTip="{Binding Tooltip}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="180"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="{Binding ValueText}"
                           FontSize="11"
                           Opacity="0.85"
                           HorizontalAlignment="Center"
                           Foreground="{DynamicResource App.Foreground}"/>

                <Border Grid.Row="1"
                        VerticalAlignment="Bottom"
                        Height="{Binding BarHeight}"
                        CornerRadius="6"
                        Background="{Binding Fill}"
                        BorderThickness="1"
                        BorderBrush="{DynamicResource Surface.Border}"/>

                <TextBlock Grid.Row="2"
                           Text="{Binding Label}"
                           FontSize="11"
                           Opacity="0.8"
                           HorizontalAlignment="Center"
                           Foreground="{DynamicResource App.Foreground}"/>
            </Grid>
        </DataTemplate>

    </UserControl.Resources>

    <Grid Margin="24" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- KPI PORTFELA -->
        <Grid Grid.Row="0" Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource AccentCard}">
                <StackPanel Background="Transparent">
                    <TextBlock Text="Wartość portfela inwestycyjnego:"
                               Style="{StaticResource CardHeader}"
                               FontSize="18"
                               FontWeight="Bold"/>
                    <TextBlock x:Name="TotalValueText"
                               Style="{StaticResource KpiValueStyle}"
                               FontSize="24"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Style="{StaticResource AccentCard}">
                <StackPanel Background="Transparent">
                    <TextBlock Text="Zmiana od poprzedniej wyceny"
                               Style="{StaticResource CardHeader}"
                               FontSize="18"
                               FontWeight="Bold"/>
                    <TextBlock x:Name="TotalDeltaText"
                               Style="{StaticResource KpiValueStyle}"
                               FontSize="24"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Style="{StaticResource AccentCard}">
                <StackPanel Background="Transparent">
                    <TextBlock Text="Zmiana % (od poprzedniej)"
                               Style="{StaticResource CardHeader}"
                               FontSize="18"
                               FontWeight="Bold"/>
                    <TextBlock x:Name="TotalDeltaPctText"
                               Style="{StaticResource KpiValueStyle}"
                               FontSize="24"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- CONTENT: LEWO (LISTA) + PRAWO (SZCZEGÓŁY) -->
        <Grid Grid.Row="1" Margin="0,12,0,0" Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEWA STRONA -->
            <Border Grid.Column="0"
                    Background="{DynamicResource App.Background}"
                    CornerRadius="10">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Background="Transparent">
                    <StackPanel Background="Transparent">

                        <Separator Height="1"
                                   Background="{DynamicResource Surface.Border}"
                                   Opacity="0.8"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Inwestycje"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource App.Foreground}"
                                   Margin="0,4,0,12"/>

                        <TextBlock x:Name="InvestmentsErrorText"
                                   Visibility="Collapsed"
                                   Foreground="OrangeRed"
                                   Margin="0,0,0,8"
                                   TextWrapping="Wrap"/>

                        <ItemsControl x:Name="InvestmentsRepeater" Margin="0,6,0,0">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="2"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>

                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- PRAWA STRONA -->
            <Border Grid.Column="2"
                    Background="{DynamicResource App.Background}"
                    CornerRadius="10">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Background="Transparent">
                    <StackPanel Background="Transparent">

                        <Separator Height="1"
                                   Background="{DynamicResource Surface.Border}"
                                   Opacity="0.8"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Szczegóły inwestycji"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource App.Foreground}"
                                   Margin="0,4,0,12"/>

                        <!-- Placeholder gdy brak wyboru -->
                        <Border x:Name="NoSelectionCard"
                                Style="{StaticResource Card}"
                                Margin="0,0,0,12">
                            <TextBlock Text="Kliknij kafelek inwestycji po lewej, aby zobaczyć wykres i historię wycen."
                                       Foreground="{DynamicResource App.Foreground}"
                                       Opacity="0.85"
                                       TextWrapping="Wrap"/>
                        </Border>

                        <!-- Panel szczegółów -->
                        <Border x:Name="DetailsCard"
                                Style="{StaticResource Card}"
                                Margin="0,0,0,12"
                                Visibility="Collapsed">
                            <StackPanel Background="Transparent">

                                <Grid Margin="0,0,0,10" Background="Transparent">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Background="Transparent">
                                        <TextBlock x:Name="SelectedTitleText"
                                                   FontSize="18"
                                                   FontWeight="Bold"
                                                   Foreground="{DynamicResource App.Foreground}"
                                                   TextWrapping="Wrap"/>
                                        <TextBlock x:Name="SelectedSubtitleText"
                                                   FontSize="12"
                                                   Opacity="0.8"
                                                   Foreground="{DynamicResource App.Foreground}"
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>

                                    <Button Grid.Column="1"
                                            x:Name="AddValuationRightButton"
                                            Content="Dodaj wycenę"
                                            Style="{StaticResource PrimaryButton}"
                                            Padding="14,6"
                                            Click="AddValuationRight_Click"/>
                                </Grid>

                                <!-- KPI wybranej inwestycji -->
                                <Grid Background="Transparent">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0"
                                            CornerRadius="10"
                                            BorderThickness="1"
                                            BorderBrush="{DynamicResource Surface.Border}"
                                            Background="{DynamicResource Surface.Background}"
                                            Padding="12"
                                            Margin="0,0,12,0">
                                        <StackPanel Background="Transparent">
                                            <TextBlock Text="Pierwsza wycena"
                                                       Opacity="0.85"
                                                       Foreground="{DynamicResource App.Foreground}"/>
                                            <TextBlock x:Name="FirstText"
                                                       FontWeight="Bold"
                                                       FontSize="16"
                                                       Foreground="{DynamicResource App.Foreground}"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Grid.Column="1"
                                            CornerRadius="10"
                                            BorderThickness="1"
                                            BorderBrush="{DynamicResource Surface.Border}"
                                            Background="{DynamicResource Surface.Background}"
                                            Padding="12"
                                            Margin="0,0,12,0">
                                        <StackPanel Background="Transparent">
                                            <TextBlock Text="Ostatnia wycena"
                                                       Opacity="0.85"
                                                       Foreground="{DynamicResource App.Foreground}"/>
                                            <TextBlock x:Name="LastText"
                                                       FontWeight="Bold"
                                                       FontSize="16"
                                                       Foreground="{DynamicResource App.Foreground}"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Grid.Column="2"
                                            CornerRadius="10"
                                            BorderThickness="1"
                                            BorderBrush="{DynamicResource Surface.Border}"
                                            Background="{DynamicResource Surface.Background}"
                                            Padding="12">
                                        <StackPanel Background="Transparent">
                                            <TextBlock Text="Zmiana (od pierwszej)"
                                                       Opacity="0.85"
                                                       Foreground="{DynamicResource App.Foreground}"/>
                                            <TextBlock x:Name="ChangeText"
                                                       FontWeight="Bold"
                                                       FontSize="16"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>

                                <!-- WYKRES: delta (WPF) -->
                                <Border Margin="0,12,0,0"
                                        Padding="10"
                                        CornerRadius="10"
                                        BorderThickness="1"
                                        BorderBrush="{DynamicResource Surface.Border}"
                                        Background="{DynamicResource Surface.Background}">
                                    <StackPanel Background="Transparent">
                                        <TextBlock Text="Zmiany między wycenami (delta)"
                                                   Foreground="{DynamicResource App.Foreground}"
                                                   Opacity="0.85"
                                                   Margin="0,0,0,8"/>

                                        <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                                      VerticalScrollBarVisibility="Disabled"
                                                      Background="Transparent">
                                            <ItemsControl x:Name="DeltaBars"
                                                          ItemTemplate="{StaticResource DeltaBarTemplate}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Horizontal"/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                            </ItemsControl>
                                        </ScrollViewer>

                                        <TextBlock x:Name="DeltaChartHint"
                                                   Margin="0,8,0,0"
                                                   Opacity="0.7"
                                                   Foreground="{DynamicResource App.Foreground}"
                                                   Text="Dodaj co najmniej dwie wyceny, aby zobaczyć zmiany."/>
                                    </StackPanel>
                                </Border>

                                <!-- TABELA -->
                                <DataGrid Margin="0,12,0,0"
                                          x:Name="GridValuations"
                                          AutoGenerateColumns="False"
                                          HeadersVisibility="Column"
                                          CanUserAddRows="False"
                                          IsReadOnly="True"
                                          MinHeight="260">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Data" Binding="{Binding Date}" Width="140"/>
                                        <DataGridTextColumn Header="Wartość" Binding="{Binding Value}" Width="*"/>
                                        <DataGridTextColumn Header="Zmiana vs poprzednia" Binding="{Binding Delta}" Width="*"/>
                                        <DataGridTextColumn Header="Zmiana %" Binding="{Binding DeltaPct}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>

                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </Border>

        </Grid>
    </Grid>
</UserControl>
