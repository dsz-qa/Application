<UserControl x:Class="Finly.Pages.ReportPage"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 mc:Ignorable="d"
 d:DesignHeight="720" d:DesignWidth="1200">
 <Grid Background="{DynamicResource App.Background}" Margin="12">
 <Grid.RowDefinitions>
 <RowDefinition Height="Auto" />
 <RowDefinition Height="*" />
 </Grid.RowDefinitions>

 <!-- Top filter bar -->
 <Border Grid.Row="0" Background="{DynamicResource App.PanelBackground}" Padding="12" CornerRadius="6">
 <DockPanel LastChildFill="True">
 <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
 <ComboBox x:Name="PresetCombo" Width="180"/>
 <ComboBox x:Name="ViewTypeCombo" Width="140"/>

 <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
 <TextBlock Text="Konta:" VerticalAlignment="Center" Margin="8,0,6,0"/>
 <ComboBox x:Name="AccountsCombo" Width="220"/>
 </StackPanel>

 <ComboBox x:Name="CurrencyCombo" Width="90"/>

 <Button x:Name="CompareBtn" Content="Porownaj" Width="90"/>
 <Button x:Name="SavePresetBtn" Content="Zapisz preset" Width="110"/>
 <Button x:Name="ExportBtn" Content="Eksportuj" Width="90"/>
 </StackPanel>

 <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
 <DatePicker x:Name="StartDatePicker" Width="140" Margin="0,0,8,0"/>
 <DatePicker x:Name="EndDatePicker" Width="140"/>
 </StackPanel>
 </DockPanel>
 </Border>

 <!-- Main area -->
 <Grid Grid.Row="1" Margin="0,12,0,0">
 <Grid.ColumnDefinitions>
 <ColumnDefinition Width="220" />
 <ColumnDefinition Width="*" />
 <ColumnDefinition Width="320" />
 </Grid.ColumnDefinitions>

 <!-- Left: report types + presets -->
 <Border Grid.Column="0" Background="{DynamicResource App.PanelBackground}" Padding="12" CornerRadius="6">
 <StackPanel>
 <TextBlock Text="Typ raportu" FontWeight="Bold" Margin="0,0,0,8"/>
 <ListBox x:Name="ReportTypesList" Height="260"/>

 <TextBlock Text="Zapisane presety" FontWeight="Bold" Margin="0,12,0,6"/>
 <ListBox x:Name="SavedPresetsList" Height="140"/>
 </StackPanel>
 </Border>

 <!-- Center: charts + table -->
 <Grid Grid.Column="1" Margin="12,0,12,0">
 <Grid.RowDefinitions>
 <RowDefinition Height="*" />
 <RowDefinition Height="240" />
 </Grid.RowDefinitions>

 <Border Background="{DynamicResource App.SectionBackground}" Padding="12" CornerRadius="6">
 <Grid x:Name="ChartsCanvas">
 <!-- Placeholder: chart controls will be added dynamically -->
 <TextBlock x:Name="ChartsPlaceholder" Text="Wybierz raport, aby zaladowac wykresy" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.6"/>
 <StackPanel x:Name="LegendPanel" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="6"/>
 </Grid>
 </Border>

 <Border Grid.Row="1" Background="{DynamicResource App.SectionBackground}" Padding="12" CornerRadius="6" Margin="0,12,0,0">
 <StackPanel>
 <TextBlock Text="Dane" FontWeight="Bold" Margin="0,0,0,8"/>
 <DataGrid x:Name="ReportDataGrid" AutoGenerateColumns="False" IsReadOnly="True" Height="200">
 <DataGrid.Columns>
 <DataGridTextColumn Header="Nazwa" Binding="{Binding Category}" Width="*"/>
 <DataGridTextColumn Header="Kwota" Binding="{Binding Amount, StringFormat=N2}" Width="150"/>
 <DataGridTextColumn Header="Udzial (%)" Binding="{Binding SharePercent, StringFormat=N1}" Width="120"/>
 </DataGrid.Columns>
 </DataGrid>
 </StackPanel>
 </Border>
 </Grid>

 <!-- Right: KPIs and insights -->
 <Border Grid.Column="2" Background="{DynamicResource App.PanelBackground}" Padding="12" CornerRadius="6">
 <StackPanel>
 <TextBlock Text="KPI" FontWeight="Bold" FontSize="14"/>
 <ItemsControl x:Name="KpiItems" Margin="0,8,0,8">
 <ItemsControl.ItemTemplate>
 <DataTemplate>
 <Border Background="{DynamicResource App.CardBackground}" Padding="8" Margin="0,0,0,8" CornerRadius="6">
 <StackPanel>
 <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
 <TextBlock Text="{Binding Value}" FontSize="16" FontWeight="SemiBold"/>
 <TextBlock Text="{Binding Subtitle}" FontSize="12" Opacity="0.8"/>
 </StackPanel>
 </Border>
 </DataTemplate>
 </ItemsControl.ItemTemplate>
 </ItemsControl>

 <TextBlock Text="Smart-insighty" FontWeight="Bold" Margin="0,12,0,6"/>
 <ListBox x:Name="InsightsList" />
 </StackPanel>
 </Border>
 </Grid>
 </Grid>
</UserControl>