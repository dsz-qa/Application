<UserControl x:Class="Finly.Pages.BudgetsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="12"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- NAGŁÓWEK -->
            <StackPanel Grid.Row="0">
                <TextBlock Text="Budżety"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="{DynamicResource App.Foreground}"/>

                <TextBlock Text="Tutaj możesz zaplanować miesięczne, roczne oraz specjalne budżety (np. wakacje, święta) i porównać plan z rzeczywistymi wydatkami."
                           Margin="0,6,0,0"
                           TextWrapping="Wrap"
                           Foreground="{DynamicResource App.Foreground}"
                           Opacity="0.8"/>
            </StackPanel>

            <!-- GŁÓWNA KARTA -->
            <Border Grid.Row="2"
                    Background="{DynamicResource Surface.Background}"
                    BorderBrush="{DynamicResource Surface.Border}"
                    BorderThickness="1"
                    CornerRadius="10"
                    Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Filtry + akcje -->
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="*"/>
                        <!-- Lista + szczegóły -->
                    </Grid.RowDefinitions>

                    <!-- ==== FILTRY + AKCJE ==== -->
                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- LEWA STRONA – filtry -->
                        <StackPanel Grid.Row="0" Grid.Column="0"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">
                            <!-- Typ budżetu -->
                            <StackPanel Margin="0,0,12,0">
                                <TextBlock Text="Typ budżetu"
                                           FontSize="11"
                                           Margin="0,0,0,2"
                                           Opacity="0.8"
                                           Foreground="{DynamicResource App.Foreground}"/>
                                <ComboBox x:Name="TypeFilterCombo"
                                          Width="150">
                                    <ComboBoxItem Content="Wszystkie" IsSelected="True"/>
                                    <ComboBoxItem Content="Miesięczny"/>
                                    <ComboBoxItem Content="Roczny"/>
                                    <ComboBoxItem Content="Cel specjalny"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- Od -->
                            <StackPanel Margin="0,0,12,0">
                                <TextBlock Text="Od"
                                           FontSize="11"
                                           Margin="0,0,0,2"
                                           Opacity="0.8"
                                           Foreground="{DynamicResource App.Foreground}"/>
                                <DatePicker x:Name="FromDatePicker"
                                            Width="140"/>
                            </StackPanel>

                            <!-- Do -->
                            <StackPanel Margin="0,0,12,0">
                                <TextBlock Text="Do"
                                           FontSize="11"
                                           Margin="0,0,0,2"
                                           Opacity="0.8"
                                           Foreground="{DynamicResource App.Foreground}"/>
                                <DatePicker x:Name="ToDatePicker"
                                            Width="140"/>
                            </StackPanel>

                            <!-- Szukajka -->
                            <StackPanel Width="240">
                                <TextBlock Text="Szukaj po nazwie"
                                           FontSize="11"
                                           Margin="0,0,0,2"
                                           Opacity="0.8"
                                           Foreground="{DynamicResource App.Foreground}"/>
                                <Grid>
                                    <TextBox x:Name="SearchBox"
                                             Margin="0,0,26,0"/>
                                    <TextBlock Text="🔍"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Right"
                                               Margin="0,0,4,0"
                                               Opacity="0.6"/>
                                </Grid>
                            </StackPanel>
                        </StackPanel>

                        <!-- PRAWA STRONA – przyciski -->
                        <StackPanel Grid.Row="0"
                                    Grid.Column="1"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center">
                            <Button Content="Filtruj"
                                    Width="90"
                                    Margin="0,0,8,0"
                                    Click="FilterButton_Click"/>
                            <Button Content="Wyczyść"
                                    Width="90"
                                    Margin="0,0,8,0"
                                    Click="ClearFilters_Click"/>
                            <Button Content="Dodaj budżet"
                                    Width="120"
                                    Style="{StaticResource PrimaryButton}"
                                    Click="AddBudget_Click"/>
                        </StackPanel>

                        <!-- DRUGI WIERSZ – podsumowanie -->
                        <StackPanel Grid.Row="1"
                                    Grid.ColumnSpan="2"
                                    Orientation="Horizontal"
                                    Margin="0,10,0,0">
                            <TextBlock Text="Podsumowanie wyświetlonych budżetów:"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource App.Foreground}"/>
                            <TextBlock Text="  Zaplanowane:"
                                       Margin="12,0,4,0"
                                       Foreground="{DynamicResource App.Foreground}"/>
                            <TextBlock x:Name="TotalPlannedText"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="  · Wydano:"
                                       Margin="12,0,4,0"
                                       Foreground="{DynamicResource App.Foreground}"/>
                            <TextBlock x:Name="TotalSpentText"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="  · Pozostało:"
                                       Margin="12,0,4,0"
                                       Foreground="{DynamicResource App.Foreground}"/>
                            <TextBlock x:Name="TotalRemainingText"
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                    </Grid>

                    <!-- ==== LISTA + PANEL SZCZEGÓŁÓW ==== -->
                    <Grid Grid.Row="2" Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                        <!-- LISTA BUDŻETÓW -->
                        <Border Grid.Column="0"
                                CornerRadius="8"
                                BorderBrush="{DynamicResource Surface.Border}"
                                BorderThickness="1"
                                Padding="6">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Lista budżetów"
                                           FontWeight="SemiBold"
                                           Margin="2,0,0,4"
                                           Foreground="{DynamicResource App.Foreground}"/>
                                <DataGrid x:Name="BudgetsGrid"
                                          Grid.Row="1"
                                          AutoGenerateColumns="False"
                                          CanUserAddRows="False"
                                          IsReadOnly="True"
                                          SelectionMode="Single"
                                          SelectionUnit="FullRow"
                                          Margin="0,2,0,0"
                                          SelectionChanged="BudgetsGrid_SelectionChanged">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Nazwa"
                                                            Binding="{Binding Name}"
                                                            Width="*"/>
                                        <DataGridTextColumn Header="Typ"
                                                            Binding="{Binding TypeDisplay}"
                                                            Width="120"/>
                                        <DataGridTextColumn Header="Okres"
                                                            Binding="{Binding Period}"
                                                            Width="190"/>
                                        <DataGridTextColumn Header="Plan"
                                                            Binding="{Binding PlannedAmount, StringFormat=N2}"
                                                            Width="110"/>
                                        <DataGridTextColumn Header="Wydano"
                                                            Binding="{Binding SpentAmount, StringFormat=N2}"
                                                            Width="110"/>
                                        <DataGridTextColumn Header="Pozostało"
                                                            Binding="{Binding RemainingAmount, StringFormat=N2}"
                                                            Width="110"/>
                                        <DataGridTextColumn Header="%"
                                                            Binding="{Binding ProgressPercent, StringFormat=N2}"
                                                            Width="60"/>
                                        <DataGridTemplateColumn Header="Akcje" Width="150">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                        <Button Click="EditBudget_Click" ToolTip="Edytuj budżet" Style="{StaticResource EditIconButton}" Margin="0,0,8,0"/>
                                                        <Button Click="DeleteBudget_Click" ToolTip="Usuń budżet" Style="{StaticResource DeleteIconButton}"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Border>

                        <!-- SZCZEGÓŁY WYBRANEGO BUDŻETU -->
                        <Border Grid.Column="2"
                                CornerRadius="8"
                                BorderBrush="{DynamicResource Surface.Border}"
                                BorderThickness="1"
                                Padding="10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0">
                                    <TextBlock x:Name="DetailsNameText"
                                               Text="(Wybierz budżet z listy)"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource App.Foreground}"/>
                                    <TextBlock x:Name="DetailsPeriodText"
                                               Margin="0,2,0,0"
                                               Foreground="{DynamicResource App.Foreground}"
                                               Opacity="0.8"/>
                                </StackPanel>

                                <!-- Pasek postępu -->
                                <StackPanel Grid.Row="1" Margin="0,12,0,12">
                                    <TextBlock Text="Realizacja budżetu"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource App.Foreground}"/>
                                    <ProgressBar x:Name="DetailsProgressBar"
                                                 Margin="0,4,0,0"
                                                 Height="16"
                                                 Minimum="0"
                                                 Maximum="100"/>
                                    <TextBlock x:Name="DetailsStatusText"
                                               Margin="0,2,0,0"
                                               Foreground="{DynamicResource App.Foreground}"/>
                                </StackPanel>

                                <!-- Opis / tipy -->
                                <TextBlock Grid.Row="2"
                                           TextWrapping="Wrap"
                                           Opacity="0.8"
                                           Foreground="{DynamicResource App.Foreground}"
                                           Text="Tutaj w przyszłości możesz dodać szczegółowy raport budżetu: rozbicie na kategorie, największe wydatki, sugestie jak zoptymalizować koszty."/>
                                <TextBlock x:Name="StatusText" 
                                           Grid.Row="3" 
                                           Text="" 
                                           FontSize="14" 
                                           Foreground="{DynamicResource App.Foreground}" 
                                           Opacity="0.7"
                                           HorizontalAlignment="Center" 
                                           Margin="0,12,0,0" 
                                           Visibility="Collapsed"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>