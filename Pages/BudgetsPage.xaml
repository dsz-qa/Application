<UserControl
    x:Class="Finly.Pages.BudgetsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- nagłówek + przyciski -->
            <RowDefinition Height="Auto"/>
            <!-- filtry -->
            <RowDefinition Height="*"  />
            <!-- główna siatka: lista + szczegóły -->
            <RowDefinition Height="Auto"/>
            <!-- podsumowanie -->
        </Grid.RowDefinitions>

        <!-- =================== NAGŁÓWEK + PRZYCISKI =================== -->
        <DockPanel Grid.Row="0" LastChildFill="False">
            <TextBlock Text="Budżety"
                       FontSize="26"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource App.Foreground}"
                       VerticalAlignment="Center"
                       DockPanel.Dock="Left"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        DockPanel.Dock="Right">
                <Button x:Name="AddBudgetButton"
                        Content="Dodaj budżet"
                        Margin="8,0,0,0"
                        Padding="16,6"
                        Click="AddBudget_Click"
                        Style="{StaticResource PrimaryButton}"/>

                <Button x:Name="EditBudgetButton"
                        Content="Edytuj"
                        Margin="8,0,0,0"
                        Padding="16,6"
                        Click="EditBudget_Click"
                        Style="{StaticResource PrimaryButton}"/>

                <Button x:Name="DeleteBudgetButton"
                        Content="Usuń"
                        Margin="8,0,0,0"
                        Padding="16,6"
                        Click="DeleteBudget_Click"
                        Style="{StaticResource PrimaryButton}"/>
                <Button x:Name="TransferBudgetButton"
                        Content="Przenieś"
                        Margin="8,0,0,0"
                        Padding="16,6"
                        Click="TransferBudget_Click"
                        Style="{StaticResource PrimaryButton}"/>
            </StackPanel>
        </DockPanel>

        <!-- =================== FILTRY =================== -->
        <Border Grid.Row="1"
                Margin="0,12,0,8"
                Padding="10"
                CornerRadius="8"
                BorderThickness="1"
                BorderBrush="{DynamicResource Surface.Border}"
                Background="#202020">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <!-- typ -->
                    <ColumnDefinition Width="220"/>
                    <!-- od -->
                    <ColumnDefinition Width="220"/>
                    <!-- do -->
                    <ColumnDefinition Width="*"  />
                    <!-- szukaj -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- filtruj -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- wyczyść -->
                </Grid.ColumnDefinitions>

                <!-- Typ budżetu -->
                <StackPanel Orientation="Vertical" Grid.Column="0" Margin="0,0,8,0">
                    <TextBlock Text="Typ budżetu"
                               FontSize="11"
                               Foreground="{DynamicResource App.Foreground}"/>
                    <ComboBox x:Name="TypeFilterCombo"
                              Height="26">
                        <ComboBoxItem Content="Wszystkie" Tag="Wszystkie" IsSelected="True"/>
                        <ComboBoxItem Content="Budżet" Tag="Budżet"/>
                        <ComboBoxItem Content="Oszczędności" Tag="Oszczędności"/>
                        <ComboBoxItem Content="Inne" Tag="Inne"/>
                    </ComboBox>
                </StackPanel>

                <!-- Data od -->
                <StackPanel Orientation="Vertical" Grid.Column="1" Margin="0,0,8,0">
                    <TextBlock Text="Od"
                               FontSize="11"
                               Foreground="{DynamicResource App.Foreground}"/>
                    <DatePicker x:Name="FromDatePicker"
                                Height="26"/>
                </StackPanel>

                <!-- Data do -->
                <StackPanel Orientation="Vertical" Grid.Column="2" Margin="0,0,8,0">
                    <TextBlock Text="Do"
                               FontSize="11"
                               Foreground="{DynamicResource App.Foreground}"/>
                    <DatePicker x:Name="ToDatePicker"
                                Height="26"/>
                </StackPanel>

                <!-- Wyszukiwanie po nazwie -->
                <StackPanel Orientation="Vertical" Grid.Column="3" Margin="0,0,8,0">
                    <TextBlock Text="Szukaj (nazwa / typ)"
                               FontSize="11"
                               Foreground="{DynamicResource App.Foreground}"/>
                    <TextBox x:Name="SearchBox"
                             Height="26"/>
                </StackPanel>

                <!-- przycisk FILTRUJ -->
                <Button Content="Filtruj"
                        Grid.Column="4"
                        Margin="4,16,4,0"
                        Padding="16,4"
                        Click="FilterButton_Click"
                        Style="{StaticResource PrimaryButton}"/>

                <!-- przycisk WYCZYŚĆ -->
                <Button Content="Wyczyść filtry"
                        Grid.Column="5"
                        Margin="4,16,0,0"
                        Padding="16,4"
                        Click="ClearFilters_Click"
                        Style="{StaticResource PrimaryButton}"/>
            </Grid>
        </Border>

        <!-- =================== GŁÓWNA CZĘŚĆ: LISTA + SZCZEGÓŁY =================== -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <!-- lista -->
                <ColumnDefinition Width="*" />
                <!-- szczegóły -->
            </Grid.ColumnDefinitions>

            <!-- LISTA BUDŻETÓW -->
            <Border Margin="0,0,8,0"
                    CornerRadius="8"
                    BorderThickness="1"
                    BorderBrush="{DynamicResource Surface.Border}"
                    Background="#202020">
                <DataGrid x:Name="BudgetsGrid"
                          AutoGenerateColumns="False"
                          HeadersVisibility="Column"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True"
                          GridLinesVisibility="None"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          Margin="0"
                          SelectionChanged="BudgetsGrid_SelectionChanged">
                    <DataGrid.Resources>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
                            <Setter Property="Background" Value="Transparent"/>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Nazwa"
                                            Binding="{Binding Name}"
                                            Width="2*"/>
                        <DataGridTextColumn Header="Typ"
                                            Binding="{Binding TypeDisplay}"
                                            Width="*"/>
                        <DataGridTextColumn Header="Okres"
                                            Binding="{Binding Period}"
                                            Width="2*"/>
                        <DataGridTextColumn Header="Zaplanowano"
                                            Binding="{Binding PlannedAmount, StringFormat=N2}"
                                            Width="*"/>
                        <DataGridTextColumn Header="Wydano"
                                            Binding="{Binding SpentAmount, StringFormat=N2}"
                                            Width="*"/>
                        <DataGridTextColumn Header="Pozostało"
                                            Binding="{Binding RemainingAmount, StringFormat=N2}"
                                            Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- PRAWY PANEL SZCZEGÓŁÓW BUDŻETU -->
            <Border Grid.Column="1"
        Margin="12"
        Padding="16"
        CornerRadius="10"
        Background="#202020"
        BorderBrush="{DynamicResource Surface.Border}"
        BorderThickness="1">

                <StackPanel>

                    <!-- NAZWA + OKRES -->
                    <TextBlock x:Name="BudgetNameText"
                   FontSize="22"
                   FontWeight="SemiBold"
                   Foreground="White"
                   Text="(brak budżetu)"/>

                    <TextBlock x:Name="BudgetPeriodText"
                   Margin="0,4,0,12"
                   FontSize="13"
                   Foreground="#CCCCCC"
                   Text=""/>

                    <!-- KAFELKI Z PODSUMOWANIEM KWOT -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <!-- Zaplanowano -->
                        <Border Grid.Row="0" Grid.Column="0"
                    Margin="0,0,8,8"
                    Padding="8"
                    CornerRadius="8"
                    Background="#262626">
                            <StackPanel>
                                <TextBlock Text="Zaplanowano"
                               FontSize="12"
                               Foreground="#AAAAAA"/>
                                <TextBlock x:Name="BudgetPlannedText"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="{DynamicResource Brand.Blue}"
                               Text="0,00 zł"/>
                            </StackPanel>
                        </Border>

                        <!-- Wydano -->
                        <Border Grid.Row="0" Grid.Column="1"
                    Margin="8,0,0,8"
                    Padding="8"
                    CornerRadius="8"
                    Background="#262626">
                            <StackPanel>
                                <TextBlock Text="Wydano"
                               FontSize="12"
                               Foreground="#AAAAAA"/>
                                <TextBlock x:Name="BudgetSpentText"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#FFB71C1C"
                               Text="0,00 zł"/>
                            </StackPanel>
                        </Border>

                        <!-- Przychody w budżecie -->
                        <Border Grid.Row="1" Grid.Column="0"
                    Margin="0,8,8,0"
                    Padding="8"
                    CornerRadius="8"
                    Background="#262626">
                            <StackPanel>
                                <TextBlock Text="Przychody w budżecie"
                               FontSize="12"
                               Foreground="#AAAAAA"/>
                                <TextBlock x:Name="BudgetIncomeText"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#FF4CAF50"
                               Text="0,00 zł"/>
                            </StackPanel>
                        </Border>

                        <!-- Pozostało -->
                        <Border Grid.Row="1" Grid.Column="1"
                    Margin="8,8,0,0"
                    Padding="8"
                    CornerRadius="8"
                    Background="#262626">
                            <StackPanel>
                                <TextBlock Text="Pozostało"
                               FontSize="12"
                               Foreground="#AAAAAA"/>
                                <TextBlock x:Name="BudgetRemainingText"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="White"
                               Text="0,00 zł"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- POSTĘP BUDŻETU (PROCENT KWOTY) -->
                    <TextBlock Text="Postęp budżetu"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Foreground="White"/>

                    <Grid Margin="0,4,0,4">
                        <ProgressBar x:Name="BudgetProgressBar"
                         Height="18"
                         Minimum="0"
                         Maximum="100"
                         Value="0"/>
                        <!-- procent na środku paska -->
                        <TextBlock x:Name="BudgetProgressPercentText"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="11"
                       FontWeight="Bold"
                       Foreground="White"
                       Text="0%"/>
                    </Grid>

                    <TextBlock x:Name="BudgetStatusText"
                   Margin="0,0,0,12"
                   FontSize="12"
                   Foreground="#CCCCCC"
                   Text=""/>

                    <!-- POSTĘP W CZASIE (ile dni już minęło) -->
                    <TextBlock Text="Postęp w czasie"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Foreground="White"
                   Margin="0,8,0,0"/>

                    <TextBlock x:Name="BudgetTimeSummaryText"
                   Margin="0,4,0,0"
                   FontSize="12"
                   Foreground="#CCCCCC"
                   Text=""/>

                    <!-- HISTORIA BUDŻETU – NAGŁÓWEK -->
                    <TextBlock Text="Historia budżetu (przychody / wydatki)"
           FontSize="14"
           FontWeight="SemiBold"
           Foreground="White"
           Margin="0,12,0,0" />

                    <lvc:CartesianChart x:Name="BudgetHistoryChartControl"
                    Height="220"
                    Margin="0,4,0,0"
                    LegendPosition="Right" />

                    <!-- HISTORIA OPERACJI W BUDŻECIE (lista) -->
                    <TextBlock Text="Historia operacji w budżecie"
           FontSize="14"
           FontWeight="SemiBold"
           Foreground="White"
           Margin="0,12,0,4"/>

                    <DataGrid x:Name="BudgetOperationsGrid"
          AutoGenerateColumns="False"
          CanUserAddRows="False"
          CanUserDeleteRows="False"
          IsReadOnly="True"
          GridLinesVisibility="None"
          HeadersVisibility="Column"
          Height="220"
          Margin="0,0,0,0">
                        <DataGrid.Resources>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Background" Value="Transparent"/>
                            </Style>
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Data"
                            Binding="{Binding DateText}"
                            Width="90"/>
                            <DataGridTextColumn Header="Typ"
                            Binding="{Binding Kind}"
                            Width="90"/>
                            <DataGridTextColumn Header="Kategoria"
                            Binding="{Binding Category}"
                            Width="*"/>
                            <DataGridTextColumn Header="Kwota"
                            Binding="{Binding AmountText}"
                            Width="100"/>
                            <DataGridTextColumn Header="Opis"
                            Binding="{Binding Description}"
                            Width="2*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </Grid>

        <!-- =================== PODSUMOWANIE =================== -->
        <Border Grid.Row="3"
                Margin="0,8,0,0"
                Padding="10"
                CornerRadius="8"
                BorderThickness="1"
                BorderBrush="{DynamicResource Surface.Border}"
                Background="#202020">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="StatusText"
                           Grid.Column="0"
                           Foreground="{DynamicResource App.Foreground}"
                           VerticalAlignment="Center"
                           Text="Brak budżetów w aktualnym widoku."/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="Zaplanowano: "
                               Foreground="{DynamicResource App.Foreground}"/>
                    <TextBlock x:Name="TotalPlannedText"
                               Foreground="{DynamicResource App.Foreground}"
                               FontWeight="Bold"
                               Text="0,00 zł"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="Wydano: "
                               Foreground="{DynamicResource App.Foreground}"/>
                    <TextBlock x:Name="TotalSpentText"
                               Foreground="{DynamicResource App.Foreground}"
                               FontWeight="Bold"
                               Text="0,00 zł"/>
                </StackPanel>

                <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="Pozostało: "
                               Foreground="{DynamicResource App.Foreground}"/>
                    <TextBlock x:Name="TotalRemainingText"
                               Foreground="{DynamicResource App.Foreground}"
                               FontWeight="Bold"
                               Text="0,00 zł"/>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</UserControl>