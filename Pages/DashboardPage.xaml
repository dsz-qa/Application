<UserControl x:Class="Finly.Pages.DashboardPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Finly.Views.Controls"
             xmlns:conv="clr-namespace:Finly.Helpers.Converters">

    <UserControl.Resources>
        <conv:EqualsToStringConverter x:Key="EqualsToString"/>

        <!-- Karty -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource Surface.Background}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Surface.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="12"/>
        </Style>

        <Style x:Key="AccentCard" TargetType="Border" BasedOn="{StaticResource Card}">
            <Setter Property="BorderBrush" Value="{DynamicResource Brand.Blue}"/>
            <Setter Property="BorderThickness" Value="1.5"/>
        </Style>

        <Style x:Key="CardHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Opacity" Value="0.9"/>
            <Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
        </Style>

        <Style x:Key="KpiValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,2,0,0"/>
            <Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
        </Style>

        <!-- DatePicker -->
        <Style TargetType="DatePicker">
            <Setter Property="BorderBrush" Value="{DynamicResource Brand.Blue}"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
            <Setter Property="Background" Value="{DynamicResource Surface.Background}"/>
        </Style>
        <Style TargetType="{x:Type DatePickerTextBox}">
            <Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
            <Setter Property="Background" Value="{DynamicResource Surface.Background}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Brand.Blue}"/>
            <Setter Property="BorderThickness" Value="1.5"/>
        </Style>

        <!-- Nagłówek expandera kont -->
        <DataTemplate x:Key="BanksHeaderTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="Konta bankowe" Style="{StaticResource CardHeader}"/>
                    <TextBlock Text="{Binding}" Style="{StaticResource KpiValueStyle}"/>
                </StackPanel>
                <TextBlock Grid.Column="1" Text="▼" Foreground="White"
                           FontSize="14" VerticalAlignment="Center" Margin="8,0,0,0"/>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <!-- Główna siatka: LEWO wykresy, PRAWO KPI + zakres -->
        <Grid Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="420"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ===== LEWA KOLUMNA: 2 wykresy wydatków wg kategorii ===== -->
            <StackPanel Grid.Column="0">
                <!-- Wykres 1: Bieżący okres -->
                <Border Style="{StaticResource Card}" Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="Wydatki wg kategorii — bieżący okres"
                                   Style="{StaticResource CardHeader}" Margin="0,0,0,8"/>
                        <ItemsControl ItemsSource="{Binding CategorySpendingCurrent}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,6">
                                        <DockPanel LastChildFill="True">
                                            <TextBlock Text="{Binding Name}" Width="160" Margin="0,0,8,0"
                                                       VerticalAlignment="Center"/>
                                            <ProgressBar Minimum="0"
                                                         Maximum="{Binding DataContext.MaxAmountCurrent, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                         Value="{Binding AmountDouble}"
                                                         Height="14"/>
                                        </DockPanel>
                                        <TextBlock Text="{Binding Amount, StringFormat={}{0:C}}"
                                                   Foreground="{DynamicResource Sidebar.Foreground}" FontSize="12"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Wykres 2: Ostatnie 30 dni -->
                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="Wydatki wg kategorii — ostatnie 30 dni"
                                   Style="{StaticResource CardHeader}" Margin="0,0,0,8"/>
                        <ItemsControl ItemsSource="{Binding CategorySpendingLast30}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,6">
                                        <DockPanel LastChildFill="True">
                                            <TextBlock Text="{Binding Name}" Width="160" Margin="0,0,8,0"
                                                       VerticalAlignment="Center"/>
                                            <ProgressBar Minimum="0"
                                                         Maximum="{Binding DataContext.MaxAmountLast30, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                         Value="{Binding AmountDouble}"
                                                         Height="14"/>
                                        </DockPanel>
                                        <TextBlock Text="{Binding Amount, StringFormat={}{0:C}}"
                                                   Foreground="{DynamicResource Sidebar.Foreground}" FontSize="12"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- ===== PRAWA KOLUMNA: KPI + zakres dat ===== -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Pasek KPI -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Style="{StaticResource Card}" Margin="0,0,12,0">
                        <StackPanel>
                            <TextBlock Text="Cały majątek" Style="{StaticResource CardHeader}"/>
                            <TextBlock x:Name="KpiTotal" Style="{StaticResource KpiValueStyle}"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Style="{StaticResource Card}" Margin="0,0,12,0">
                        <Expander x:Name="BanksExpander"
                                  Background="Transparent" BorderBrush="{x:Null}"
                                  IsExpanded="False"
                                  HeaderTemplate="{StaticResource BanksHeaderTemplate}">
                            <ItemsControl x:Name="BanksList" Margin="0,10,0,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding AccountName}"
                                                       TextTrimming="CharacterEllipsis"
                                                       Foreground="{DynamicResource App.Foreground}"/>
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding Balance, StringFormat={}{0:N2} zł}"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource App.Foreground}"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Expander>
                    </Border>

                    <Border Grid.Column="2" Style="{StaticResource Card}" Margin="0,0,12,0">
                        <StackPanel>
                            <TextBlock Text="Wolna gotówka" Style="{StaticResource CardHeader}"/>
                            <TextBlock x:Name="KpiFreeCash" Style="{StaticResource KpiValueStyle}"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="3" Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock Text="Odłożona gotówka" Style="{StaticResource CardHeader}"/>
                            <TextBlock x:Name="KpiEnvelopes" Style="{StaticResource KpiValueStyle}"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Zakres dat -->
                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="1"
                            Style="{StaticResource AccentCard}"
                            Padding="16" Width="560"
                            Margin="0,24,0,0"
                            HorizontalAlignment="Center">
                        <StackPanel>
                            <TextBlock Text="Wybierz okres, z którego chcesz zobaczyć dane."
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource App.Foreground}"
                                       Margin="0,0,0,10"
                                       TextAlignment="Center"
                                       HorizontalAlignment="Center"/>

                            <controls:PeriodBarControl x:Name="PeriodBar"
                                                       Width="520"
                                                       Margin="0,4,0,10"
                                                       RangeChanged="PeriodBar_RangeChanged"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <DatePicker SelectedDate="{Binding StartDate, ElementName=PeriodBar, Mode=TwoWay}"
                                            SelectedDateChanged="ManualDateChanged" Margin="0,0,8,0"/>
                                <TextBlock Text="—" VerticalAlignment="Center" Margin="4,0"/>
                                <DatePicker SelectedDate="{Binding EndDate, ElementName=PeriodBar, Mode=TwoWay}"
                                            SelectedDateChanged="ManualDateChanged" Margin="8,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>











