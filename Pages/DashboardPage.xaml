<UserControl x:Class="Finly.Pages.DashboardPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <!-- Karty -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background"       Value="{DynamicResource Surface.Background}"/>
            <Setter Property="BorderBrush"      Value="{DynamicResource Surface.Border}"/>
            <Setter Property="BorderThickness"  Value="1"/>
            <Setter Property="CornerRadius"     Value="10"/>
            <Setter Property="Padding"          Value="12"/>
            <Setter Property="Margin"           Value="0,0,12,0"/>
        </Style>

        <Style x:Key="AccentCard" TargetType="Border" BasedOn="{StaticResource Card}">
            <Setter Property="BorderBrush"      Value="{DynamicResource Brand.Blue}"/>
            <Setter Property="BorderThickness"  Value="1.5"/>
        </Style>

        <Style x:Key="CardHeader" TargetType="TextBlock">
            <Setter Property="FontSize"        Value="13"/>
            <Setter Property="FontWeight"      Value="SemiBold"/>
            <Setter Property="Opacity"         Value="0.9"/>
            <Setter Property="Foreground"      Value="{DynamicResource App.Foreground}"/>
        </Style>

        <Style x:Key="KpiValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize"        Value="18"/>
            <Setter Property="FontWeight"      Value="Bold"/>
            <Setter Property="Margin"          Value="0,2,0,0"/>
            <Setter Property="Foreground"      Value="{DynamicResource App.Foreground}"/>
        </Style>

        <!-- Tekst DatePickera na dashboardzie -->
        <Style TargetType="{x:Type DatePickerTextBox}">
            <Setter Property="Foreground"      Value="{DynamicResource App.Foreground}"/>
            <Setter Property="Background"      Value="{DynamicResource Surface.Background}"/>
            <Setter Property="BorderBrush"     Value="{DynamicResource Brand.Blue}"/>
            <Setter Property="BorderThickness" Value="1.5"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ========== KPI ========== -->
        <Grid Grid.Row="0" Margin="0,0,0,12">
            <WrapPanel ItemHeight="90" MinWidth="0">
                <Border Style="{StaticResource Card}" MinWidth="210" Width="230">
                    <StackPanel>
                        <TextBlock Text="Cały majątek" FontSize="13" Opacity="0.8"/>
                        <TextBlock x:Name="TotalWealthText"
                                   Style="{StaticResource KpiValueStyle}"
                                   Text="0,00 zł"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource Card}" MinWidth="210" Width="230">
                    <StackPanel>
                        <TextBlock Text="Konta bankowe" FontSize="13" Opacity="0.8"/>
                        <TextBlock x:Name="BanksText"
                                   Style="{StaticResource KpiValueStyle}"
                                   Text="0,00 zł"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource Card}" MinWidth="210" Width="230">
                    <StackPanel>
                        <TextBlock Text="Wolna gotówka" FontSize="13" Opacity="0.8"/>
                        <TextBlock x:Name="FreeCashDashboardText"
                                   Style="{StaticResource KpiValueStyle}"
                                   Text="0,00 zł"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource Card}" MinWidth="210" Width="230">
                    <StackPanel>
                        <TextBlock Text="Odłożona gotówka (do rozdysponowania)"
                                   FontSize="13"
                                   Opacity="0.8"
                                   TextWrapping="Wrap"/>
                        <TextBlock x:Name="SavedToAllocateText"
                                   Style="{StaticResource KpiValueStyle}"
                                   Text="0,00 zł"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource Card}" MinWidth="210" Width="230">
                    <StackPanel>
                        <TextBlock Text="Gotówka w kopertach" FontSize="13" Opacity="0.8"/>
                        <TextBlock x:Name="EnvelopesDashboardText"
                                   Style="{StaticResource KpiValueStyle}"
                                   Text="0,00 zł"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource Card}" MinWidth="210" Width="230">
                    <StackPanel>
                        <TextBlock Text="Inwestycje" FontSize="13" Opacity="0.8"/>
                        <TextBlock x:Name="InvestmentsText"
                                   Style="{StaticResource KpiValueStyle}"
                                   Text="0,00 zł"/>
                    </StackPanel>
                </Border>
            </WrapPanel>
        </Grid>

        <!-- ========== WYBÓR OKRESU ========== -->
        <Border Grid.Row="1"
                Style="{StaticResource AccentCard}"
                Padding="16"
                HorizontalAlignment="Center"
                MaxWidth="800"
                Margin="0,0,0,16">
            <StackPanel>
                <TextBlock Text="Wybierz okres, z którego chcesz zobaczyć dane."
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource App.Foreground}"
                           Margin="0,0,0,10"
                           TextAlignment="Center"/>

                <Border Background="{DynamicResource Brand.Blue}"
                        CornerRadius="12"
                        Padding="8"
                        Margin="0,4,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                Click="PrevPeriod_Click"
                                Background="#22FFFFFF"
                                Foreground="White"
                                BorderBrush="{x:Null}"
                                Padding="10,4"
                                Margin="0,0,6,0"
                                Cursor="Hand">
                            <TextBlock Text="◀" FontSize="14"/>
                        </Button>

                        <Border Grid.Column="1"
                                Background="#22FFFFFF"
                                CornerRadius="8"
                                Cursor="Arrow">
                            <DockPanel LastChildFill="False"
                                       Margin="10,4"
                                       HorizontalAlignment="Center">
                                <TextBlock x:Name="PeriodLabelText"
                                           Foreground="White"
                                           FontWeight="SemiBold"/>
                            </DockPanel>
                        </Border>

                        <Button Grid.Column="2"
                                Click="NextPeriod_Click"
                                Background="#22FFFFFF"
                                Foreground="White"
                                BorderBrush="{x:Null}"
                                Padding="10,4"
                                Cursor="Hand"
                                HorizontalAlignment="Right">
                            <TextBlock Text="▶" FontSize="14"/>
                        </Button>
                    </Grid>
                </Border>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <DatePicker x:Name="StartPicker"
                                Margin="0,0,8,0"
                                Width="135"/>
                    <TextBlock Text="—"
                               VerticalAlignment="Center"
                               Margin="4,0"/>
                    <DatePicker x:Name="EndPicker"
                                Margin="8,0,0,0"
                                Width="135"/>

                    <Button Content="Szukaj"
                            Margin="16,0,0,0"
                            Padding="10,4"
                            Click="Search_Click"/>

                    <Button Content="Wyczyść"
                            Margin="8,0,0,0"
                            Padding="10,4"
                            Click="Clear_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- ========== TREŚĆ ========== -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- LEWA KOLUMNA: dwa koła -->
            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                <!-- WYDATKI -->
                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="Wydatki wg kategorii — bieżący okres"
                   Style="{StaticResource CardHeader}"
                   Margin="0,0,0,8"
                   TextWrapping="Wrap"/>

                        <Viewbox Stretch="Uniform">
                            <Grid Width="260" Height="260">
                                <!-- KAWAŁKI DONUTA -->
                                <ItemsControl ItemsSource="{Binding PieCurrent}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <Canvas Width="260" Height="260"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Path Data="{Binding Geometry}"
                                  Fill="{Binding Brush}"
                                  Stroke="{DynamicResource Surface.Background}"
                                  StrokeThickness="1"
                                  MouseLeftButtonDown="PieSlice_MouseLeftButtonDown"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- ŚRODKOWE „KÓŁKO” Z TEKSTEM -->
                                <Ellipse Width="140" Height="140"
                         Fill="{DynamicResource Surface.Background}"
                         Stroke="{DynamicResource Surface.Border}"
                         StrokeThickness="1"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"/>

                                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                                    <TextBlock x:Name="PieCenterNameText"
                               Text="Wszystko"
                               FontWeight="SemiBold"
                               FontSize="14"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource App.Foreground}"/>
                                    <TextBlock x:Name="PieCenterValueText"
                               Text="0,00 zł"
                               FontWeight="Bold"
                               FontSize="16"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource App.Foreground}"/>
                                    <TextBlock x:Name="PieCenterPercentText"
                               Text=""
                               FontSize="12"
                               Opacity="0.7"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource App.Foreground}"/>
                                </StackPanel>
                            </Grid>
                        </Viewbox>
                    </StackPanel>
                </Border>


                <!-- PRZYCHODY -->
                <Border Style="{StaticResource Card}" Margin="0,12,0,0">
                    <StackPanel>
                        <TextBlock Text="Źródła przychodu — bieżący okres"
                                   Style="{StaticResource CardHeader}"
                                   Margin="0,0,0,8"
                                   TextWrapping="Wrap"/>
                        <Viewbox Stretch="Uniform">
                            <Grid Width="260" Height="260">
                                <Ellipse Width="260" Height="260"
                                         Fill="#11000000"
                                         Stroke="{DynamicResource Surface.Border}"
                                         StrokeThickness="1"/>

                                <ItemsControl ItemsSource="{Binding PieIncome}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <Canvas Width="260" Height="260"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Path Data="{Binding Geometry}"
                                                  Fill="{Binding Brush}"
                                                  Stroke="{DynamicResource Surface.Background}"
                                                  StrokeThickness="1"
                                                  ToolTip="{Binding Tooltip}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <ItemsControl ItemsSource="{Binding PieIncome}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <Canvas Width="260" Height="260"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding LabelText}"
                                                       Foreground="White"
                                                       FontSize="11"
                                                       TextAlignment="Center"
                                                       TextWrapping="Wrap"
                                                       Canvas.Left="{Binding LabelX}"
                                                       Canvas.Top="{Binding LabelY}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </Viewbox>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- ŚRODKOWA KOLUMNA: tabelki -->
            <Grid Grid.Column="1" Margin="4,0,4,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="Przychody — bieżący okres"
                                   Style="{StaticResource CardHeader}"
                                   Margin="0,0,0,8"
                                   TextWrapping="Wrap"/>
                        <ListView x:Name="IncomeTable">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Kategoria/Źródło"
                                                    Width="200"
                                                    DisplayMemberBinding="{Binding Name}"/>
                                    <GridViewColumn Header="Kwota"
                                                    Width="80"
                                                    DisplayMemberBinding="{Binding AmountStr}"/>
                                    <GridViewColumn Header="%"
                                                    Width="60"
                                                    DisplayMemberBinding="{Binding PercentStr}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </StackPanel>
                </Border>

                <Border Grid.Row="1" Style="{StaticResource Card}" Margin="0,12,0,0">
                    <StackPanel>
                        <TextBlock Text="Wydatki — bieżący okres"
                                   Style="{StaticResource CardHeader}"
                                   Margin="0,0,0,8"
                                   TextWrapping="Wrap"/>
                        <ListView x:Name="ExpenseTable">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Kategoria"
                                                    Width="200"
                                                    DisplayMemberBinding="{Binding Name}"/>
                                    <GridViewColumn Header="Kwota"
                                                    Width="80"
                                                    DisplayMemberBinding="{Binding AmountStr}"/>
                                    <GridViewColumn Header="%"
                                                    Width="60"
                                                    DisplayMemberBinding="{Binding PercentStr}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- PRAWA KOLUMNA: paski + trend -->
            <Grid Grid.Column="2" Margin="8,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="Najwyższe wydatki — kategorie"
                                   Style="{StaticResource CardHeader}"
                                   Margin="0,0,0,8"
                                   TextWrapping="Wrap"/>
                        <ItemsControl x:Name="TopCategoryBars">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,4,0,6">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding Name}"
                                                       Foreground="{DynamicResource App.Foreground}"
                                                       Margin="0,0,8,2"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding PercentStr}"
                                                       Foreground="{DynamicResource App.Foreground}"/>
                                        </Grid>
                                        <ProgressBar Minimum="0" Maximum="100" Height="10"
                                                     Value="{Binding Percent}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <Border Grid.Row="1" Style="{StaticResource Card}" Margin="0,12,0,0">
                    <StackPanel>
                        <TextBlock Text="Trend wydatków — ostatnie 30 dni"
                                   Style="{StaticResource CardHeader}"
                                   Margin="0,0,0,8"
                                   TextWrapping="Wrap"/>

                        <ItemsControl x:Name="ExpenseTrendBars">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,4,0,6">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0"
                                                       Text="{Binding DateLabel}"
                                                       Foreground="{DynamicResource App.Foreground}"
                                                       Margin="0,0,8,0"
                                                       VerticalAlignment="Center"/>

                                            <ProgressBar Grid.Column="1"
                                                         Minimum="0"
                                                         Maximum="100"
                                                         Height="10"
                                                         Value="{Binding Percent}"
                                                         Margin="0,0,8,0"/>

                                            <TextBlock Grid.Column="2"
                                                       Text="{Binding AmountStr}"
                                                       Foreground="{DynamicResource App.Foreground}"
                                                       VerticalAlignment="Center"/>
                                        </Grid>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock Text="Każdy pasek pokazuje udział wydatków danego dnia w stosunku do dnia o najwyższych wydatkach w ostatnich 30 dniach."
                                   Margin="0,6,0,0"
                                   FontSize="11"
                                   Opacity="0.7"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>


























