<UserControl x:Class="Finly.Pages.DashboardPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Finly.Views.Controls">

    <UserControl.Resources>
        <!-- Karty -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource Surface.Background}"/>
            <Setter Property="BorderBrush"   Value="{DynamicResource Surface.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius"  Value="10"/>
            <Setter Property="Padding"       Value="12"/>
        </Style>

        <Style x:Key="AccentCard" TargetType="Border" BasedOn="{StaticResource Card}">
            <Setter Property="BorderBrush"   Value="{DynamicResource Brand.Blue}"/>
            <Setter Property="BorderThickness" Value="1.5"/>
        </Style>

        <Style x:Key="CardHeader" TargetType="TextBlock">
            <Setter Property="FontSize"    Value="14"/>
            <Setter Property="FontWeight"  Value="SemiBold"/>
            <Setter Property="Opacity"     Value="0.9"/>
            <Setter Property="Foreground"  Value="{DynamicResource App.Foreground}"/>
        </Style>

        <Style x:Key="KpiValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize"    Value="20"/>
            <Setter Property="FontWeight"  Value="Bold"/>
            <Setter Property="Margin"      Value="0,2,0,0"/>
            <Setter Property="Foreground"  Value="{DynamicResource App.Foreground}"/>
        </Style>

        <!-- DatePicker -->
        <Style TargetType="DatePicker">
            <Setter Property="BorderBrush"     Value="{DynamicResource Brand.Blue}"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Foreground"      Value="{DynamicResource App.Foreground}"/>
            <Setter Property="Background"      Value="{DynamicResource Surface.Background}"/>
        </Style>
        <Style TargetType="{x:Type DatePickerTextBox}">
            <Setter Property="Foreground"      Value="{DynamicResource App.Foreground}"/>
            <Setter Property="Background"      Value="{DynamicResource Surface.Background}"/>
            <Setter Property="BorderBrush"     Value="{DynamicResource Brand.Blue}"/>
            <Setter Property="BorderThickness" Value="1.5"/>
        </Style>

        <!-- Nagłówek expandera kont -->
        <DataTemplate x:Key="BanksHeaderTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="Konta bankowe" Style="{StaticResource CardHeader}"/>
                    <TextBlock Text="{Binding}" Style="{StaticResource KpiValueStyle}"/>
                </StackPanel>
                <TextBlock Grid.Column="1" Text="▼" Foreground="White"
                           FontSize="14" VerticalAlignment="Center" Margin="8,0,0,0"/>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="16">
            <!-- 0: KPI, 1: DateRange, 2: Treść pod spodem -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ========== KPI (rząd 0) ========== -->
            <Grid Grid.Row="0" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource Card}" Margin="0,0,12,0">
                    <StackPanel>
                        <TextBlock Text="Cały majątek" Style="{StaticResource CardHeader}"/>
                        <TextBlock x:Name="KpiTotal" Style="{StaticResource KpiValueStyle}"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Style="{StaticResource Card}" Margin="0,0,12,0">
                    <Expander x:Name="BanksExpander" Background="Transparent" BorderBrush="{x:Null}"
                              IsExpanded="False" HeaderTemplate="{StaticResource BanksHeaderTemplate}">
                        <ItemsControl x:Name="BanksList" Margin="0,10,0,0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding AccountName}"
                                                   TextTrimming="CharacterEllipsis"
                                                   Foreground="{DynamicResource App.Foreground}"/>
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding Balance, StringFormat={}{0:N2} zł}"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource App.Foreground}"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Expander>
                </Border>

                <Border Grid.Column="2" Style="{StaticResource Card}" Margin="0,0,12,0">
                    <StackPanel>
                        <TextBlock Text="Wolna gotówka" Style="{StaticResource CardHeader}"/>
                        <TextBlock x:Name="KpiFreeCash" Style="{StaticResource KpiValueStyle}"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="3" Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="Odłożona gotówka" Style="{StaticResource CardHeader}"/>
                        <TextBlock x:Name="KpiEnvelopes" Style="{StaticResource KpiValueStyle}"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- ========== WYBÓR OKRESU (rząd 1) ========== -->
            <Border Grid.Row="1" Style="{StaticResource AccentCard}"
                    Padding="16" Width="560" HorizontalAlignment="Center" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Wybierz okres, z którego chcesz zobaczyć dane."
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource App.Foreground}"
                               Margin="0,0,0,10"
                               TextAlignment="Center"/>
                    <controls:PeriodBarControl x:Name="PeriodBar"
                                               Width="520"
                                               Margin="0,4,0,10"
                                               RangeChanged="PeriodBar_RangeChanged"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <DatePicker SelectedDate="{Binding StartDate, ElementName=PeriodBar, Mode=TwoWay}"
                                    SelectedDateChanged="ManualDateChanged" Margin="0,0,8,0"/>
                        <TextBlock Text="—" VerticalAlignment="Center" Margin="4,0"/>
                        <DatePicker SelectedDate="{Binding EndDate, ElementName=PeriodBar, Mode=TwoWay}"
                                    SelectedDateChanged="ManualDateChanged" Margin="8,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- ========== TREŚĆ POD OKRESEM (rząd 2) ========== -->
            <!-- 3 kolumny: lewa (koła), środkowa (tabele), prawa (puste na przyszłość) -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="440"/>
                    <!-- lewa: koła -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- środek: tabele (centrowane) -->
                    <ColumnDefinition Width="*"/>
                    <!-- prawa: wolna przestrzeń -->
                </Grid.ColumnDefinitions>

                <!-- LEWO: dwa koła, kolumna 0 -->
                <StackPanel Grid.Column="0" Width="420" Margin="0,0,16,0">
                    <!-- Koło: WYDATKI -->
                    <Border Style="{StaticResource Card}" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="Wydatki wg kategorii — bieżący okres"
                                       Style="{StaticResource CardHeader}" Margin="0,0,0,8"/>
                            <Grid>
                                <Ellipse Width="360" Height="360" Fill="#11000000"
                                         Stroke="{DynamicResource Surface.Border}" StrokeThickness="1"/>
                                <ItemsControl ItemsSource="{Binding PieCurrent}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <Canvas Width="360" Height="360"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Path Data="{Binding Geometry}"
                                                  Fill="{Binding Brush}"
                                                  Stroke="{DynamicResource Surface.Background}"
                                                  StrokeThickness="1"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Koło: PRZYCHODY -->
                    <Border Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock Text="Źródła przychodu — bieżący okres"
                                       Style="{StaticResource CardHeader}" Margin="0,0,0,8"/>
                            <Grid>
                                <Ellipse Width="360" Height="360" Fill="#11000000"
                                         Stroke="{DynamicResource Surface.Border}" StrokeThickness="1"/>
                                <ItemsControl ItemsSource="{Binding PieIncome}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <Canvas Width="360" Height="360"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Path Data="{Binding Geometry}"
                                                  Fill="{Binding Brush}"
                                                  Stroke="{DynamicResource Surface.Background}"
                                                  StrokeThickness="1"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- ŚRODEK: dwie TABELKI pod „Wybierz okres” -->
                <Grid Grid.Column="1" HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="420"/>
                        <ColumnDefinition Width="24"/>
                        <ColumnDefinition Width="420"/>
                    </Grid.ColumnDefinitions>

                    <!-- PRZYCHODY -->
                    <Border Grid.Column="0" Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock Text="Przychody — bieżący okres"
                                       Style="{StaticResource CardHeader}" Margin="0,0,0,8"/>
                            <ListView x:Name="IncomeTable">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Kategoria/Źródło" Width="240" DisplayMemberBinding="{Binding Name}"/>
                                        <GridViewColumn Header="Kwota" Width="100" DisplayMemberBinding="{Binding AmountStr}"/>
                                        <GridViewColumn Header="%" Width="60" DisplayMemberBinding="{Binding PercentStr}"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </StackPanel>
                    </Border>

                    <!-- WYDATKI -->
                    <Border Grid.Column="2" Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock Text="Wydatki — bieżący okres"
                                       Style="{StaticResource CardHeader}" Margin="0,0,0,8"/>
                            <ListView x:Name="ExpenseTable">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Kategoria" Width="240" DisplayMemberBinding="{Binding Name}"/>
                                        <GridViewColumn Header="Kwota" Width="100" DisplayMemberBinding="{Binding AmountStr}"/>
                                        <GridViewColumn Header="%" Width="60" DisplayMemberBinding="{Binding PercentStr}"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- PRAWO: paskowe wykresy -->
                <StackPanel Grid.Column="2" Margin="16,0,0,0">
                    <!-- KATEGORIE -->
                    <Border Style="{StaticResource Card}" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="Najwyższe wydatki — kategorie"
                 Style="{StaticResource CardHeader}" Margin="0,0,0,8"/>
                            <ItemsControl x:Name="TopCategoryBars">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="0,4,0,6">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding Name}"
                           Foreground="{DynamicResource App.Foreground}"
                           Margin="0,0,8,2" />
                                                <TextBlock Grid.Column="1"
                           Text="{Binding PercentStr}"
                           Foreground="{DynamicResource App.Foreground}"/>
                                            </Grid>
                                            <ProgressBar Minimum="0" Maximum="100" Height="10"
                           Value="{Binding Percent}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- SKLEPY -->
                    <Border Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock Text="Najwyższe wydatki — sklepy"
                 Style="{StaticResource CardHeader}" Margin="0,0,0,8"/>
                            <ItemsControl x:Name="TopMerchantBars">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="0,4,0,6">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding Name}"
                           Foreground="{DynamicResource App.Foreground}"
                           Margin="0,0,8,2" />
                                                <TextBlock Grid.Column="1"
                           Text="{Binding PercentStr}"
                           Foreground="{DynamicResource App.Foreground}"/>
                                            </Grid>
                                            <ProgressBar Minimum="0" Maximum="100" Height="10"
                           Value="{Binding Percent}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </StackPanel>

            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>



















