<UserControl x:Class="Finly.Pages.DashboardPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <!-- Karty -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background"       Value="{DynamicResource Surface.Background}"/>
            <Setter Property="BorderBrush"      Value="{DynamicResource Surface.Border}"/>
            <Setter Property="BorderThickness"  Value="1"/>
            <Setter Property="CornerRadius"     Value="10"/>
            <Setter Property="Padding"          Value="12"/>
        </Style>

        <Style x:Key="AccentCard" TargetType="Border" BasedOn="{StaticResource Card}">
            <Setter Property="BorderBrush"      Value="{DynamicResource Brand.Blue}"/>
            <Setter Property="BorderThickness"  Value="1.5"/>
        </Style>

        <Style x:Key="CardHeader" TargetType="TextBlock">
            <Setter Property="FontSize"        Value="14"/>
            <Setter Property="FontWeight"      Value="SemiBold"/>
            <Setter Property="Opacity"         Value="0.9"/>
            <Setter Property="Foreground"      Value="{DynamicResource App.Foreground}"/>
        </Style>

        <Style x:Key="KpiValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize"        Value="20"/>
            <Setter Property="FontWeight"      Value="Bold"/>
            <Setter Property="Margin"          Value="0,2,0,0"/>
            <Setter Property="Foreground"      Value="{DynamicResource App.Foreground}"/>
        </Style>

        <!-- Tekst DatePickera na dashboardzie -->
        <Style TargetType="{x:Type DatePickerTextBox}">
            <Setter Property="Foreground"      Value="{DynamicResource App.Foreground}"/>
            <Setter Property="Background"      Value="{DynamicResource Surface.Background}"/>
            <Setter Property="BorderBrush"     Value="{DynamicResource Brand.Blue}"/>
            <Setter Property="BorderThickness" Value="1.5"/>
        </Style>
    </UserControl.Resources>

    <!-- Scroll – na mniejszych ekranach przewijasz, nic się nie ucina -->
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Auto">
        <Grid Margin="16">
            <!-- 0: KPI, 1: DateRange, 2: Treść -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ========== KPI (rząd 0) ========== -->
            <Grid Grid.Row="0" Margin="0,0,0,12">
                <WrapPanel Margin="0,0,0,16">
                    <!-- Cały majątek -->
                    <Border Margin="0,0,16,0" Width="260" Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock Text="Cały majątek"
                                       FontSize="14"
                                       Opacity="0.8"/>
                            <TextBlock x:Name="TotalWealthText"
                                       Style="{StaticResource KpiValueStyle}"
                                       Text="0,00 zł"/>
                        </StackPanel>
                    </Border>

                    <!-- Konta bankowe -->
                    <Border Margin="0,0,16,0" Width="260" Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock Text="Konta bankowe"
                                       FontSize="14"
                                       Opacity="0.8"/>
                            <TextBlock x:Name="BanksText"
                                       Style="{StaticResource KpiValueStyle}"
                                       Text="0,00 zł"/>
                        </StackPanel>
                    </Border>

                    <!-- Wolna gotówka -->
                    <Border Margin="0,0,16,0" Width="260" Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock Text="Wolna gotówka"
                                       FontSize="14"
                                       Opacity="0.8"/>
                            <TextBlock x:Name="FreeCashDashboardText"
                                       Style="{StaticResource KpiValueStyle}"
                                       Text="0,00 zł"/>
                        </StackPanel>
                    </Border>

                    <!-- Odłożona gotówka do rozdysponowania -->
                    <Border Margin="0,0,16,0" Width="260" Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock Text="Odłożona gotówka (do rozdysponowania)"
                                       FontSize="14"
                                       Opacity="0.8"
                                       TextWrapping="Wrap"/>
                            <TextBlock x:Name="SavedToAllocateText"
                                       Style="{StaticResource KpiValueStyle}"
                                       Text="0,00 zł"/>
                        </StackPanel>
                    </Border>

                    <!-- Gotówka w kopertach -->
                    <Border Margin="0,0,16,0" Width="260" Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock Text="Gotówka w kopertach"
                                       FontSize="14"
                                       Opacity="0.8"/>
                            <TextBlock x:Name="EnvelopesDashboardText"
                                       Style="{StaticResource KpiValueStyle}"
                                       Text="0,00 zł"/>
                        </StackPanel>
                    </Border>

                    <!-- Inwestycje -->
                    <Border Margin="0,0,16,0" Width="260" Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock Text="Inwestycje"
                                       FontSize="14"
                                       Opacity="0.8"/>
                            <TextBlock x:Name="InvestmentsText"
                                       Style="{StaticResource KpiValueStyle}"
                                       Text="0,00 zł"/>
                        </StackPanel>
                    </Border>
                </WrapPanel>
            </Grid>

            <!-- ========== WYBÓR OKRESU (rząd 1) ========== -->
            <Border Grid.Row="1"
                    Style="{StaticResource AccentCard}"
                    Padding="16"
                    Width="560"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Wybierz okres, z którego chcesz zobaczyć dane."
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource App.Foreground}"
                               Margin="0,0,0,10"
                               TextAlignment="Center"/>

                    <!-- Pasek okresu -->
                    <Border Background="{DynamicResource Brand.Blue}"
                            CornerRadius="12"
                            Padding="8"
                            Margin="0,4,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- ◀ -->
                            <Button Grid.Column="0"
                                    Click="PrevPeriod_Click"
                                    Background="#22FFFFFF"
                                    Foreground="White"
                                    BorderBrush="{x:Null}"
                                    Padding="12,6"
                                    Margin="0,0,6,0"
                                    Cursor="Hand">
                                <TextBlock Text="◀" FontSize="14"/>
                            </Button>

                            <!-- środek -->
                            <Border Grid.Column="1"
                                    Background="#22FFFFFF"
                                    CornerRadius="8"
                                    Cursor="Arrow">
                                <DockPanel LastChildFill="False"
                                           Margin="10,6"
                                           HorizontalAlignment="Center">
                                    <TextBlock x:Name="PeriodLabelText"
                                               Foreground="White"
                                               FontWeight="SemiBold"/>
                                </DockPanel>
                            </Border>

                            <!-- ▶ -->
                            <Button Grid.Column="2"
                                    Click="NextPeriod_Click"
                                    Background="#22FFFFFF"
                                    Foreground="White"
                                    BorderBrush="{x:Null}"
                                    Padding="12,6"
                                    Cursor="Hand"
                                    HorizontalAlignment="Right">
                                <TextBlock Text="▶" FontSize="14"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Ręczna zmiana dat + przyciski -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <DatePicker x:Name="StartPicker"
                                    Margin="0,0,8,0"
                                    Width="135"/>
                        <TextBlock Text="—" VerticalAlignment="Center" Margin="4,0"/>
                        <DatePicker x:Name="EndPicker"
                                    Margin="8,0,0,0"
                                    Width="135"/>

                        <Button Content="Szukaj"
                                Margin="16,0,0,0"
                                Padding="10,4"
                                Click="Search_Click"/>

                        <Button Content="Wyczyść"
                                Margin="8,0,0,0"
                                Padding="10,4"
                                Click="Clear_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- ========== TREŚĆ POD OKRESEM (rząd 2) ========== -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- LEWO: dwa koła -->
                <StackPanel Grid.Column="0" Margin="0,0,16,0">
                    <!-- Koło: WYDATKI -->
                    <Border Style="{StaticResource Card}" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="Wydatki wg kategorii — bieżący okres"
                                       Style="{StaticResource CardHeader}" Margin="0,0,0,8"/>

                            <!-- Viewbox gwarantuje, że wykres zawsze się mieści -->
                            <Viewbox Stretch="Uniform">
                                <Grid Width="260" Height="260">
                                    <Ellipse Width="260" Height="260" Fill="#11000000"
                                             Stroke="{DynamicResource Surface.Border}" StrokeThickness="1"/>
                                    <ItemsControl ItemsSource="{Binding PieCurrent}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <Canvas Width="260" Height="260"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Path Data="{Binding Geometry}"
                                                      Fill="{Binding Brush}"
                                                      Stroke="{DynamicResource Surface.Background}"
                                                      StrokeThickness="1"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Grid>
                            </Viewbox>
                        </StackPanel>
                    </Border>

                    <!-- Koło: PRZYCHODY -->
                    <Border Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock Text="Źródła przychodu — bieżący okres"
                                       Style="{StaticResource CardHeader}" Margin="0,0,0,8"/>

                            <Viewbox Stretch="Uniform">
                                <Grid Width="260" Height="260">
                                    <Ellipse Width="260" Height="260" Fill="#11000000"
                                             Stroke="{DynamicResource Surface.Border}" StrokeThickness="1"/>
                                    <ItemsControl ItemsSource="{Binding PieIncome}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <Canvas Width="260" Height="260"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Path Data="{Binding Geometry}"
                                                      Fill="{Binding Brush}"
                                                      Stroke="{DynamicResource Surface.Background}"
                                                      StrokeThickness="1"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Grid>
                            </Viewbox>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- ŚRODEK: PRZYCHODY / WYDATKI (tabelki) -->
                <Grid Grid.Column="1" HorizontalAlignment="Center" Margin="0,0,16,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="420"/>
                        <ColumnDefinition Width="24"/>
                        <ColumnDefinition Width="420"/>
                    </Grid.ColumnDefinitions>

                    <!-- PRZYCHODY -->
                    <Border Grid.Column="0" Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock Text="Przychody — bieżący okres"
                                       Style="{StaticResource CardHeader}" Margin="0,0,0,8"/>
                            <ListView x:Name="IncomeTable">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Kategoria/Źródło" Width="240" DisplayMemberBinding="{Binding Name}"/>
                                        <GridViewColumn Header="Kwota"             Width="100" DisplayMemberBinding="{Binding AmountStr}"/>
                                        <GridViewColumn Header="%"                 Width="60"  DisplayMemberBinding="{Binding PercentStr}"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </StackPanel>
                    </Border>

                    <!-- WYDATKI -->
                    <Border Grid.Column="2" Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock Text="Wydatki — bieżący okres"
                                       Style="{StaticResource CardHeader}" Margin="0,0,0,8"/>
                            <ListView x:Name="ExpenseTable">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Kategoria" Width="240" DisplayMemberBinding="{Binding Name}"/>
                                        <GridViewColumn Header="Kwota"     Width="100" DisplayMemberBinding="{Binding AmountStr}"/>
                                        <GridViewColumn Header="%"         Width="60"  DisplayMemberBinding="{Binding PercentStr}"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- PRAWO: paski kategorii i sklepów -->
                <StackPanel Grid.Column="2" Margin="16,0,0,0">
                    <!-- KATEGORIE -->
                    <Border Style="{StaticResource Card}" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="Najwyższe wydatki — kategorie"
                                       Style="{StaticResource CardHeader}" Margin="0,0,0,8"/>
                            <ItemsControl x:Name="TopCategoryBars">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="0,4,0,6">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding Name}"
                                                           Foreground="{DynamicResource App.Foreground}"
                                                           Margin="0,0,8,2" />
                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding PercentStr}"
                                                           Foreground="{DynamicResource App.Foreground}"/>
                                            </Grid>
                                            <ProgressBar Minimum="0" Maximum="100" Height="10"
                                                         Value="{Binding Percent}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- SKLEPY -->
                    <Border Style="{StaticResource Card}">
                        <StackPanel>
                            <TextBlock Text="Najwyższe wydatki — sklepy"
                                       Style="{StaticResource CardHeader}" Margin="0,0,0,8"/>
                            <ItemsControl x:Name="TopMerchantBars">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="0,4,0,6">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding Name}"
                                                           Foreground="{DynamicResource App.Foreground}"
                                                           Margin="0,0,8,2" />
                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding PercentStr}"
                                                           Foreground="{DynamicResource App.Foreground}"/>
                                            </Grid>
                                            <ProgressBar Minimum="0" Maximum="100" Height="10"
                                                         Value="{Binding Percent}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>

























