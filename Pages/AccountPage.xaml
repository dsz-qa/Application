<UserControl x:Class="Finly.Pages.AccountPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24" Orientation="Vertical" >

            <TextBlock Text="Konto" FontSize="24" FontWeight="Bold"/>

            <!-- ============ PROFIL ============ -->
            <Border Margin="0,12,0,0"
                    Background="{DynamicResource Surface.Background}"
                    BorderBrush="{DynamicResource Surface.Border}"
                    BorderThickness="1" CornerRadius="10">
                <Grid Margin="16">
                    <!-- 3 sekcje: nagłówek / dane + przycisk / zmiana hasła -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Nagłówek -->
                    <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                               Text="Profil" FontSize="18" FontWeight="SemiBold"
                               Margin="0,0,0,8"/>

                    <!-- Dane użytkownika -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,8,16,0">
                        <TextBlock Text="Dane użytkownika" FontWeight="SemiBold" Margin="0,0,0,6"/>
                        <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                            <TextBlock Text="E-mail:" Width="160"/>
                            <TextBlock Text="{Binding EmailDisplay}" FontWeight="SemiBold"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                            <TextBlock Text="Imię:" Width="160"/>
                            <TextBlock Text="{Binding FirstNameDisplay}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                            <TextBlock Text="Nazwisko:" Width="160"/>
                            <TextBlock Text="{Binding LastNameDisplay}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                            <TextBlock Text="Data urodzin:" Width="160"/>
                            <TextBlock Text="{Binding BirthDateDisplay}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                            <TextBlock Text="Adres:" Width="160"/>
                            <TextBlock Text="{Binding AddressDisplay}" TextWrapping="Wrap"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Przycisk edycji danych -->
                    <Button Grid.Row="1" Grid.Column="1"
                            Content="Edytuj dane osobowe"
                            VerticalAlignment="Top" Width="260"
                            Style="{StaticResource PrimaryButton}"
                            Click="EditPersonal_Click"/>

                    <!-- Zmiana hasła (pola JEDNO POD DRUGIM) -->
                    <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Margin="0,16,0,0">
                        <TextBlock Text="Zmiana hasła" FontSize="16" FontWeight="SemiBold"/>

                        <!-- Aktualne hasło -->
                        <StackPanel Margin="0,8,0,0">
                            <TextBlock Text="Wpisz aktualne hasło:" Margin="0,0,0,4"/>
                            <PasswordBox x:Name="PwdOld"/>
                        </StackPanel>

                        <!-- Nowe hasło -->
                        <StackPanel Margin="0,8,0,0">
                            <TextBlock Text="Nowe hasło:" Margin="0,0,0,4"/>
                            <PasswordBox x:Name="PwdNew"/>
                        </StackPanel>

                        <!-- Powtórz nowe hasło -->
                        <StackPanel Margin="0,8,0,0">
                            <TextBlock Text="Powtórz nowe hasło:" Margin="0,0,0,4"/>
                            <PasswordBox x:Name="PwdNew2"/>
                        </StackPanel>

                        <!-- Akcja -->
                        <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                            <Button Content="Zmień hasło"
                                    Click="ChangePassword_Click"
                                    Style="{StaticResource PrimaryButton}"/>
                            <TextBlock Margin="12,0,0,0"
                                       Text="{Binding PasswordChangeMessage}"
                                       Foreground="{Binding PasswordChangeBrush}"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ============ BANKI (zarządzanie) ============ -->
            <Border Margin="0,12,0,0"
                    Background="{DynamicResource Surface.Background}"
                    BorderBrush="{DynamicResource Surface.Border}"
                    BorderThickness="1" CornerRadius="10">
                <StackPanel Margin="16">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Połączone banki" FontSize="18" FontWeight="SemiBold"/>
                        <Button Margin="12,0,0,0" Content="Dodaj konto" Click="AddAccount_Click"/>
                        <Button Margin="8,0,0,0"  Content="Edytuj zaznaczone" Click="EditSelected_Click"/>
                        <Button Margin="8,0,0,0"  Content="Usuń zaznaczone"  Click="DeleteSelected_Click"/>
                        <Button Margin="12,0,0,0" Content="Otwórz stronę Rachunki"
                                Style="{StaticResource PrimaryButton}" Click="OpenBanks_Click"/>
                    </StackPanel>

                    <DataGrid x:Name="AccountsGrid"
                              Margin="0,8,0,0"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              SelectionMode="Single"
                              SelectionUnit="FullRow"
                              MouseDoubleClick="AccountsGrid_MouseDoubleClick">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Bank"           Binding="{Binding BankName}"    Width="160"/>
                            <DataGridTextColumn Header="Nazwa rachunku" Binding="{Binding AccountName}" Width="*"/>
                            <DataGridTextColumn Header="IBAN"           Binding="{Binding Iban}"        Width="240"/>
                            <DataGridTextColumn Header="Waluta"         Binding="{Binding Currency}"    Width="80"/>
                            <DataGridTextColumn Header="Saldo"          Binding="{Binding Balance, StringFormat={}{0:N2}}" Width="120"/>
                            <DataGridTemplateColumn Header="Akcje" Width="160" IsReadOnly="True">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="Edytuj" Margin="0,0,8,0"
                                                    Tag="{Binding Id}" Click="EditAccount_Click"/>
                                            <Button Content="Usuń"
                                                    Tag="{Binding Id}" Click="DeleteAccount_Click"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>












