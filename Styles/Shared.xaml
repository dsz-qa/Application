<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- BRAND / ACCENT -->
    <SolidColorBrush x:Key="Brand.Orange"       Color="#FF8A00"/>
    <SolidColorBrush x:Key="Brand.Blue"         Color="#3B82F6"/>
    <SolidColorBrush x:Key="Brand.Red"          Color="#E74C3C"/>
    <SolidColorBrush x:Key="Accent"             Color="#3B82F6"/>
    <SolidColorBrush x:Key="Accent.Hover"       Color="#2563EB"/>
    <SolidColorBrush x:Key="Accent.Foreground"  Color="#FFFFFF"/>

    <!-- Separator (linia między panelem a treścią) -->
    <SolidColorBrush x:Key="Separator.Orange"   Color="#FF8A00"/>

    <!-- Bazowe pędzle (wartości startowe – motyw je nadpisze) -->
    <SolidColorBrush x:Key="App.Background"     Color="#16181C"/>
    <SolidColorBrush x:Key="App.Foreground"     Color="#EAEAEA"/>
    <SolidColorBrush x:Key="Surface.Background" Color="#1D2026"/>
    <SolidColorBrush x:Key="Surface.Border"     Color="#2A2F37"/>
    <SolidColorBrush x:Key="Control.Background" Color="#26282D"/>
    <SolidColorBrush x:Key="Control.Border"     Color="#3A3D44"/>
    <SolidColorBrush x:Key="Control.Foreground" Color="#EAEAEA"/>

    <SolidColorBrush x:Key="TitleBar.Background"    Color="#000000"/>
    <SolidColorBrush x:Key="Sidebar.Background"     Color="#121417"/>
    <SolidColorBrush x:Key="Sidebar.Foreground"     Color="#EAEAEA"/>
    <SolidColorBrush x:Key="Sidebar.Hover"          Color="#1A1E25"/>
    <SolidColorBrush x:Key="Sidebar.ActiveBg"       Color="#1B1E24"/>
    <SolidColorBrush x:Key="Sidebar.ActiveIndicator" Color="#FF8A00"/>

    <!-- Stany -->
    <SolidColorBrush x:Key="ErrorBrush" Color="#E74C3C"/>

    <!-- ALIASY KOMPATYBILNOŚCI -->
    <!-- Tekst/ikony na tle akcentu -->
    <SolidColorBrush x:Key="OnAccent" Color="#FFFFFF"/>

    <!-- Stan 'pressed' akcentu (głębszy niebieski) -->
    <SolidColorBrush x:Key="Accent.Pressed" Color="#1D4ED8"/>

    <!-- Stare nazwy sidebara, gdy gdzieś w XAML jest Sidebar.Bg / Sidebar.Fg -->
    <SolidColorBrush x:Key="Sidebar.Bg" Color="#121417"/>
    <SolidColorBrush x:Key="Sidebar.Fg" Color="#EAEAEA"/>

    <!-- Scrollbar (wartości bazowe, nadpisze motyw) -->
    <SolidColorBrush x:Key="ScrollBar.Track"      Color="#000000"/>
    <SolidColorBrush x:Key="ScrollBar.Thumb"      Color="#2A2A2A"/>
    <SolidColorBrush x:Key="ScrollBar.ThumbHover" Color="#3A3A3A"/>

    <SolidColorBrush x:Key="Nav.Active" Color="#FF8C00"/>
    <!-- pomarańcz -->
    <SolidColorBrush x:Key="Nav.Hover"  Color="#1AFF8C00"/>
    <!-- delikatny hover -->
    <SolidColorBrush x:Key="Nav.Foreground" Color="#FFFFFFFF"/>

    <!-- Global search/watermark styles (moved from SearchBox.xaml) -->
    <!-- Watermark-only style: exposes watermark behavior via Tag but does not style container -->
    <Style x:Key="WatermarkTextBoxStyle" TargetType="TextBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Grid>
                        <ScrollViewer x:Name="PART_ContentHost" />
                        <TextBlock x:Name="Watermark"
                                   Text="{TemplateBinding Tag}"
                                   Foreground="#666"
                                   Margin="6,0,0,0"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False"
                                   Visibility="Collapsed" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="Text" Value="">
                            <Setter TargetName="Watermark" Property="Visibility" Value="Visible" />
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="Watermark" Property="Visibility" Value="Collapsed" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Full search box style: outer container with icon + watermark overlay -->
    <Style x:Key="SearchBoxStyle" TargetType="TextBox">
        <Setter Property="Height" Value="28"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource App.Foreground}"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border x:Name="Bd"
                            Background="{DynamicResource Surface.Background}"
                            BorderBrush="{DynamicResource Surface.Border}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Image Grid.Column="0"
                                   Source="pack://application:,,,/Assets/Icons/search.png"
                                   Width="18" Height="18"
                                   Margin="2,0,8,0"
                                   VerticalAlignment="Center"
                                   Stretch="Uniform" />

                            <Grid Grid.Column="1">
                                <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center" />
                                <TextBlock x:Name="Watermark"
                                           Text="{TemplateBinding Tag}"
                                           Foreground="#666"
                                           VerticalAlignment="Center"
                                           IsHitTestVisible="False"
                                           Visibility="Collapsed" />
                            </Grid>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource Brand.Blue}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Bd" Property="Opacity" Value="0.6" />
                        </Trigger>
                        <Trigger Property="Text" Value="">
                            <Setter TargetName="Watermark" Property="Visibility" Value="Visible" />
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="Watermark" Property="Visibility" Value="Collapsed" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
